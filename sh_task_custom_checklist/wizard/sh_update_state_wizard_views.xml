<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_update_state_wizard_form" model="ir.ui.view">
        <field name="name">sh.update.state.wizard.form</field>
        <field name="model">sh.update.state.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Mass Update State">
                <group>
                    <group>
                        <field name="state_ids" widget="many2many_tags" required="1" />
                        <field name="chechlist_ids" widget="many2many_tags" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button string="Mass Update State" name="btn_mass_update_state" type="object" class="btn btn-primary" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
