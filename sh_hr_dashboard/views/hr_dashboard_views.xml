    <record id="sh_ideas_category_menu" model="ir.ui.menu">
        <field name="name" >Idea Category</field>
        <field name="groups_id" eval="[(6,0,[ref('hr.group_hr_manager')])]" />
        <field name="parent_id" ref="sh_hr_dashboard.sh_configuration_detail_menu"></field>
        <field name="action" ref="sh_emp_idea.sh_idea_categories_view_actions"/>
        <field name="sequence" >3</field>
    </record>

	<menuitem id="hr_expense.menu_hr_expense_root"
	 		name="Expenses" sequence="6"
	 		parent="sh_hr_dashboard.sh_hr_dashboard_main_menu"/>

   <menuitem id="base.menu_board_root" name="My Board" sequence="3" 
   		 groups="base.group_user"
   		 parent="sh_hr_dashboard.sh_hr_dashboard_main_menu"/>

</odoo>
