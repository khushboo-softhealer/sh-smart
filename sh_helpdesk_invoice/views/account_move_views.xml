<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_helpdesk_ticket_invoice_inherited_view_form" model="ir.ui.view">
        <field name="name">sh.helpdesk.invoice.inherited.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button class="btn btn-primary" name="action_create_ticket" type="object" string="Create Ticket" groups="sh_helpdesk_invoice.sh_helpdesk_ticket_invoice" attrs="{'invisible':[('move_type','in',['in_invoice','out_refund','in_refund'])]}" />
            </field>
             <xpath expr="//div[@name='button_box']" position="inside">
                <button name="ticket_counts" type="object" class="oe_stat_button" icon="fa-ticket" context="{'partner_id': partner_id}" groups="sh_helpdesk_invoice.sh_helpdesk_ticket_invoice" attrs="{'invisible':['|',('ticket_count','=',0),('move_type','in',['in_invoice','out_refund','in_refund'])]}">
                    <div class="o_stat_info">
                        <field name="ticket_count" class="o_stat_value" />
                        <span class="o_stat_text">Tickets</span>
                    </div>
                </button>
            </xpath>
            <field name="user_id" position="after">
                <field name="sh_ticket_ids" widget="many2many_tags" groups="sh_helpdesk_invoice.sh_helpdesk_ticket_invoice" />
            </field>
        </field>
    </record>

    <record id="sh_helpdesk_invoice_inherited_view_search" model="ir.ui.view">
        <field name="name">sh.helpdesk.invoice.view.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="sh_ticket_ids" />
            </field>
            <xpath expr="//filter[1]" position="after">
                <filter string="Helpdesk Ticket" name="helpdesk_ticket" domain="[('sh_ticket_ids','!=',False)]" />
            </xpath>
        </field>
    </record>
</odoo>
