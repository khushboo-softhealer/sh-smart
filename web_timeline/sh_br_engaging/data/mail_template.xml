<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="sh_email_template_check_in_pending" model="mail.template">
            <field name="name">Check In Pending Notification</field>
            <field name="subject">Check In Pending Notification</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Hello Employee,</p>
                <p>Your check-in is pending. Please submit it at your earliest convenience.</p>
                <p>Thank you.</p>
            </field>
        </record>
    </data>
</odoo>