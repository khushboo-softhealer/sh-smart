<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sh_bonus_allocation_view_form" model="ir.ui.view">
        <field name="name">sh.bonus.allocation.view.form</field>
        <field name="model">sh.bonus.allocation</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}" />
                    <button name="add_employees" string="Add Employees" type="object"
                        class="oe_highlight" attrs="{'invisible':[('status','!=','new')]}" />
                    <button name="generate_format" type="object" class="btn btn-primary"
                        string="Generate ICICI Format"
                        groups="sh_hr_payroll.group_hr_payroll_manager" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="application_date" required="1"
                                attrs="{'readonly':[('status','!=','new')]}" />
                            <field name="payslip_date" invisible="1" />
                        </group>
                        <group>
                            <field name="bonus_template_id"
                                attrs="{'readonly':[('status','!=','new')]}" />
                        </group>
                    </group>
                    <group string="Bank Information">
                        <group>
                            <field name="bank_ref" groups="sh_hr_payroll.group_hr_payroll_manager" />
                            <field name="trancation_date"
                                groups="sh_hr_payroll.group_hr_payroll_manager" />
                            <field name="default_payment" widget="many2many_tags"
                                groups="sh_hr_payroll.group_hr_payroll_manager" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Bonus Employee Allocation">
                            <field name="bonus_employee_allocation_line"
                                attrs="{'readonly':[('status','!=','new')]}">
                                <tree editable="bottom" create="1" edit="1">
                                    <field name="employee_id" />
                                    <field name="joining_date" />
                                    <field name="average_wage" />
                                    <field name="total_month" />
                                    <field name="allocated_bonus_per" />
                                    <field name="bonus_amount" sum="Total Bonus" />
                                    <field name="actual_bonus_amount"/>
                                    <field name="bonus_allocation_id" invisible="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="o_horizontal_separator"
                        groups="sh_hr_payroll.group_hr_payroll_manager">ICICI Bank Format</div>
                    <field name="bank_format" groups="sh_hr_payroll.group_hr_payroll_manager" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_bonus_allocation_view_tree" model="ir.ui.view">
        <field name="name">sh.bonus.allocation.view.tree</field>
        <field name="model">sh.bonus.allocation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="application_date" />
                <field name="payslip_date" />
                <field name="bonus_template_id" />
            </tree>
        </field>
    </record>

    <record id="sh_bonus_allocation_action" model="ir.actions.act_window">
        <field name="name">Bonus Allocation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.bonus.allocation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_bonus_allocation_menu" name="Bonus Allocation"
        parent="hr.menu_human_resources_configuration" groups="hr.group_hr_manager"
        action="sh_bonus_allocation_action" sequence="100" />

</odoo>
