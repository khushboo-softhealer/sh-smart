        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="is_sh_confirm_sale" optional="hide" />
                <field name="sh_is_download_module_mail_sent" optional="hide" />
            </xpath>
        </field>
    </record> -->

    <!-- VIEW: Form -->
    <record id="sh_confirm_sale_view_order_form" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group" position="inside">
                <field name="is_sh_confirm_sale" readonly="1" />
                <field name="sh_is_download_module_mail_sent" />
            </xpath>
        </field>
    </record>

</odoo>