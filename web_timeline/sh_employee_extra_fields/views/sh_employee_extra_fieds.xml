<?xml version="1.0"?>
<odoo>
	<!--sh employee extra field form view inherited-->
	<record id="sh_employee_extra_field_form_view_inherit" model="ir.ui.view">
		<field name="name">hr.employee.inherit</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='work_location_id']" position="after">
				<field name="work_country_id" />
			</xpath>
			<xpath expr="//field[@name='work_phone']" position="after">
				<field name="reference_by_id" />
			</xpath>
			<field name="lang" position="before">
				<field name="personal_email" />
			</field>
			<xpath expr="//page[@name='personal_information']//group[1]" position="after">
					<group name="emergency_contact_details" string="Employee Emergency Contact Details" colspan="4">
						<field colspan="2" name="emergency_ids" nolabel="1">
							<form string="Employee Emergency Details">
						<sheet>
							<group>
								<field name="name"/>
								<field name="relation_id"/>
								<field name="contact_number"/>
							</group>
						</sheet>
					</form>
					<tree editable="bottom">
						<field name="name" />
						<field name="relation_id" />
						<field name="contact_number" />
					</tree>
				</field>
			</group>
			</xpath>
			<xpath expr="//field[@name='country_id']" position="after">
				<field name="previous_nationality_id" />
			</xpath>
			<xpath expr="//field[@name='passport_id']" position="after">
				<field name="passport_country_id" />
				<field name="passport_issue" />
				<field name="passport_expiry" />
			</xpath>
			<xpath expr="//field[@name='marital']" position="after">
				<field name="religion_id" />
				<label for="height" />
				<div>
					<field name="height" />
					Cm
				</div>
				<label for="weight" />
				<div>
					<field name="weight" />
					Kg
				</div>
			</xpath>
			<xpath expr="//field[@name='birthday']" position="after">
				<field name="blood_group" />
				<field name="age" />
			</xpath>
			<xpath expr="//page[@name='hr_settings']" position="after">
				<page name="other_details" string="Other Details">
					<group>
						<group string="Dates" name="dates">
							<field name="employment_date" />
							<field name="confirmation_date" />
							<field name="marriage_date" />
						</group>
						<group string="Others" name="others">
							<field name="is_part_time" />
							<field name="pf_acc_no" />
							<field name="facilities_cmp_ids" widget="many2many_tags" />
						</group>
					</group>
					<group>
						<group string="Social Media" name="social_media">
							<field name="skype" placeholder="e.g. https://www.skype.com/" widget="url" />
							<field name="whatsapp" placeholder="e.g. https://web.whatsapp.com/" widget="url" />
							<field name="facebook" placeholder="e.g. https://www.facebook.com/" widget="url" />
							<field name="twitter" placeholder="e.g. https://twitter.com/" widget="url" />
							<field name="instagram" placeholder="e.g. https://www.instagram.com/" widget="url" />
						</group>
					</group>

					<group string="Language Known" name="language_known" colspan="4">
						<field colspan="2" name="language_known_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Language Lines" editable="bottom">
								<field name="language" options="{'no_create': True,'no_open':True,'no_create_edit':True}" />
								<field name="can_read" />
								<field name="can_write" />
								<field name="can_speak" />
							</tree>
						</field>
					</group>
					<group string="Technical Skills" name="technical_skill" colspan="4">
						<field colspan="2" name="skill_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Technical Skills Lines" editable="bottom">
								<field name="skill_id" />
								<field name="level" widget="priority" />
							</tree>
						</field>
					</group>
					<group string="Non Technical Skills" name="non_technical_skill" colspan="4">
						<field colspan="2" name="non_tec_skill_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Non Technical Skills Lines" editable="bottom">
								<field name="non_tec_skill_id" />
								<field name="level" widget="priority" />
							</tree>
						</field>
					</group>
					<group string="Professional Experience" name="experience" colspan="4">
						<field colspan="2" name="pro_expe_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Experience Lines" editable="bottom">
								<field name="job_title_id" />
								<field name="location" />
								<field name="start_date" />
								<field name="end_date" />
								<field name="experience_cirty" />
							</tree>
						</field>
					</group>
				</page>
				<page name="qualification" string="Qualification &amp; Certification">
					<group>
						<group string="Educational Qualification" name="educational_qualification" colspan="4">
							<field colspan="2" name="edu_qualification_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Edu Qualification Lines" editable="bottom">
								<field name="degree_id" />
								<field name="institutes" />
								<field name="score" />
								<field name="quo_year" />
								<field name="transcript" />
							</tree>
						</field>
					</group>
					<group string="Certifications" name="certification" colspan="4">
						<field colspan="2" name="certification_ids" nolabel="1" widget="section_and_note_one2many">
							<tree string="Certifications Lines" editable="bottom">
								<field name="course" />
								<field name="level_completion" />
								<field name="comp_year" />
								<field name="certificate" />
							</tree>
						</field>
					</group>
				</group>
				</page>
			</xpath>


			<xpath expr="//page[@name='hr_settings']" position="before">
				<page name="block_notifications" string="Block Notifications">
					<group name="block_notifications" string="Block Notifications">
						<field name="hr_notifications" />
						<field name="project_notifications" />
						<field name="assignment_notifications" />
						<field name="support_notifications" />
						<field name="sales_notifications" />
					</group>
				</page>
			</xpath>
		</field>
	</record>

	<menuitem id="sh_employee_religion_menu" name="Religion" action="sh_employee_religion_view_actions" parent="hr.menu_human_resources_configuration" sequence="0" />

	<menuitem id="sh_company_facilities_menu" name="Company Facilities" action="sh_company_facilities_view_actions" parent="hr.menu_human_resources_configuration" sequence="1" />
</odoo>
