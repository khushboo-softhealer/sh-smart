<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="sh_map_categ_view_tree" model="ir.ui.view">
        <field name="name">sh_map_categ.view.tree</field>
        <field name="model">sh.map.categ</field>
        <field name="arch" type="xml">
            <tree string="Category" editable="bottom">
                <field name="categ_id" required="1" />
                <field name="categ_like" required="1" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_map_categ_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">sh.map.categ</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>