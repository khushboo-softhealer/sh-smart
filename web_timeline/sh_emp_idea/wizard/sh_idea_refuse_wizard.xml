<?xml version="1.0"?>
<odoo>
    <!-- Idea refuse wizard and action -->
    <record id="sh_idea_refuse_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.idea.refuse.wizard.form</field>
        <field name="model">sh.idea.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Idea">
                <group>
                    <group>
                        <field name="priority" widget="priority" />
                        <field name="ref_comment" placeholder="Enter Refuse Comment" />
                    </group>
                </group>
                <footer>
                    <button name="ref_action_ok" string="Ok" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_idea_refuse_wizard_view_actions" model="ir.actions.act_window">
        <field name="name">Approve Comment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.idea.refuse.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
