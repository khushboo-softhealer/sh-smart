<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_wallet_transaction_wizard__view_form" model="ir.ui.view">
        <field name="name">wallet.transaction.wizard.form</field>
        <field name="model">sh.wallet.transaction.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Wallet Details">

                <group>
                    <group>
                        <field name="date" required="1"/>
                        <field name="amount" widget="monetary" required="1"/>
                        <field name="desc"/> 
                        <field name="currency_id" invisible="1" />
                    </group>
                </group>

                <footer>
                    <button name="add_wallet_to_transaction_ids" string="Add Payment" type="object" class="oe_highlight" icon="fa-money" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sh_wallet_transaction_wizard_view" model="ir.actions.act_window">
        <field name="name">Wallet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.wallet.transaction.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>