<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sh_hr_placement_change_datetime_wizard_view" model="ir.ui.view">
		<field name="name">sh.hr.placement.change.datetime.wizard.view</field>
		<field name="model">sh.change.datetime.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="schedule_datetime" />
					</group>
				</group>
				<footer>
					<button class="btn-primary" name="change_datetime_action" type="object"
						string="Submit" />
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="sh_hr_placement_change_datetime_multi_action" model="ir.actions.act_window">
		<field name="name">Change Schedule</field>
		<field name="res_model">sh.change.datetime.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="binding_model_id" ref="hr_recruitment.model_hr_applicant" />
		<field name="binding_view_types">form</field>
	</record>

</odoo>