<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="sh_template_header_magazine_user_signin" inherit_id="portal.user_sign_in" name="Mobiheal Header User Signin">
    <xpath expr="//a" position="replace">
        <a t-attf-href="/web/login" t-attf-class="#{_link_class}">
            <img src='/theme_mobiheal_website/static/src/img/default_user.png' width="24" height="24"></img>
        </a>
    </xpath>
</template>

<template id="sh_template_header_magazine" inherit_id="website.layout" name="Mobiheal Header" active="False">
    <xpath expr="//header//nav" position="replace">
        <t t-call="website.navbar">
            <t t-set="_navbar_classes" t-valuef="shadow-sm"/>
            <div id="top_menu_container" class="container justify-content-start justify-content-lg-between js_cls_sh_custom_mobiheal_wrapper">
                <t t-call="website.placeholder_header_brand">
                    <t t-set="_link_class" t-valuef="mr-4"/>
                </t>
                <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                    <t t-call="website.navbar_nav">
                        <t t-set="_nav_class" t-valuef="flex-grow-1"/>
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                                <t t-set="item_class" t-valuef="nav-item"/>
                                <t t-set="link_class" t-valuef="nav-link"/>
                            </t>
                        </t>
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-valuef="nav-item o_no_autohide_item"/>
                            <t t-set="_link_class" t-valuef="nav-link fw-bold"/>
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_avatar" t-value="true"/>
                            <t t-set="_item_class" t-valuef="nav-item dropdown o_no_autohide_item"/>
                            <t t-set="_link_class" t-valuef="nav-link"/>
                        </t>
                    </t>
                    <button class='js_cls_custom_header_btn'>
                            <div class="bar"></div>
                            <div class="bar"></div>
                            <div class="bar"></div>
                    </button>
                </div>
            </div>
            
            <div id="top_menu_container" class="container justify-content-start justify-content-lg-between js_cls_sh_custom_mobiheal_new_wrapper">
                <t t-call="website.placeholder_header_brand">
                    <t t-set="_link_class" t-valuef="mr-4"/>
                </t>
                <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                    <t t-call="website.navbar_nav">
                        <t t-set="_nav_class" t-valuef="flex-grow-1"/>
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                                <t t-set="item_class" t-valuef="nav-item"/>
                                <t t-set="link_class" t-valuef="nav-link"/>
                                <t t-set="dropdown_toggler_classes" t-valuef="d-flex justify-content-between align-items-center"/>
                                <t t-set="dropdown_menu_classes" t-valuef="position-relative rounded-0 o_dropdown_without_offset"/>
                            </t>
                        </t>
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-valuef="nav-item o_no_autohide_item" />
                            <t t-set="_link_class" t-valuef="nav-link fw-bold" />
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_avatar" t-value="true"/>
                            <t t-set="_item_class" t-valuef="nav-item dropdown o_no_autohide_item"/>
                            <t t-set="_link_class" t-valuef="nav-link"/>
                        </t>
                        
                    </t>
                </div>
                <!-- Navbar Toggler -->
                <t t-call="website.navbar_toggler">
                    <t t-set="_toggler_class" t-valuef="ms-auto"/>
                </t>
            </div>
        </t>
    </xpath>
</template>




</odoo>