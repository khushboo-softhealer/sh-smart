<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="view_model_form" model="ir.ui.view">
        <field name="name">sh.cover.property.wizard</field>
        <field name="model">sh.cover.property</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="cover_image" required="1" filename="image_name" />
                    <field name="image_name" required="1" />
                </group>
                
                <footer>
                    <button string="Set Cover Image" name="generate_image_url" type="object" class="oe_highlight" />
                </footer>
            </group>
        </form>            
    </field>
</record>

</odoo>