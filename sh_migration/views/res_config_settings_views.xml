<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEW: Form -->
    <record id="sh_migration_configuration_form" model="ir.ui.view">
        <field name="name">sh.migration.configuration.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">

                <div class="app_settings_block" data-string="Migration Settings" string="Migration" data-key="sh_migration">
                    <h2>Migration</h2>
                    <div class="row o_settings_container">
                        <!-- Migration Last Date -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_last_date" />
                                <br />
                                <field name="sh_migration_last_date" class="oe_inline" />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                        <!-- Dashboard Stages -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_dashboard_stage_id" />
                                <br />
                                <field name="sh_migration_dashboard_stage_id" class="oe_inline" widget='many2many_tags'/>
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                        <!-- v17 Task Id -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_v17_version_id" />
                                <br />
                                <field name="sh_migration_v17_version_id" class="oe_inline" options="{'no_create': True, 'no_open': True}" />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                        <!-- Pending Exclude Stages -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_pendign_exclude_stage_id" />
                                <br />
                                <field name="sh_migration_pendign_exclude_stage_id" class="oe_inline"  widget='many2many_tags' />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                        <!-- Bug Testing State Id -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_bug_testing_state_id" />
                                <br />
                                <field name="sh_migration_bug_testing_state_id" class="oe_inline" options="{'no_create': True, 'no_open': True}" />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>
                        <!-- Bug Complete State Ids -->
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="sh_migration_bug_complete_state_ids" />
                                <br />
                                <field name="sh_migration_bug_complete_state_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" class="oe_inline" />
                            </div>
                            <div class="o_setting_left_pane"></div>
                        </div>

                        <!-- Module Request Ignore -->
                        <div class="col-12 col-lg-6 o_setting_box" id="id_sh_is_migration_enabled" >
                            <div class="o_setting_left_pane">
                                <field name="sh_is_migration_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="sh_is_migration_enabled"/>
                                <div class="text-muted">
                                    Module task which contains version refrence is Direct download.
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </xpath>
        </field>
    </record>

    <!-- ACTION: Configuration -->
    <record id="action_sh_migration_configuration" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'sh_migration'}</field>
    </record>

</odoo>