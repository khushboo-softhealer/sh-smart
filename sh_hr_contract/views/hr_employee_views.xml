<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_hr_contract_hr_employee_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="hr_manager" />
                <field name="is_remote_employee" groups="hr.group_hr_manager" />
            </xpath>
        </field>
    </record>

    <record id="hr_holidays_attendance.hr_employee_view_form_inherit" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

</odoo>
