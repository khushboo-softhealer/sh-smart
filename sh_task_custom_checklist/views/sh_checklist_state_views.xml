<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="sh_checklist_state_view_tree" model="ir.ui.view">
        <field name="name">sh_checklist_state.view.tree</field>
        <field name="model">sh.checklist.state</field>
        <field name="arch" type="xml">
            <tree string="Stages" editable="bottom">
                <field name="name" required="1" />
                <field name="is_default_state" />
            </tree>
        </field>
    </record>

    <record id="sh_checklist_state_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">sh.checklist.state</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>