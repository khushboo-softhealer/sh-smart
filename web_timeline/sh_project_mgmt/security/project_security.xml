<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_project_task_create" model="res.groups">
            <field name="name">Task Create</field>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]" />
        </record>

         <!-- Task User Record Rule -->
        <record model="ir.rule" id="project_sl_can_create_task_in_restricted_project">
            <field name="name">SL Task Restrcition</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">
            [('project_id.sl_can_create_task','=',True),'|','|',('create_uid','=',user.id),('project_id.privacy_visibility', '=', 'employees'),('user_ids', 'in', [user.id])]
 
            </field>
            <field name="groups" eval="[(4,ref('sh_project_mgmt.group_project_task_create'))]"/>
        </record>

        <record id="group_project_pl" model="res.groups">
            <field name="name">Project P/L</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]" />
        </record>

        <record id="hr_timesheet_timesheet_line_rule_sl" model="ir.rule">
            <field name="name">SL can see /edit own members timesheet</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">
                ['|','|',('employee_id.coach_id.user_id', '=', user.id),('user_id','=',user.id),('task_id.user_ids.id', 'in', [user.id])]
            </field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

         <record id="hr_timesheet_timesheet_line_rule_sl_own" model="ir.rule">
            <field name="name">SL can see /edit own members timesheet</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">
                [('user_id','!=',user.id),'|','|',('task_id.user_ids.id', 'in', [user.id]),('project_id.privacy_visibility','=','employees'), ('employee_id.coach_id.user_id', '=', user.id)]
 

            </field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            
            
        </record>

        <!-- <record id="hr_timesheet.menu_hr_time_tracking" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('hr_timesheet.group_hr_timesheet_approver')), (4, ref('sh_project_mgmt.group_project_task_create'))]" />
        </record> -->

    </data>

    
</odoo>
