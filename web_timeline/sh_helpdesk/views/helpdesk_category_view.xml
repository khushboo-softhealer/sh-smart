<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_helpdesk_category_view_form" model="ir.ui.view">
            <field name="name">sh.helpdesk.category.view.form</field>
            <field name="model">sh.helpdesk.category</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Update Products" class="btn btn-primary" type="object" name="update_products"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Category Name"/>
                            <h2>
                                <field name="name"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                                <field name="sh_product_options" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sh_helpdesk_category_view_tree" model="ir.ui.view">
            <field name="name">sh.helpdesk.category.view.tree</field>
            <field name="model">sh.helpdesk.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>
        <record id="sh_helpdesk_category_action" model="ir.actions.act_window">
            <field name="name">Helpdesk Categories</field>
            <field name="res_model">sh.helpdesk.category</field>

            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new category</p>
            </field>
        </record>
        <record id="sequence_sh_helpdesk_category_seq" model="ir.sequence">
            <field name="name">Helpdesk Category Sequence</field>
            <field name="code">sh.helpdesk.category</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
        </record>
        <record id="sh_mass_update_products_action" model="ir.actions.server">
            <field name="name">Update Products</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="sh_helpdesk.model_sh_helpdesk_category"/>
            <field name="binding_model_id" ref="sh_helpdesk.model_sh_helpdesk_category"/>
            <field name="code">
		    records.mass_update_products()
            </field>
        </record>
        <menuitem id="sh_helpdesk_category_menu" name="Helpdesk Categories" parent="sh_helpdesk.helpdesk_config_menu" action="sh_helpdesk_category_action" sequence="6"/>
    </data>
</odoo>