<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_response_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.response.wizard.view.form</field>
        <field name="model">sh.response.wizard</field>
        <field name="arch" type="xml">
            <form string="">

                <style>
                    footer.modal-footer{
                        display:none;
                    }
                    .modal .modal-content .modal-body .o_content .o_form_sheet_bg .o_form_sheet p textarea.o_field_text.o_field_widget.o_input{border: none;margin-bottom: 0px;}
                    .modal .modal-content .modal-body .o_content .o_form_sheet_bg .o_form_sheet p{margin-bottom: 0px;}
                    .modal .modal-content .modal-body .o_content .o_form_sheet_bg .o_form_sheet{padding:  20px 20px !important;}
                    .modal .modal-content .modal-body .o_content .o_form_sheet_bg .o_form_sheet .o_inner_group.grid{width:100%; display:block;}
                    .modal .modal-content .modal-body .o_content .o_form_sheet_bg .o_form_sheet .o_inner_group.grid .o_cell{width:100% !important;}
                </style>
                <sheet>
                    <group>
                        <div>
                            <p><field name = "response_message"/></p>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_response_wizard_action" model="ir.actions.act_window">
        <field name="name">response</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.response.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>