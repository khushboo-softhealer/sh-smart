<odoo>
    <data>
        <record id='sh_sale_order_form_inh' model='ir.ui.view'>
            <field name="name">sh.sale.order.form.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="po_ref"/>
                </field>
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="country"/>
                    <field name="origin"/>
                    <field name="version"/>
                </xpath>
            </field>
        </record>
        <record id='sh_sale_order_search_view_inh' model='ir.ui.view'>
            <field name="name">sh.sale.order.search.view.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="po_ref"/>
                    <field name="order_line" string="Origin" filter_domain="[('order_line.origin', 'ilike', self)]"/>
                    <field name="order_line" string="Country" filter_domain="[('order_line.country', 'ilike', self)]"/>
                    <field name="order_line" string="Version" filter_domain="[('order_line.version', 'ilike', self)]"/>
                </field>
                <xpath expr="//group/filter[@name='customer']" position="after">
                    <filter string="PO Reference" name="po_ref" domain="[]" context="{'group_by':'po_ref'}"/>
                </xpath>
            </field>
        </record>


