<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record id="sh_custom_product_image_kanban_view" model="ir.ui.view">
        <field name="name">sh.custom.image.kanban.view</field>
        <field name="model">product.image</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_employee_kanban">
                <field name="id"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                        <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('product.image', 'image', record.id.raw_value)})" role="img"/>
                        <div class="o_kanban_image d-md-none rounded-circle" t-attf-style="background-image: url(#{kanban_image('product.image', 'image', record.id.raw_value)})" role="img"/>
                        <div class="oe_kanban_details">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <h3><field name="name"/></h3>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>