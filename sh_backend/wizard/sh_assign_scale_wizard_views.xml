<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_assign_scale_wizard_form" model="ir.ui.view">
        <field name="name">mass.assign.scale.wizard.form</field>
        <field name="model">sh.assign.scale.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <group>
                        <field name="scale_ids"/>
                </group>
            </group>

            <footer>
                <button  string="Assign Product Scale"  class="oe_highlight" type="object" name="assign_mass_scale"  />
                <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_assign_scale_wizard" model="ir.actions.act_window">
        <field name="name">Assign Scales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.assign.scale.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
