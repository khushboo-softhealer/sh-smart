<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_goal_sheet_rule" model="ir.rule">
        <field name="name">Goal Sheet Rules</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet" />
        <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('coach_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="sh_goal_sheet_admin_rule" model="ir.rule">
        <field name="name">All Records</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="sh_goal_sheet_manager_rule" model="ir.rule">
        <field name="name">Manager goal rule</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet" />
        <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('manager_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>


    <!-- goal sheet line-->

    <record id="sh_goal_sheet_line_rule" model="ir.rule">
        <field name="name">Goal Sheet Line Rules</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet_line" />
        <field name="domain_force">['|',('goal_id.employee_id.user_id', '=', user.id),('goal_id.coach_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="sh_goal_sheet_line_admin_rule" model="ir.rule">
        <field name="name">All Records (goal sheet line)</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet_line" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="sh_goal_sheet_line_manager_rule" model="ir.rule">
        <field name="name">Manager goal rule (goal sheet line)</field>
        <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet_line" />
        <field name="domain_force">['|',('goal_id.employee_id.user_id', '=', user.id),('goal_id.manager_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>
</odoo>
