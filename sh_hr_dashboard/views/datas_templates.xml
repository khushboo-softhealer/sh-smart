    <template id="sh_my_allocation_data_tbl" name="SH My Allocation Data">

        <div class="idea_container" id="js_id_sh_my_allocation_data_tbl_div">

            <div class="row idea_heading">
                <div class="col-3">
                    <p>Project</p>
                </div>
                <div class="col-3">
                    <p>Task</p>
                </div>
                <div class="col-2 col_space">
                    <p>Actual Date</p>
                </div>
                <div class="col-2">
                    <p>Priority</p>
                </div>
                <div class="col-2">
                    <p>Status</p>
                </div>
            </div>

            <t t-if="my_allocations">

                <t t-foreach="my_allocations" t-as="my_allocation">
                    <div class="row idea_details">
                        <div class="col-3">
                            <p class="subject">
                                <t t-esc="my_allocation.sh_project_id.name"/>
                            </p>
                        </div>
                        <div class="col-3">
                            <a t-att-href="'/web#id=%s&amp;model=project.task&amp;view_type=form' % my_allocation.sh_task_id.id" class="idea_category text-primary" style="text-decoration: underline; cursor: pointer;" target="_blank">
                                <t t-esc="my_allocation.sh_task_id.name"/>
                            </a>
                        </div>
                        <div class="col-2 col_space">
                            <div t-if="my_allocation.from_date and my_allocation.to_date" class="text-muted o_row">
                                <span class="fa fa-clock-o me-2" title="Allocation Dates"/>
                                <t t-esc="my_allocation.from_date.strftime('%d/%m/%Y')"/>
                                <i t-if="my_allocation.from_date and my_allocation.to_date"
                                   class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon"
                                   title="Arrow"/>
                                <t t-esc="my_allocation.to_date.strftime('%d/%m/%Y')"/>
                            </div>
                        </div>
                        <div class="col-2 col_space">
                            <p class="idea_category">
                                <t t-esc="dict(my_allocation.fields_get(allfields=['sh_priority'])['sh_priority']['selection'])[my_allocation.sh_priority]"/>
                            </p>
                        </div>
                        <div class="col-2 col_space">
                            <t t-if="my_allocation.state =='draft'">
                                <p><span class="payslip_tags status_yellow_green">Draft</span></p>
                            </t>
                            <t t-if="my_allocation.state =='waiting'">
								<p><span class="payslip_tags status_yellow_green">Waiting For Approval</span></p>
							</t>
							<t t-if="my_allocation.state =='done'">
								<p><span class="payslip_tags status_green">Done</span></p>
							</t>
							<t t-if="my_allocation.state =='reject'">
								<p><span class="payslip_tags bg-danger">Reject</span></p>
							</t>
							<t t-if="my_allocation.state =='cancel'">
								<p><span class="payslip_tags bg-danger">Cancel</span></p>
							</t>
                        </div>
                    </div>
                </t>

            </t>
            <t t-else="">
                <div class="row">
                    <div class="col-12">
                        <p class="no_record">No records found!</p>
                    </div>
                </div>
            </t>

        </div>

    </template>
</odoo>
