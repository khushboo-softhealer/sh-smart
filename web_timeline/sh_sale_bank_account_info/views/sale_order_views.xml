<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_order_sh_bank_account_id_views" model="ir.ui.view">
        <field name="name">sale.order.digital.sign.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="sh_bank_account_id" widget="selection" />
            </field>
            <field name="sale_order_template_id" position="after">
                <field name="odoo_version" />
                <!-- <field name="odoo_edition" /> -->
                <field name="timeline" />
                <field name="estimated_hrs" readonly="1"/>
            </field>
            <xpath expr="//notebook/page[last()]" position="inside">
                <field name="website_description" />
            </xpath>
        </field>
    </record>
</odoo>