<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_rca_inherit_project_task" model="ir.ui.view">
        <field name="name">sh.rca.project.task.view.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button class="oe_highlight" string="Create RCA Report" name="create_rca_report" type="object" attrs="{'invisible': [('task_type','not in',['bug'])]}" />
            </xpath>
            <xpath expr="//button[@name='action_dependent_tasks']" position="before">

                <button class="oe_stat_button" name="show_task_rca_report" type="object" attrs="{'invisible': [('task_type','not in',['bug'])]}">
                    <i class="fa fa-fw o_button_icon fa-eye text-success" title="Reports" />

                    <div class="o_field_widget o_stat_info">

                        <span class="o_stat_text">
                            view
                        </span>
                        <span class="o_stat_text">
                            RCA Report
                        </span>
                    </div>
                </button>

            </xpath>
        </field>
    </record>
</odoo>