          	<field name="res_model">sh.common.mail.domains</field>
          	<field name="view_mode">tree</field>
          	<field name="help" type="html">
              	<p class="oe_view_nocontent_create">Create a New Domain</p>
          	</field>
    	</record>
    	<menuitem id="sh_common_mail_domains_menu" name="Common Mail Domains" parent="sh_helpdesk.helpdesk_config_menu" action="sh_common_mail_domains_action" sequence="11"/>
	</data>
</odoo>