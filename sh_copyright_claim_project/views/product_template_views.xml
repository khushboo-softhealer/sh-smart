<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="model_product_template_action_update_claim_user" model="ir.actions.server">
        <field name="name">Claim Responsible User</field>
        <field name="model_id" ref="sh_copyright_claim_project.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">action = records.update_claim_user()</field>
    </record>

    <record id="sh_git_field" model="ir.ui.view">
        <field name="name">sh.git.field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <!-- @name='git_repo' -> @name='categ_id' -->
            <xpath expr="//field[@name='categ_id']" position="after">               
                <field name="odoo_url" widget="url"/>
                <field name="soft_url" widget="url"/>
            </xpath>
        </field>
    </record>

</odoo>
