<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sh_demo_db_helpdesk_ticket_view" model="ir.ui.view">
		<field name="name">sh.helpdesk.ticket</field>
		<field name="model">sh.helpdesk.ticket</field>
		<field name="inherit_id" ref="sh_helpdesk.helpdesk_ticket_form_view"/>
		<field name="arch" type="xml">
			<field name="store_reference" position="after">
				<field name="sh_demo_password" invisible="1"/>
				<field name="sh_demo_db_url" invisible="1"/>
				<field name="sh_demo_db_name" invisible="1"/>
				<field name="sh_demo_ticket" invisible="1"/>
			</field>
			<xpath expr="//notebook//page[4]" position="after">
				
				<page string="Demo DB Information" groups="sh_demo_db.sh_group_demo_db_user">
					<group>
						<field name="sh_demo_db_create_date" groups="sh_demo_db.sh_group_demo_db_user"/>
						<field name="sh_demo_db_expired_date" groups="sh_demo_db.sh_group_demo_db_user"/>
						<field name="sh_demo_ticket" groups="sh_demo_db.sh_group_demo_db_user"/>
						<field name="sh_drop_db" invisible="1"/>
					</group>
					<group>
						<field name="sh_demo_content" groups="sh_demo_db.sh_group_demo_db_user"/>
					</group>
					<group string="Demo DB Log History" colspan='4' groups="sh_demo_db.sh_group_demo_db_user">
						<field colspan='2' name="sh_db_log_ids" nolabel="1">
							<form string="Demo DB Log" create="0" edit="0" delete="0">
								<group>
									<field name="db_create_date"/>
									<field name="sh_database_name"/>
									<field name="sh_username"/>
									<field name="sh_password"/>
								</group>
								<group>
									<field name="partner_id"/>
									<field name="sh_url"/>
									<field name="log_message"/>
								</group>
							</form>
							<tree create="0" edit="0" delete="0">
								<field name="partner_id"/>
								<field name="db_create_date"/>
								<field name="sh_database_name"/>
								<field name="sh_username"/>
								<field name="sh_password"/>
								<field name="sh_url"/>
								<field name="log_message"/>
							</tree>
						</field>

					</group>
				</page>
			</xpath>
		</field>
	</record>
	<record id="sh_demo_db_delete_action" model="ir.actions.server">
		<field name="name">Delete Demo Database</field>
		<field name="model_id" ref="sh_helpdesk.model_sh_helpdesk_ticket"/>
		<field name="binding_model_id" ref="sh_helpdesk.model_sh_helpdesk_ticket"/>
		<field name="state">code</field>
		<field name="code">action = records.action_delete_demo_database()</field>
	</record>
</odoo>