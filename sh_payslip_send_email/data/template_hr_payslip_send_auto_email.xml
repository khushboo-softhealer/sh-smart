<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
 		<record id="template_hr_employee_payslip_send_email" model="mail.template">
			<field name="name">Employee Payslip - Send Email</field>
            <field name="email_from"></field>
            <field name="email_to">{{object.employee_id.personal_email}}</field>
            <field name="subject">{{object.name}}</field>
            <field name="model_id" ref="sh_hr_payroll.model_hr_payslip"/>
            <field name="report_template" ref="sh_hr_payroll.action_report_payslip"/>
			<field name="report_name">Salary slip for_{{ (object.date_from.month or '')}}_{{ (object.date_from.year or '')}}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Dear <b><t t-out="object.employee_id.name"></t></b>				
						<br/><br/>
						<p>	
							Please find attachment <b><t t-out="object.name"></t></b><br/>
							If you have any question, do not hesitate to contact us.
						</p>
						<p>
							Thank you,
							<br/>
							HR Department,
						</p>
						<p>
							<b><t t-out="object.company_id.name"></t></b>
						</p>		
						<br/><br/>
					</p>																					
				</div>
         	</field>    
        </record>
       
	</data>
</odoo>
	