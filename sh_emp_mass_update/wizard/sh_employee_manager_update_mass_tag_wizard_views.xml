<?xml version="1.0"?>

<odoo>
    <record id="sh_employee_manager_update_mass_tag_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.employee.manager.update.mass.tag.wizard.form</field>
        <field name="model">sh.employee.manager.update.mass.tag.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Mass Tag">
                <group>
                    <group string="Update Job">
                        <field name="update_job_position_bool" />
                        <field name="update_job_position_id" attrs="{'invisible': [('update_job_position_bool', '=', False)]}" />
                    </group>
                    <group string="Update Hr Manager">
                        <field name="update_hr_manager_bool" />
                        <field name="update_hr_manager" attrs="{'invisible': [('update_hr_manager_bool', '=', False)]}" />
                    </group>
                    <group string="Update Manager">
                        <field name="update_emp_manager_bool" />
                        <field name="update_emp_manager" attrs="{'invisible': [('update_emp_manager_bool', '=', False)]}" />
                    </group>
                    <group string="Update Coach">
                        <field name="update_coach_bool" />
                        <field name="update_coach_id" attrs="{'invisible': [('update_coach_bool', '=', False)]}" />
                    </group>
                </group>
                <footer>
                    <button name="update_mass_employee_details" class="btn btn-primary" type="object" string="Done" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="sh_invoice_update_mass_tag_wizard_action" model="ir.actions.act_window">
        <field name="name">Update Mass Tag</field>
        <field name="res_model">sh.employee.manager.update.mass.tag.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
