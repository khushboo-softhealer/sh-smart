<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_hr_leave_view_form" model="ir.ui.view">
        <field name="name">hr.leave.inherit.view.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group groups="hr_holidays.group_hr_holidays_manager" string="Manager's Comment">
                    <field colspan="2" name="report_note" nolabel="1" placeholder="e.g. Report to the next month..." />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
