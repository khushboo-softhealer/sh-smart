<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_project_project_form_view_inherit" model="ir.ui.view">
        <field name="name">project.project.form.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="action_assign_employee" groups="sh_project_task_base.group_project_officer" type="object" class="oe_highlight" string="Assign Employee" />
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="sh_send_email"/>
            </xpath>
        </field>
    </record>

    <record id="view_assign_employee" model="ir.ui.view">
        <field name="name">sh.assign.employee.form</field>
        <field name="model">sh.assign.employee</field>
        <field name="arch" type="xml">
            <form string="Credit Note">
                <group>
                    <group>
                        <field name="assigned_user_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button string="Assign Employee" name="add_followers" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_employee" model="ir.actions.act_window">
        <field name="name">Assign Employee</field>
        <field name="res_model">sh.assign.employee</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_assign_employee" />
        <field name="target">new</field>
    </record>
</odoo>
