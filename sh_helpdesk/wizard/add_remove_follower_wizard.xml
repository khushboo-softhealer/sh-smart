<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sh_add_remove_follower_wizard_view" model="ir.ui.view">
		<field name="name">sh.add.remove.followers</field>
		<field name="model">sh.add.remove.followers</field>
		<field name="arch" type="xml">
			<form string="Add/Remove Followers">
				<group>
					<group>
						<field name="partner_ids" widget="many2many_tags"/>
					</group>
					<group>
						<field name="follower_action" widget="radio"/>
					</group>
				</group>
				<footer>
                   <button string='Add/Remove' name="action_follower" type="object" class="btn-primary"/>
                   <button string="Cancel" class="btn-default" special="cancel"/>
               	</footer>
			</form>
		</field>
	</record>
