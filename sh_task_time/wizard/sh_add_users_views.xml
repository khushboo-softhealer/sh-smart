<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_add_user_task_wizard_view" model="ir.ui.view">
        <field name="name">sh.add.user.wizard.view</field>
        <field name="model">sh.add.users</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <group>
                <field name="sh_user_ids" widget="many2many_tags" string="Users"/>
            </group>
            <footer>
                <button type="object" class="btn btn-primary" name="sh_add_users" string="Add Userssss"/>
                <button string="Cancel" class="btn-default" special="cancel" />
            </footer>
        </field>
    </record>

</odoo>
