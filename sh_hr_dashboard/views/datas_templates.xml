    <template id="sh_expense_data_tbl" name="SH Expense Data">
        <div class="expence_container" id="js_id_sh_expense_data_tbl_div">
            <div class="row expence_heading">
                <div class="col-3">
                    <p>Date</p>
                </div>
                <div class="col-3">
                    <p>Subject</p>
                </div>
                <div class="col-3">
                    <p>Amount</p>
                </div>
                <div class="col-3">
                    <p>Status</p>
                </div>
            </div>
            <t t-if="expenses">
                <t t-foreach="expenses" t-as="expense">
                    <div class="row expence_details">
                        <div class="col-3">
                            <p class="expence_date">
                                <t t-if="expense.date">
                                    <t t-esc="expense.date.strftime('%d/%m/%Y')" /></t>
                            </p>
                        </div>
                        <div class="col-3">
                            <p class="expence_name">
                                <t t-esc="expense.name" />
                            </p>
                        </div>
                        <div class="col-3">
                            <p class="expence_amt">
                                <t t-esc="expense.total_amount" />
                            </p>
                        </div>
                        <div class="col-3 col_space">
                            <t t-if="expense.state =='draft'">
                                <p>
                                    <span class="payslip_tags status_yellow_green">To Submit</span>
                                </p>
                            </t>
                            <t t-if="expense.state =='reported'">
                                <p>
                                    <span class="payslip_tags status_yellow_green">Submitted</span>
                                </p>
                            </t>
                            <t t-if="expense.state =='approved'">
                                <p>
                                    <span class="payslip_tags status_light_green">Approved</span>
                                </p>
                            </t>
                            <t t-if="expense.state =='done'">
                                <p>
                                    <span class="payslip_tags status_green">Paid</span>
                                </p>
                            </t>
                            <t t-if="expense.state =='refused'">
                                <p>
                                    <span class="payslip_tags status_red">Refused</span>
                                </p>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
            <t t-else="">
                <div class="row">
                    <div class="col-12">
                        <p class="no_record">No records found!</p>
                    </div>
                </div>
            </t>
        </div>
    </template>
