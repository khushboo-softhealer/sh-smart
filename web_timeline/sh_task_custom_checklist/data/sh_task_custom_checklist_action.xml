<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- Multi Action (Add Checklists) -->
    <record id="sh_project_task_custom_checklist_add_checklist" model="ir.actions.server" >
        <field name="name">Add Checklists</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_project_task" />
        <field name="binding_model_id" ref="model_project_task" />
        <field name="state">code</field>
        <field name="code">
            action = records.mul_action_add_checklists()
        </field>
    </record>

    <!-- Multi Action (Remove Checklist) -->
    <record id="sh_project_task_custom_checklist_remove_checklist" model="ir.actions.server" >
        <field name="name">Remove Checklists</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_project_task" />
        <field name="binding_model_id" ref="model_project_task" />
        <field name="state">code</field>
        <field name="code">
            action = records.mul_action_remove_checklists()
        </field>
    </record>

    <!-- Multi Action (Update Accepted State) -->
    <record id="multi_action_update_state" model="ir.actions.server">
        <field name="name">Update Accepted State</field>
        <field name="model_id" ref="sh_task_custom_checklist.model_task_custom_checklist" />
        <field name="binding_model_id" ref="sh_task_custom_checklist.model_task_custom_checklist" />
        <field name="state">code</field>
        <field name="code">
            action=records.multi_action_update_state()
        </field>
    </record>

</odoo>