<?xml version="1.0"?>
<odoo>
    <!-- Complain Categories views and action -->
    <record id="sh_complain_categories_form_view" model="ir.ui.view">
        <field name="name">sh.complain.categories.form</field>
        <field name="model">sh.complain.categories</field>
        <field name="arch" type="xml">
            <form string="Complain Categories">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="department" widget="many2many_tags" />
                            <field name="responsible_persons" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_complain_categories_tree_view" model="ir.ui.view">
        <field name="name">sh.complain.categories.tree</field>
        <field name="model">sh.complain.categories</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Complain Categories" />
            </tree>
        </field>
    </record>

    <record id="sh_complain_categorie_search_view" model="ir.ui.view">
        <field name="name">sh.complain.categories.search</field>
        <field name="model">sh.complain.categories</field>
        <field name="arch" type="xml">
            <search string="Complain Categories">
                <field name="name" />
                <group expand="0" string="Group by...">
                    <filter string="Complain Categories" name="name" context="{'group_by': 'name'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_complain_categories_view_actions" model="ir.actions.act_window">
        <field name="name">Complain Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.complain.categories</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_complain_management_menu" name="Complain Management" web_icon="sh_emp_complain,static/description/complaintmanagement.png"/>
    <menuitem id="sh_emp_complain_configure_menu" name="Configuration" parent="sh_complain_management_menu" sequence="5" />
    <menuitem id="sh_complain_menu" name="Complain" action="sh_complain_view_actions" parent="sh_complain_management_menu" sequence="4" />

   
    <menuitem id="sh_effect_model_menu" name="Effect On" parent="sh_emp_complain_configure_menu" action="sh_effect_model_view_actions" sequence="6" groups="hr.group_hr_user" />
</odoo>
