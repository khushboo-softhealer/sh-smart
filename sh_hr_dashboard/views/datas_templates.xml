     <template id="sh_all_employee_leave_data_tbl" name="SH All Employee Leave Data">
        <div class="expence_container" id="js_id_sh_all_leave_data_tbl_div">
            <div class="row expence_heading">
                <div class="col-4">
                    <p class="sh_dashboard_heading">Employee</p>
                </div>
                <div class="col-4">
                    <p class="sh_dashboard_heading">Dates</p>
                </div>
                <!-- <div class="col-4"> -->
                    <!-- <p class="sh_dashboard_heading">To Date</p> -->
                <!-- </div> -->
                <div class="col-4 col_space">
                    <p class="sh_dashboard_heading">Time</p>
                </div>
            </div>
            <t t-if="all_leaves">
                <t t-foreach="all_leaves" t-as="leave">
                    <div class="row expence_details">
                        <div class="col-4 col_space">
                            <p class="employee_name sh_bold">
                                <t t-esc="leave.employee_ids.name" />
                            </p>
                        </div>
                        <div class="col-4">
                            <p class="leave_form sh_bold">
                                <t t-if="leave.request_date_from">
                                    <t t-esc="leave.request_date_from.strftime('%d/%m/%Y')+' - '+leave.request_date_to.strftime('%d/%m/%Y')" /></t>
                            </p>
                        <!-- </div> -->
                        <!-- <div class="col-3"> -->
                            <!-- <p class="leave_to sh_bold">
                                <t t-if="leave.request_date_to">
                                    <t t-esc="leave.request_date_to.strftime('%d/%m/%Y')" /></t>
                            </p> -->
                        </div>
                        <div class="col-4 col_space">
                            <p class="leave_duration">
                          
                            <!-- <span t-esc="morning"/> -->
                            <t t-if="leave.request_unit_half">
                                <t t-if="leave.request_date_from_period == 'am'">
                                    <span class="payslip_tags bg-info"> <t t-esc="leave.number_of_hours_display"/> hr Morning</span>
                                    
                                </t>
                                <t t-else="leave.request_date_from_period == 'pm'">
                                    <span class="payslip_tags bg-warning"><t t-esc="leave.number_of_hours_display"/> hr Afternoon</span>
                                </t>
                            </t>
                            <t t-elif="leave.request_unit_hours">
                                    <span class="payslip_tags bg-success"><t t-esc="leave.request_unit_hours_get_value(leave.request_hour_from)"/> to <t t-esc="leave.request_unit_hours_get_value(leave.request_hour_to)"/></span>
                            </t>
                            <t t-else="leave.number_of_hours_display >= 8">
                                <span class="payslip_tags bg-danger" >Full Day</span>
                            </t>
                            </p>
                            
                        </div>
                    </div>
                </t>
            </t>
            <t t-else="">
                <div class="row">
                    <div class="col-12">
                        <p class="no_record">No records found!</p>
                    </div>
                </div>
            </t>
        </div>
    </template>

