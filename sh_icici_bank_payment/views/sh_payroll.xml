<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_payroll_custom" model="ir.ui.view">
            <field name="name">sh.payroll.custom</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="sh_hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <button name="generate_format" type="object" class="btn btn-primary" string="Generate ICICI Format" groups="sh_hr_payroll.group_hr_payroll_manager"/>
                </field>
                <field name="slip_ids" position="after">
                    <div class="o_horizontal_separator" groups="sh_hr_payroll.group_hr_payroll_manager">ICICI Bank Format</div>
                    <field name="bank_format" groups="sh_hr_payroll.group_hr_payroll_manager"/>
                </field>
                <field name="credit_note" position="before">
                    <field name="bank_ref" groups="sh_hr_payroll.group_hr_payroll_manager"/>
                </field>
                <field name="credit_note" position="after">
                    <field name="trancation_date" groups="sh_hr_payroll.group_hr_payroll_manager"/>
                    <field name="default_payment" widget="many2many_tags" groups="sh_hr_payroll.group_hr_payroll_manager"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
