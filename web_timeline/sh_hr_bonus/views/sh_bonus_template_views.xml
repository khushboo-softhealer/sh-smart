<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sh_bonus_template_view_form" model="ir.ui.view">
        <field name="name">sh.bonus.template.view.form</field>
        <field name="model">sh.bonus.template</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button class="btn btn-primary" name="%(sh_hr_bonus.action_report_template)d"
                        type="action" string="Print" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="Bonus Allocation">
                            <field name="bonus_template_line">
                                <tree editable="bottom">
                                    <field name="from_month" />
                                    <field name="to_month" />
                                    <field name="bonus" />
                                    <field name="bonus_template_id" invisible="1" />
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="sh_bonus_template_view_tree" model="ir.ui.view">
        <field name="name">sh.bonus.template.view.tree</field>
        <field name="model">sh.bonus.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="sh_bonus_template_action" model="ir.actions.act_window">
        <field name="name">Bonus Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.bonus.template</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="sh_bonus_template_menu" name="Bonus Configuration Template"
        parent="hr.menu_human_resources_configuration" groups="hr.group_hr_manager"
        action="sh_bonus_template_action" sequence="99" />

</odoo>
