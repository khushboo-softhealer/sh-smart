<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_helpdesk_ticket_type_form_view" model='ir.ui.view'>
			<field name="name">sh.helpdesk.ticket.type.form.view</field>
			<field name="model">sh.helpdesk.ticket.type</field>
			<field name="arch" type="xml">
				<form string="Ticket Type">
					<sheet>
						<div class="oe_button_box" name="button_box" groups="sh_helpdesk.group_helpdesk_sla_policy">
							<button name="action_view_sla" type="object" class="oe_stat_button" icon="fa-ticket" attrs="{'invisible':[('sla_count','=',0)]}" groups="sh_helpdesk.group_helpdesk_sla_policy">
			                    <div class="o_stat_info">
			                        <field name="sla_count" class="o_stat_value" />
			                        <span class="o_stat_text">Helpdesk SLA</span>
			                    </div>
			                </button>
						</div>
						<group>
							<group>
								<field name="name"/>
								<field name="sh_invoice"/>
	                    		<field name="sh_product"/>
								<field name="sh_display_in_frontend"/>
								<field name="sh_required_odoo_hosted"/>
								<field name="sh_edition_required"/>
								<field name="sh_version_required"/>
								<field name="sh_followup"/>
							</group>
						</group>
						<group string="Follow-up Configuration" attrs="{'invisible':[('sh_followup','=',False)]}">
							<group>
								<field name="sh_followup_trigger"/>
							</group>
							<group>
								<field name="sh_followup_config_id" attrs="{'invisible':[('sh_followup_trigger','=',False)]}"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="sh_helpdesk_ticket_type_tree_view" model='ir.ui.view'>
			<field name="name">sh.helpdesk.ticket.type.tree.view</field>
			<field name="model">sh.helpdesk.ticket.type</field>
			<field name="arch" type="xml">
				<tree string="Ticket Type">
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record id="sh_helpdesk_ticket_type_action" model="ir.actions.act_window">
     		<field name="name">Helpdesk Ticket Type</field>
          	<field name="res_model">sh.helpdesk.ticket.type</field>
          	
          	<field name="view_mode">tree,form</field>
          	<field name="help" type="html">
              	<p class="oe_view_nocontent_create">Create a New Ticket Type</p>
          	</field>
    	</record>
    	<menuitem id="sh_helpdesk_ticket_type_menu" name="Helpdesk Ticket Types" parent="sh_helpdesk.helpdesk_config_menu" action="sh_helpdesk_ticket_type_action" sequence="2"/>
	</data>
</odoo>