    <record id="sh_knowledge_article_view_form" model="ir.ui.view">
        <field name="name">knowledge.article.view.form</field>
        <field name="model">sh.knowledge.article</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="knowledge Article">
                <sheet>
                    <field name="icon" widget="image" class="oe_avatar" />
                    <div class="oe_title d-flex">
                        <label for="sh_title" string="Title" />
                        <h1>
                            <field name="sh_title" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state" invisible="1" />
                            <field name="submited_stage" invisible="1" />
                            <field name="company_id" invisible="1" />
                            <!-- <field name="sh_document_no"
                                attrs="{'readonly':[('state','in',['submit','approved','reject'])]}"></field> -->
                            <field name="sh_create_date" readonly="1" />
                            <field name="effective_date" readonly="1"></field>
                            <field name="sh_tag_ids" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                        </group>
                        <group>
                            <field name="sh_category_id" />
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="owner_id" string="Owner" readonly="1" />
                            <!-- <field name="manager_ids" widget="many2many_tags" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page name="Content">
                            <field name="sh_content" />
                        </page>
                        <!--<page name="Cover Page">
                            <field name="banner"
                                attrs="{'readonly':[('state','in',['submit','approved','reject'])]}" />
                        </page>-->
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="sh_knowledge_article_view_tree" model="ir.ui.view">
        <field name="name">knowledge.article.view.tree</field>
        <field name="model">sh.knowledge.article</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sh_owner" invisible="1" />
                <field name="sh_title" />
                <field name="sh_document_no"></field>
                <field name="create_date" />
                <field name="owner_id" string="Owner" />
                <field name="effective_date"></field>
                <field name="knowledge_state" widget="badge"></field>
            </tree>
        </field>
    </record>

    <record id="sh_knowledge_article_view_search" model="ir.ui.view">
        <field name="name">sh.knowledge.article.search</field>
        <field name="model">sh.knowledge.article</field>
        <field name="arch" type="xml">
            <search string="Knowledge Article">
                <field name="sh_title" string="Title"  filter_domain="['|','|','|','|',('sh_title','ilike',self),('sh_tag_ids','ilike',self),('owner_ids','ilike',self),('manager_ids','ilike',self),('sh_content','ilike',self)]"/>
                <field name="sh_category_id" string="Category" />
                <field name="owner_id" string="Owner" />
                <field name="sh_tag_ids" string="Tags" />
                <filter string="My SOP" name="my_sop" domain="[('owner_id', '=', uid)]" />
                <filter string="Create Date" name="filter_create_date" date="create_date" />
                <searchpanel>
                    <field name="sh_category_id" icon="fa-users" enable_counters="1" />
                </searchpanel>
                <group expand="1" string="Group By">
                    <filter string="Category" name="group_by_sh_category_id"
                        context="{'group_by': 'sh_category_id'}" />
                    <filter string="Owner" name="group_by_owner_id"
                        context="{'group_by': 'owner_id'}" />
                    <filter string="Tags" name="group_by_sh_tag_ids"
                        context="{'group_by': 'sh_tag_ids'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_knowledge_article_custom_action" model="ir.actions.act_window">
        <field name="name">Knowledge Article</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.knowledge.article</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="sh_knowledge_base_customised.sh_knowledge_article_view_kanban" />
    </record>

    <record id="model_knowledge_article_report" model="ir.actions.report">
        <field name="name">Article Print</field>
        <field name="model">sh.knowledge.article</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_knowledge_base_customised.report_knowledge_article</field>
        <field name="report_file">sh_knowledge_base_customised.report_knowledge_article</field>
        <field name="print_report_name">'article - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sh_knowledge_article" />
        <field name="binding_type">report</field>
    </record>
</odoo>