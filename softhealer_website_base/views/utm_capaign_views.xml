<odoo>
    <record id='sh_module_utm_campaign_tree_view' model='ir.ui.view'>
        <field name="name">sh.module.utm.campaign.tree.view</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <!-- <field name="name"/> -->
                <field name="title"/>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <record id="sh_module_utm_campaign_search_view" model="ir.ui.view">
        <field name="name">sh.module.utm.campaign.search.view</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <search string="Records">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="sh_module_utm_campaign_action" model="ir.actions.act_window">
        <field name="name">Campaign</field>
        <field name="res_model">utm.campaign</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Campaign
            </p>
        </field>
    </record>
</odoo>
