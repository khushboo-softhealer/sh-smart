<odoo>
    <record  id="sh_talking_points_form" model="ir.ui.view">
        <field name="name">sh.talking.points.form</field>
        <field name="model">sh.talking.points</field>
        <field name="arch" type="xml">
            <form create='false' class="sh_one_on_ones_form" js_class="br_engage_one_on_ones">
                <sheet>
                    <field name="name" invisible="1"></field>                
                    <field name="sh_employee_id" invisible="1"></field>                
                    <field name="sh_total_event_count" invisible="1"></field> 
                </sheet>       
                
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record  id="sh_talking_points_tree" model="ir.ui.view">
        <field name="name">sh.talking.points.tree</field>
        <field name="model">sh.talking.points</field>
        <field name="arch" type="xml">
            <tree create='false'>
                <field name="name"></field>
                <field name="sh_employee_id"></field>
                <field name="sh_user_id" invisible='1'></field>
            </tree>
        </field>
    </record>


    <record id="sh_talking_points_view_search" model="ir.ui.view">
        <field name="name">sh.talking.points.search</field>
        <field name="model">sh.talking.points</field>
        <field name="arch" type="xml">
            <search string="Talking Points">
                <field name="sh_employee_id"></field>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="sh_employee_id_filter" domain="" context="{'group_by':'sh_employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    
    <record id="sh_talking_points_view_kanban" model="ir.ui.view">
        <field name="name">sh.talking.points.kanban</field>
        <field name="model">sh.talking.points</field>
        <field name="arch" type="xml">
            <kanban create='0' records_draggable="0">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details p-2">

                                <div class="row">
                                    <div class="col-12 pb-2">
                                        <strong>
                                            <field name="sh_stage" widget='badge' decoration-success="sh_stage == 'new'" decoration-info="sh_stage == 'completed'"/>
                                        </strong>
                                    </div>

                                    <div class="col-12">
                                        <strong style='font-size:15px;font-weight: 600;'><field name="sh_employee_id"/>'s 1on1 
                                            <!-- <t t-if='record.sh_check_in_id'> -->
                                                for Check in : <field name='sh_check_in_id'/>
                                            <!-- </t> -->
                                        </strong>
                                    </div>

                                    <div class='col-6 pt-2' style='color:gray;'>
                                        <field name='name'/>
                                    </div>

                                    <div class='col-6 text-end pt-2'>
                                        <span class="badge rounded-pill text-bg-danger"  style='font-size:15px;font-weight: 600;height: 25px;width: 25px;'><field name='sh_total_event_count'/> </span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sh_talking_points_action" model="ir.actions.act_window">
        <field name="name">1-on-1's</field>
        <field name="res_model">sh.talking.points</field>        
        <field name="view_mode">kanban,tree,form,search</field>
        <field name="context">{'search_default_sh_employee_id_filter': 1}</field>
        <field name="domain">[('parent_id','=',False)]</field>
    </record>

</odoo>