<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add reason wizard -->
    <record id="sh_attendance_modification_request_reason_form_view" model="ir.ui.view">
        <field name="name">sh.attendance.modification.request.reason.form</field>
        <field name="model">sh.attendance.modification.request.reason</field>
        <field name="arch" type="xml">
            <form string="Rejection Reason">
                <sheet>
                    <group>
                        <field name="myreason" />
                    </group>
                    <footer>
                        <button name="add_reason" class='btn-primary' id="addReason" string='Save Reason' type='object'></button>
                        <button string='Remove Reason' class='btn-secondary' special="cancel"></button>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Add reason wizard Action -->
    <record id="sh_attendance_modification_request_reason_action" model="ir.actions.act_window">
        <field name="name">Rejection Reason</field>
        <field name="res_model">sh.attendance.modification.request.reason</field>       
        <field name="view_mode">form</field>
        <field name='target'>new</field>
    </record>

    <record id="sh_attendance_modification_request_form_view" model="ir.ui.view">
        <field name="name">Attendance Modification Request Form View</field>
        <field name="model">sh.attendance.modification.request</field>
        <field name="arch" type="xml">
            <form string="Attendance Modification Request" >
                <header>
                    <button class="btn btn-primary" name="confirm" type="object" string="Confirm" attrs="{'invisible':['|','|','|',('state','=','waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')]}"  />
                    <button class="btn btn-primary" name="approve" type="object" string="Approve" attrs="{'invisible':['|','|','|',('state','=','draft'),('state','=','approved'),('state','=','cancel'),('state','=','reject')]}" groups="hr_attendance.group_hr_attendance_manager" />
                    <button class="btn btn-primary" name="%(sh_attendance_modification_request.sh_attendance_modification_request_reason_action)d" type="action" string="Reject" attrs="{'invisible':['|','|','|',('state','=','draft'),('state','=','approved'),('state','=','cancel'),('state','=','reject')]}" groups="hr_attendance.group_hr_attendance_manager" />
                    <button class="btn btn-secondary" name="cancel" type="object" string="Cancel" attrs="{'invisible':[('state','=','cancel')]}" groups="hr_attendance.group_hr_attendance_manager" />
                    <button class="btn btn-secondary" name="action_draft" type="object" string="Reset To Draft" attrs="{'invisible':[('state','in',('approved','waiting_for_approve'))]}" groups="hr_attendance.group_hr_attendance_manager" />
                    <button class="btn btn-secondary" name="action_draft" type="object" string="Reset To Draft" attrs="{'invisible':[('state','not in',('waiting_for_approve'))]}" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approve,approved"></field>
                </header>                               
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_timesheet" type="object" class="oe_stat_button" icon="fa-money" groups="hr.group_hr_manager">
                            <div class="o_stat_info">
                                <field name="sh_timesheet_count" class="o_stat_value" widget="timesheet_uom"/> 
                                <span class="o_stat_text">Timesheet</span>
                            </div>
                        </button>

                        <button name="action_view_leaves" type="object" class="oe_stat_button" icon="fa-money" groups="hr.group_hr_manager">
                            <div class="o_stat_info">
                                <field name="sh_leave_count" class="o_stat_value" />
                                <span class="o_stat_text">Leaves</span>
                            </div>
                        </button>
                        <button name="action_view_attendance" type="object" class="oe_stat_button" icon="fa-money" groups="hr.group_hr_manager">
                            <div class="o_stat_info">
                                <field name="sh_attendance_count" class="o_stat_value" />
                                <span class="o_stat_text">Attendance</span>
                            </div>
                        </button>
                    </div>
                    <field name="less_timesheet_alert" invisible = "1" />
                    <div class="alert alert-info text-center o_form_header" style="background: #efd9d9; color: maroon; border: 1px solid #e9b4b4;" role="alert"   attrs="{'invisible': [('less_timesheet_alert','=',False)]}">
                        <strong>Working hours not matched with timesheet</strong>
                    </div>
                
                	<div class="alert alert-info text-center o_form_header" style="background: #efd9d9; color: maroon; border: 1px solid #e9b4b4;" attrs="{'invisible': [('checkin_alert', '=', False)]}" role="alert">
	                    <div>
	                        <strong>Please kindly check your checkin date &amp; timing properly!</strong>
	                    </div>
	                </div>
	                <div class="alert alert-info text-center o_form_header" style="background: #efd9d9; color: maroon; border: 1px solid #e9b4b4;" attrs="{'invisible': [('checkout_alert','=',False)]}" role="alert">
	                    <div>
	                        <strong>Please kindly check your checkout date &amp; timing properly!</strong>
	                    </div>
	                </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')]}" />
                            <field name="type" widget="radio" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')]}" />
                            <field name="checkin_alert" invisible="1"/>
                       		<field name="checkout_alert" invisible="1"/>
                        </group>
                        <group>
                            <field name="attendance_id" options="{'no_create':1,'no_create_edit':1}" domain="[('employee_id','=',employee_id)]" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')]}" />
                            <field name="updated_value" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')],'invisible':[('type','=','checkout')],'required':[('type','in',['checkin','both'])]}" />
                            <field name="updated_value_checkout" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')],'invisible':[('type','=','checkin')],'required':[('type','in',['checkout','both'])]}" />
                            <field name="rejection_reason" attrs="{'invisible':['|','|','|',('state', '=', 'draft'),('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved')]}" />
                        </group>
                    </group>
                    <group>
                    	 <field name="reason" attrs="{'readonly': ['|','|','|',('state', '=', 'waiting_for_approve'),('state','=','cancel'),('state','=','approved'),('state','=','reject')]}" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    
    <record id="sh_attendance_modification_request_tree_view" model="ir.ui.view">
        <field name="name">Attendance Modification Request Tree View</field>
        <field name="model">sh.attendance.modification.request</field>
        <field name="arch" type="xml">
            <tree string="Attendance Modification Request">
                <field name="name" />
                <field name="employee_id" />
                <field name="date" />
                <field name="type" />
                <field name="attendance_id" />
                <field name="reason" />
                <field name="updated_value" />
                <field name="updated_value_checkout" />
                <field name="rejection_reason" invisible="1"/>
                 <field name="state" />
            </tree>
        </field>
    </record>

    <record id="sh_attendance_modification_request_view_search" model="ir.ui.view">
        <field name="name">Attendance Modification Request</field>
        <field name="model">sh.attendance.modification.request</field>
        <field name="arch" type="xml">
            <search string="Attendance Modification Request">
                <field name="employee_id" />
                <filter string="Today" name="today" domain="[('date', '=', context_today().strftime('%Y/%m/%d'))]" />
                <filter string="To Approve" name="waiting_for_approve" domain="[('state', '=', 'waiting_for_approve')]" />
                <group expand="0" name="group_by" string="Group">
                    <filter name="groupByEmployee" string="Employee" domain="[]" context="{'group_by' : 'employee_id'}" />
                    <filter name="groupByType" string="Type" domain="[]" context="{'group_by' : 'type'}" />
                    <filter name="groupBystate" string="State" domain="[]" context="{'group_by' : 'state'}" />
                    <filter name="groupBydate" string="Date" domain="[]" context="{'group_by' : 'date'}" />
                </group>
            </search>
        </field>
    </record>

        
    <record id="sh_hr_attendance_inherited_view_form" model="ir.ui.view">
        <field name="name">sh_hr_attendance</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <field name="worked_hours" position="after">
                <button class="btn btn-primary" name="%(sh_attendance_modification_request.sh_attendance_update_action)d" 
                type="action" string="Create Modification Request" />
            </field>
        </field>
    </record>

    <record id="sh_attendance_modification_request_action" model="ir.actions.act_window">
        <field name="name">Attendance Modification Request</field>
        <field name="res_model">sh.attendance.modification.request</field>   
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Attendance Modification Request</p>
        </field>
    </record>
    
    <!-- <menuitem id="sh_attendance_modification_request_menu" name="Attendance Modification Request" action="sh_attendance_modification_request_action" parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence="1" /> -->
</odoo>
