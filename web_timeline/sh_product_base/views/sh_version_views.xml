<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sh_version_form" model="ir.ui.view">
        <field name="name">sh.version.form</field>
        <field name="model">sh.version</field>
        <field name="arch" type="xml">
            <form string="Sh Version">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sh_version_tree" model="ir.ui.view">
        <field name="name">sh.version.tree</field>
        <field name="model">sh.version</field>
        <field name="arch" type="xml">
            <tree string="Sh Version">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_sh_version" model="ir.actions.act_window">
        <field name="name">Versions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.version</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sh_version_tree"/>
    </record>
    <menuitem name ="Versions" id='menu_sh_version' parent="sale.product_menu_catalog" action="action_sh_version" sequence="4" groups="sh_product_base.group_product_tags_manager"/>
</odoo>