<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_helpdesk_tickets_crm_inherited_view_form" model="ir.ui.view">
        <field name="name">sh.sh.helpdesk.tickets.crm.view.form</field>
        <field name="model">sh.helpdesk.ticket</field>
        <field name="inherit_id" ref="sh_helpdesk.helpdesk_ticket_form_view" />
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <button class="btn btn-primary" name="action_create_lead" type="object" string="Create Lead" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm" />
                <button class="btn btn-primary" name="action_create_opportunity" type="object" string="Create Opportunity" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm" />
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="lead_counts" type="object" class="oe_stat_button" icon="fa-star" context="{'partner_id': partner_id}" attrs="{'invisible': [('lead_count', '=', 0)]}" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm">
                    <div class="o_stat_info">
                        <field name="lead_count" class="o_stat_value" />
                        <span class="o_stat_text">Leads</span>
                    </div>
                </button>
                <button name="opportunity_counts" type="object" class="oe_stat_button" icon="fa-star" context="{'partner_id': partner_id}" attrs="{'invisible': [('opportunity_count', '=', 0)]}" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm">
                    <div class="o_stat_info">
                        <field name="opportunity_count" class="o_stat_value" />
                        <span class="o_stat_text">Opportunities</span>
                    </div>
                </button>
            </xpath>
            <field name="product_ids" position="after">
                <field name="sh_lead_ids" widget="many2many_tags" invisible="1" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm"/>
            </field>
        </field>
    </record>

    <record id="sh_helpdesk_tickets_inherited_view_search" model="ir.ui.view">
        <field name="name">sh.sh.helpdesk.tickets.inherited.view.search</field>
        <field name="model">sh.helpdesk.ticket</field>
        <field name="inherit_id" ref="sh_helpdesk.helpdesk_ticket_search_view" />
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="sh_lead_ids" />
            </field>
            <xpath expr="//filter[1]" position="after">
                <filter string="Leads/Opportunities" name="helpdesk_lead" domain="[('sh_lead_ids','!=',False)]" />
            </xpath>
        </field>
    </record>
</odoo>
