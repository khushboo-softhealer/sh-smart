<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- VIEW: Form -->
    <record id="sh_project_task_checklist_view_form" model="ir.ui.view">
        <field name="name">sh_project_task_checklist.view.form</field>
        <field name="model">sh.project.task.checklist</field>
        <field name="arch" type="xml">
            <form string="Project Task Checklist">
                <sheet>
                    <group>
                        <field name="name" required="1" placeholder="e.g. Preappstore Task Checklists Template" />
                        <!-- <field name="project_ids" required="1" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" /> -->
                    </group>
                    <field name="sh_project_task_checklist_line" nolable="1">
                        <!-- VIEW: Tree -->
                        <tree>
                            <field name="from_wich_state_id" />
                            <field name="at_which_state_ids" widget="many2many_tags" />
                            <field name="checklist_template_ids" widget="many2many_tags" />
                            <field name="checklist_ids" widget="many2many_tags" />
                        </tree>
                        <!-- VIEW: Form -->
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="from_wich_state_id" options="{'no_create': True, 'no_open': True}" required="1" />
                                        <field name="at_which_state_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" required="1" />
                                    </group>
                                    <group>
                                        <field name="checklist_template_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" required="1" />
                                    </group>
                                </group>
                                <field name="checklist_ids" readonly="1">
                                    <tree  no_open="1">
                                        <field name="name" />
                                        <!-- <field name="task_custom_checklist_id" /> -->
                                        <field name="accepted_state_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" />
                                        <field name="description" />
                                    </tree>
                                </field> 
                            </sheet>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VIEW: Tree -->
    <record id="sh_project_task_checklist_view_tree" model="ir.ui.view">
        <field name="name">sh_project_task_checklist.view.tree</field>
        <field name="model">sh.project.task.checklist</field>
        <field name="arch" type="xml">
            <tree string="Project Task Checklist">
                <field name="name" />
                <!-- <field name="project_ids" widget="many2many_tags" /> -->
                <field name="sh_project_task_checklist_line" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_project_task_checklist_action" model="ir.actions.act_window">
        <field name="name">Task Checklist Templates</field>
        <field name="res_model">sh.project.task.checklist</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>