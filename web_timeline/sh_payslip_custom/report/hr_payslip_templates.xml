<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <template id="report_payslip" inherit_id="sh_hr_payroll.report_payslip">
        <xpath expr="//div[@t-field='o.employee_id.address_home_id']" position="replace">
            <div t-field="o.employee_id.sudo().address_home_id"
                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
        </xpath>
        <xpath expr="//span[@t-field='o.employee_id.identification_id']" position="replace">
            <span t-field="o.employee_id.sudo().identification_id" />
        </xpath>
        <xpath expr="//span[@t-field='o.employee_id.bank_account_id']" position="replace">
            <span t-field="o.employee_id.sudo().bank_account_id" />
        </xpath>
    </template>

</odoo>