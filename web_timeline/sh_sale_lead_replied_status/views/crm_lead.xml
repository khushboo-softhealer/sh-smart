        <field name="name">crm.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="sh_replied_status"/>
            </field>
        </field>
    </record> -->
    <record id="sh_lead_replied_status_search_view" model="ir.ui.view">
        <field name="name">crm.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <filter name="assigned_to_me" position="after">
                <filter string="Staff Replied" domain="[('sh_replied_status','=','staff_replied')]" name="staff_replied_oppo"/>
                <filter string="Customer Replied" domain="[('sh_replied_status','=','customer_replied')]" name="customer_replied_oppo"/>
            </filter>
        </field>
    </record>
    <record id="sh_oppo_replied_status_search_view" model="ir.ui.view">
        <field name="name">crm.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <filter name="assigned_to_me" position="after">
                <filter string="Staff Replied" domain="[('sh_replied_status','=','staff_replied')]" name="staff_replied_oppo"/>
                <filter string="Customer Replied" domain="[('sh_replied_status','=','customer_replied')]" name="customer_replied_oppo"/>
            </filter>
        </field>
    </record>
</odoo>