<?xml version="1.0"?>
<odoo>
	<record id="sh_employee_relation_form_view" model="ir.ui.view">
		<field name="name">sh.employee.relation</field>
		<field name="model">sh.employee.relation</field>
		<field name="arch" type="xml">
			<form string="Employee Relation">
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="sh_employee_relation_tree_view" model="ir.ui.view">
		<field name="name">sh.employee.relation</field>
		<field name="model">sh.employee.relation</field>
		<field name="arch" type="xml">
			<tree string="Employee Relation">
				<field name="name"/>
			</tree>
		</field>
	</record>
	<record id="sh_employee_relation_actions" model="ir.actions.act_window">
        <field name="name">Employee Relation</field>       
        <field name="res_model">sh.employee.relation</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_employee_relation" name="Employee Relation" parent="hr.menu_human_resources_configuration" action="sh_employee_relation_actions"/>
</odoo>