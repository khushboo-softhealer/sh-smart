<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_company_custom_inherit_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="current_euro_rate" />
                <field name="current_usd_rate" />
            </field>
            <xpath expr="//field[@name='current_euro_rate']" position="replace">
                <label for="current_euro_rate" />
                <div class="o_row">
                    <field name="current_euro_rate" />
                    <button type="object" name="on_update_press" class="btn-sm btn-link mb4 fa fa-euro" aria-label="Current Euro Rate" title="Current Euro Rate" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
