<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_public_holiday">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            .holiday_data {
                                border-collapse: collapse;
                                width: 100%;
                                text-align: left;}

                            .holiday_data th,
                            .holiday_data td {
                                border: 1px solid;
                                padding: 8px;}
                        </style>

                        <!-- holiday report header -->
                        <h1 style="text-align:center;">Public Holiday List</h1>

                        <div class="row mt32 mb32">
                            <div class="col-3">
                                <h1 t-field="doc.name" />
                            </div>
                        </div>

                        <table style="width:100%;text-align:center;">
                            <tr>

                                <td>
                                    <strong>Date From:</strong>
                                    <p t-esc="doc.sh_from_date" />
                                </td>
                                <td>
                                    <strong>Date To:</strong>
                                    <p t-esc="doc.sh_to_date" />
                                </td>
                            </tr>
                        </table>

                        <!-- holiday leave table -->
                        <table class="holiday_data" style="border:1px solid black; width:100%; text-align:center;">
                            <thead style="border:1px solid black;">
                                <tr>
                                    <th>Holiday</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs.sh_working_hours_lines" t-as="line">

                                    <tr>
                                        <td>
                                            <t t-esc="line.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.sh_start_date.date()"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.sh_end_date.date()"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>

    </template>

    <record id="paperformat_public_holiday_leave" model="report.paperformat">
        <field name="name">Public Holiday Leave</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">55</field>
        <field name="dpi">90</field>
    </record>

    <record id="public_holiday_report_action" model="ir.actions.report">
        <field name="name">Public Holiday's</field>
        <field name="model">sh.public.holiday</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_public_holiday.report_public_holiday</field>
        <field name="binding_model_id" ref="model_sh_public_holiday" />
        <field name="binding_type">report</field>
        <field name="print_report_name">'Public Holiday'</field>
        <field name="paperformat_id" ref="sh_public_holiday.paperformat_public_holiday_leave" />
    </record>
</odoo>
