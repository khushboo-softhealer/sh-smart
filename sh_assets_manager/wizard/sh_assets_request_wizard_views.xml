<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="assets_request_wizard_view" model="ir.ui.view">
		<field name="name">assets.request.wizard</field>
		<field name="model">assets.request.wizard</field>
		<field name="arch" type="xml">
			<form string="Maintenance Employee Request">
				<group>
					<group>
						<field name="maintenance" widget="radio" />
						<field name="asset_ids" widget="many2many_tags"
							domain="[('employee_id','=',employee_id),('state','=','running'),('is_child','=',False)]"
							options="{'no_create':True,'no_create_edit':True}"
							attrs="{'invisible':[('maintenance','!=','device')]}" />
						<field name="general_asset_ids" widget="many2many_tags"
							domain="[('sh_is_general_asset','=',True)]"
							options="{'no_create':True,'no_create_edit':True}"
							attrs="{'invisible':[('maintenance','!=','other')]}" />
						<field name="new_asset_id"
							options="{'no_create':True,'no_create_edit':True}"
							attrs="{'invisible':[('maintenance','!=','new')]}" />
						<field name="employee_id" invisible="1" />
						<field name="priority" widget='radio'/>
						<field name="problem" />
					</group>
				</group>
				<footer>
					<button name="action_submit" string="Submit" type="object" class="oe_highlight" />
					<button special="cancel" string="Cancel" class="oe_link" />
				</footer>
			</form>
		</field>
	</record>
	<record id="assets_request_wizard_action" model="ir.actions.act_window">
		<field name="name">Maintenance Employee Request</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">assets.request.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	<menuitem id="sh_employee_wizard" action="assets_request_wizard_action"
		parent="sh_maintenance_root_menu" name="Maintenance Employee Request" sequence="2" />
</odoo>