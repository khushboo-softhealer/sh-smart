<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_tax_slab_view_form" model="ir.ui.view">
        <field name="name">tax.slab.template.view.form</field>
        <field name="model">tax.slab.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                           <field name="rebate_taxable_limit"/>
                           <field name="rebate_tax_relief_limit"/>
                           <field name="education_cess"/>
                        </group>
                       
                    </group>
                    <group>
                        <field name="template_line_ids">
                            <tree editable="bottom">
                                <field name="from_amount"/>
                                <field name="to_amount"/>
                                <field name="tax_rate"/>
                            </tree>

                        </field>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_tax_slab_view_tree" model="ir.ui.view">
        <field name="name">tax.slab.template.view.tree</field>
        <field name="model">tax.slab.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>



    <record id="sh_tax_slab_template_action" model="ir.actions.act_window">
        <field name="name">Tax Slab Template</field>
        <field name="res_model">tax.slab.template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="tax_slab_template" name="Tax Slab Template" action="sh_tax_slab_template_action"
        parent="sh_hr_payroll.menu_hr_payroll_configuration" sequence="100" />
</odoo>
