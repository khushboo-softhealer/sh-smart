<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sh_required_apps_form" model="ir.ui.view">
        <field name="name">sh.required.apps.form</field>
        <field name="model">sh.required.apps</field>
        <field name="arch" type="xml">
            <form string="Required Apps">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="technical_name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_sh_required_apps_tree" model="ir.ui.view">
        <field name="name">sh.required.apps.tree</field>
        <field name="model">sh.required.apps</field>
        <field name="arch" type="xml">
            <tree string="Required Apps">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_sh_required_apps" model="ir.actions.act_window">
        <field name="name">Required Apps</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.required.apps</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sh_required_apps_tree" />
    </record>

    <menuitem name="Required Apps"
        id='menu_sh_required_apps'
        parent="sale.product_menu_catalog"
        action="action_sh_required_apps"
        sequence="4"
        groups="sh_product_base.group_product_tags_manager" />
</odoo>