<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sop_stages_view_tree" model="ir.ui.view">
        <field name="name">sh.sop.stages.view.tree</field>
        <field name="model">sh.sop.stages</field>
        <field name="type">tree</field>          
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sh_seq" readonly="1" force_save="1"/>
                <field name="name"/>                           
            </tree>           
        </field>
    </record>
    <record id="sh_stages_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="type">ir.actions.act_window</field>           
        <field name="res_model">sh.sop.stages</field>
        <field name="view_mode">tree</field>
    </record>    
</odoo>