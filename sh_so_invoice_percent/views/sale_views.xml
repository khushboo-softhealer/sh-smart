<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SALE ORDER FORM VIEW -->
    <record id="sh_inherit_view_order_form" model="ir.ui.view">
        <field name="name">sh.inherit.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="tax_totals" position="after">
                <field name="invoiced_total_amount" />
                <field name="invoiced_due_amount" />
                <field name="invoiced_paid_amount" />
            </field>

            <!-- payment smart button -->
            <xpath expr="//sheet/div[hasclass('oe_button_box')]" position="inside">
                <button type="object" class="oe_stat_button" icon="fa-money" name="action_view_invoice">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value"> <field name="sh_invoiced_paid_amount_in_percent" />% </span>
                        <span class="o_stat_text">Amount Paid</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- SALE ORDER TREE VIEW -->
    <record id="sh_inherit_view_quotation_tree" model="ir.ui.view">
        <field name="name">sh.inherit.view.quotation.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="inv_total_amount" sum="Invoiced Total Amount" />
                <field name="inv_due_amount" sum="Invoiced Due Amount" />
                <field name="inv_paid_amount" sum="Invoiced Paid Amount" />
                <field name="sh_invoiced_paid_amount_in_percent" />
                <field name="state" decoration-success="state == 'sale' or state == 'done'" widget="badge" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- SALE ORDER SEARCH VIEW -->
    <record id="sh_view_sales_order_filter" model="ir.ui.view">
        <field name="name">sh.sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search//field[@name='team_id']" position="after">
                <field name="inv_total_amount"/>
                <field name="inv_due_amount"/>
                <field name="inv_paid_amount"/>
            </xpath>
        </field>
    </record>

    
</odoo>
