<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_start_ticket_wizard_view" model="ir.ui.view">
        <field name="name">sh.start.ticket</field>
        <field name="model">sh.start.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id" />
                        </group>
                        <group>
                            <field name="task_id" domain="[('project_id','=',project_id)]" />
                            <field name="ticket_id" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Start Ticket" name="action_start_ticket" type="object" default_focus="1" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>