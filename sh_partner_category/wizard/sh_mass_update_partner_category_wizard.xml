<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_mass_action_partner_category_wizard" model="ir.ui.view">
		<field name="name">sh.partner.category.action.wizard.form</field>
		<field name="model">sh.partner.category.action.wizard</field>
		<field name="arch" type="xml">
			<form string="Update Partner Category">
				<group>
                <group>
                    <field name="sh_partner_category_id" options="{'no_create_edit': True}"/>
                    <field name="sh_partners" invisible="1"/>
                </group>                                       
                </group>
                <footer>
                    <button name="update_partner_category" string="Update" class="oe_highlight" type="object"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>				
			</form>
		</field>
	</record>	
</odoo>