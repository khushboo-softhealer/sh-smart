<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_helpdesk_res_partner_inherited_view_form" model="ir.ui.view">
        <field name="name">sh.helpdesk.res.partner.inherited.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="partner_website" readonly="1"/>
                <field name="sh_name_email_clean" invisible="1"/>
                <field name="sh_contact_type_changed" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>