<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_leave_allocation_view_inherit_form_custom" model="ir.ui.view">
            <field name="name">sh.hr.leave.allocation.view.inherit</field>
            <field name="model">hr.leave.allocation</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="before">
                    <field name="date_start" string="Start Date" attrs="{'readonly':[('state','!=','draft')]}" />
                    <field name="date_end" string="End Date" attrs="{'readonly':[('state','!=','draft')]}" />
                </xpath>
                <xpath expr="//div[@name='duration_display']" position="after">
                    <field name="number_of_days_display" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
