<odoo>
    <record id="sh_hr_res_config_settings_workhours_form_inherit" model="ir.ui.view">
        <field name="name">res.config.setting.workhours.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                <h2>Work Hours Notify Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_right_pane">
                                <label for="sh_notify_user_email"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Set Hr Manager's email address to which employees work hours notify sent in email.
                                    </div>
                                </div>    
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="sh_notify_user_email" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        
        </field>	
    </record>
</odoo>