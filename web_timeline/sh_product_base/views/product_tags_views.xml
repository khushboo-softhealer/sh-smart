<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_tags_tree_view" model="ir.ui.view">
		<field name="name">product.tags.tree.view</field>
		<field name="model">product.tags</field>
		<field name="arch" type="xml">
		    <tree string="Product Tags" editable="bottom">
                <field name="name"/>
 		    </tree>
		</field>
	</record>
	<record id="action_product_tags" model="ir.actions.act_window">
        <field name="name">Product Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_tags_tree_view"/>
    </record>
 	<menuitem name ="Product Tags"
              id='menu_product_tags'
              parent="sale.product_menu_catalog"
              action="action_product_tags"
              sequence="3"
              groups="sh_product_base.group_product_tags_manager"/>
</odoo>