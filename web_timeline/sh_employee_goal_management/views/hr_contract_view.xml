<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="sh_generate_goal_sheet_wizard_contract_Form" model="ir.ui.view">
        <field name="name">sh.generate.goal.sheet.form.contract</field>
        <field name="model">sh.generate.goal.sheet.wizard.contract</field>
        <field name="arch" type="xml">
            <form string="Generate Sheet">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" string="From Date" />
                        </group>
                        <group>
                            <field name="date_to" string="To Date" />
                        </group>
                    </group>
                    <group>
                        <field name="employee_id" />
                    </group>
                    <footer>
                        <button class="btn btn-primary" type="object" name="generate_goals" string="Generate" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_generate_goal_sheet_contract_action" model="ir.actions.act_window">
        <field name="name">sh.genearte.sheet.wizard.action.contract</field>
        <field name="res_model">sh.generate.goal.sheet.wizard.contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="sh_goal_hr_contract_form_view_inherit" model="ir.ui.view">
        <field name="name">sh.goal.hr.contract.form.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="goal_sheet_id" groups="hr.group_hr_manager"></field>
            </field>
            <xpath expr="//header" position="inside">
                <button name="%(sh_employee_goal_management.sh_generate_goal_sheet_contract_action)d" string="Generate Goal Sheet" class="btn-primary"
                    type="action" attrs="{'invisible':[('goal_sheet_id','!=',False)]}" groups="hr.group_hr_manager"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_goal_sheet" type="object" style="font-size:12px;"
                    class="oe_stat_button" icon="fa-bullseye"
                    attrs="{'invisible':[('goal_sheet_id','=',False)]}" groups="hr.group_hr_manager">
                    Goal Sheet
                </button>
            </xpath>
            

        </field>
    </record>
</odoo>