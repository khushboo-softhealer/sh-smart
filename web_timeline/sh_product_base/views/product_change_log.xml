<odoo>
    <record id="sh_change_log_form" model='ir.ui.view'>
        <field name="name">sh.product.change.log</field>
        <field name="model">product.change.log</field>
        <field name="arch" type="xml">
            <form string="Git Repo">
                <sheet>
                    <group>
                         <group>

                            <field name="create_uid" readonly="1"/>
                            <field name="create_date" readonly="1"/>

                            <field name="product_id" readonly="1"/>
                            <field name="product_variant_id" readonly="1"/>
                            <field name="log_type" readonly="1"/>
                            <field name="version" readonly="1"/>
                         </group>
                        <group>
                            <field name="write_uid" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                            <field name="__last_update" readonly="1"/>
                            
                            <field name="details" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="project_task_id" readonly="1"/>
                         </group>
                       
                        
                    </group>
                </sheet>
                 <div class="o_attachment_preview"/>
	                	<div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>
            </form>
        </field>
    </record>
    <record id='sh_change_log_tree' model='ir.ui.view'>
        <field name="name">sh.product.change.log</field>
        <field name="model">product.change.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="product_variant_id"/>
                <field name="log_type"/>
                <field name="version"/>
                <field name="details"/>
                <field name="date"/>
                <field name="project_task_id"/>
            </tree>
        </field>
    </record>
    <record id="sh_chage_log_action" model="ir.actions.act_window">
        <field name="name">Change Log</field>
        <field name="res_model">product.change.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Change Log
            </p>
        </field>
    </record>
    <record id="sh_chage_log_action_2" model="ir.actions.act_window">
        <field name="name">Change Log</field>
        <field name="res_model">product.change.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Change Log
            </p>
        </field>
        <field name="domain">[('product_variant_id', '=', active_id)]</field>
        <field name="context">{'default_product_variant_id': active_id }</field>
    </record>

    <menuitem name="Change Log" action="sh_chage_log_action"
     id="sh_change_log_root" 
     groups="sh_product_base.group_product_tags_manager" parent="sale.menu_sale_config" sequence="15"/>
     
