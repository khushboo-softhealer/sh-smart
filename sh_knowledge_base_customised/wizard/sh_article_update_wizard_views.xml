<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_knowledge_article_wizard" model="ir.ui.view">
        <field name="name">sh.knowledge.article.wizard</field>
        <field name="model">sh.knowledge.article.wizard</field>
        <field name="type">form</field>          
        <field name="arch" type="xml">
            <form string="knowledge Article Wizard">                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>                    
                    <group>                    
                        <group>
                            <field name="sh_document_no" readonly="1"></field>                             
                            <field name="sh_parent_id" invisible="1"/>                                            
                        </group>
                    </group>
                    <group>
                        <field name="sh_content"/>
                    </group>
                    <footer>
                        <button name="update_article" string="Update" class="oe_highlight" type="object"/>
                        or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>           
        </field>
    </record>      
</odoo>