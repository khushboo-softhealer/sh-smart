<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="password_generate_wizard_view" model="ir.ui.view">
        <field name="name">Password Generator</field>
        <field name="model">password.generator.wizard</field>
        <field name="arch" type="xml">
        	<form string="Password Generator">
        		<group>
        			<group>
        				<field name="type_id" required="1"/>
        			</group>
        		</group>
        		<footer>
        			<button name="generate_password_wizard" string="GENERATE PASSWORD" type="object" class="oe_highlight"/>
        			<button string="DISCARD" class="oe_highlight" special="cancel"/>
        		</footer>
        	</form>
        </field>
    </record>

    <record id="action_password_generator_wizard_form" model="ir.actions.act_window">
         <field name="name">Password Generator</field>
         <field name="view_id" ref="password_generate_wizard_view"/>
         <field name="view_mode">form</field>
         <field name="res_model">password.generator.wizard</field>
         <field name="target">new</field>
    </record>

</odoo>