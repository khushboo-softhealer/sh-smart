<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_responsible_users_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.responsible.users.wizard.view.form</field>
        <field name="model">sh.responsible.users.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Responsible Users">
                <sheet>
                    <group>
                        <field name="user_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_open': True}" />
                    </group>
                    <group>
                        <field name="tmpl_ids" invisible="1" />
                    </group>
                    <footer>
                        <button name="btn_add_users" class="btn btn-primary" type="object" string="Add Users" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>