<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sh_goal_management_setting_view" model="ir.ui.view">
		<field name="name">res.config.settings</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Goal Management"
				 string="Goal Management" data-key="sh_employee_goal_management">
			<!-- <xpath expr="//div[@data-key='hr']" position="inside"> -->
				<h2>Goal Management</h2>
                <div class="row mt16 o_settings_container">
                	<div class="col-6 col-lg-6 o_setting_box">
                		<div class="o_setting_right_pane">
                         	<label for="employee_deadline"/>
                         	<br/>
                         	<field name="employee_deadline" class="oe_inline"/>
                         </div>
                         <div class="o_setting_left_pane">
                         	
                         </div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                		<div class="o_setting_right_pane">
                         	<label for="coach_deadline"/>
                         	<br/>
                         	<field name="coach_deadline" class="oe_inline"/>
                         </div>
                         <div class="o_setting_left_pane">
                         	
                         </div>
                    </div>
                </div>
				<div class="row mt16 o_settings_container">
                	<div class="col-6 col-lg-6 o_setting_box">
                		<div class="o_setting_right_pane">
                         	 <label for="sh_goal_sheet_template_ids"/>
                         	<br/>
                         	<field name="sh_goal_sheet_template_ids" widget="many2many_tags" class="oe_inline"/>
                         </div>
                         <div class="o_setting_left_pane">
                         	
                         </div>
                    </div>
                    <div class="col-6 col-lg-6 o_setting_box">
                    </div>
                </div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>