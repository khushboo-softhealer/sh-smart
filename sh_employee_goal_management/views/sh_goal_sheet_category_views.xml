<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_goal_category_form" model="ir.ui.view">
        <field name="name">sh.goal.category.form</field>
        <field name="model">sh.goal.sheet.category</field>
        <field name="arch" type="xml">
            <form string="Goal Category">
                <header />
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive" groups="base.group_system">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}">Archive</field>
                        </button>
                    </div> -->
                    <group>
                        <field name="name" />
                        <field name="goal_marks_ids" widget="many2many_tags" required="1"/>
                    </group>
                    <field name="category_line_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="name" string="Label" />
                            <field name="description" />
                            <field name="need_rating" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_goal_category_tree" model="ir.ui.view">
        <field name="name">sh.goal.category.tree</field>
        <field name="model">sh.goal.sheet.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="sh_goal_category_action" model="ir.actions.act_window">
        <field name="name">Goal Category</field>
        <field name="res_model">sh.goal.sheet.category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Goal Category</p>
        </field>
    </record>
    <menuitem name="Goal Category" id="sh_goal_category_root" action="sh_goal_category_action" parent="sh_goal_configuration" sequence="20" />
</odoo>