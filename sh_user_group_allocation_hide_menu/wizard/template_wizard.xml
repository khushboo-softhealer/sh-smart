<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_create_template_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.template.wizard.view.form</field>
        <field name="model">sh.template.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                
                    <group>
                        <group>
                            <field name="name" />
                            <field name = "group_ids" invisible = "1"/>
                            <field name = "menu_ids" invisible = "1"/>
                        </group>
                    </group>
                
                <footer>
                    <button string="Create Template" class="oe_highlight" type="object" name="create_template" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record id="sh_create_template_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.template.wizard</field>
        <field name="view_mode">form</field>        
        <field name="target">new</field>
    </record>
</odoo>