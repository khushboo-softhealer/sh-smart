                           <field name="sh_stage_safe_stage_to_auto_close_ticket_ids" widget="many2many_tags" class="oe_inline" attrs="{'required':[('auto_close_ticket','=',True)]}" />
                        </div>
                        <div class="o_setting_left_pane" />
