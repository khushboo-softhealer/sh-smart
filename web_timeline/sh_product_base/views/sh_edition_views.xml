<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_edition_view_form" model="ir.ui.view">
        <field name="name">sh.edition.view.form</field>
        <field name="model">sh.edition</field>
        <field name="arch" type="xml">
            <form string="Edition">
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div> -->
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="sh_display_in_frontend"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_edition_view_tree" model="ir.ui.view">
        <field name="name">sh.edition.view.tree</field>
        <field name="model">sh.edition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="sh_edition_view_search" model="ir.ui.view">
        <field name="name">sh.edition.view.search</field>
        <field name="model">sh.edition</field>
        <field name="arch" type="xml">
            <search string="Edition">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="sh_edition_action" model="ir.actions.act_window">
        <field name="name">Edition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.edition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Edition</p>
        </field>
    </record>

    <menuitem id="sh_edition_menu" name="Edition " parent="sale.product_menu_catalog" action="sh_edition_action" sequence="5" />

</odoo>