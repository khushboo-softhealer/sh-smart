<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view -->
    <record id="sh_letter_template_form" model="ir.ui.view">
        <field name="name">sh.letter.template</field>
        <field name="model">sh.letter.template</field>
        <field name="arch" type="xml">
            <form string="Letter Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" invisible="1" />
                        </group>
                    </group>
                    <group>
                        <field name="content_html" nolabel="0" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Letter template tree view -->
    <record id="sh_letter_template_tree" model="ir.ui.view">
        <field name="name">sh.letter.template</field>
        <field name="model">sh.letter.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- MenuAction -->
    <record id="sh_letter_template_menu_action" model="ir.actions.act_window">
        <field name="name">Letter Template</field>
        <field name="res_model">sh.letter.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--  menuitem root -->
    <menuitem id="sh_letter_template_menuitem_root" sequence="2" action="sh_letter_template_menu_action" name="Letter Template" web_icon="sh_certificate,static/description/menu.png" />
</odoo>
