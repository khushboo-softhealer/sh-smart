<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id='theme_softhealer_base_ecom_megamenu_categ_tmpl' name='ecom categ tmpl'>
        <div class="col-xxl-9 col-xl-9 col-lg-6">
            <ul class="sh_sub_menu sh_apps">
            <h4 class="sh_heding_megamanu">APPS</h4>
            <div class="row">
                <t t-foreach="app_categories" t-as="app_category">
                        <div class="col-xxl-3 col-xl-3 col-lg-6 col-md-6 sh_mega">
                        <a t-attf-href="/shop/category/#{slug(app_category)}">
                            <div class="sh_icon">
                                <t t-raw='app_category.sh_svg_text'/>
                                <li class="sh_menu_item">
                                    <t t-esc='app_category.name'></t>
                                </li>
                            </div>
                        </a>
                    </div>
                </t>
            </div>
            </ul>
        </div>
        <div class="col-xxl-3 col-xl-3 col-lg-6">
            <ul class="sh_sub_menu">
                <h4 class="sh_heding_megamanu">THEMES</h4>
                <div class="row justify-content-center">
                    <t t-foreach="theme_categories" t-as="theme_category">
                        <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 sh_mega">
                        <a t-attf-href="/shop/category/#{slug(theme_category)}">
                            <div class="sh_icon">
                                <t t-raw='theme_category.sh_svg_text'/>
                                <li class="sh_menu_item">
                                    <t t-esc='theme_category.name'></t>
                                </li>
                            </div>
                        </a>
                    </div>
                    </t>
                </div>
            </ul>
        </div>
    </template>
    
    
    
    <template id="sh_softhealer_website_frontend_layout" name="Softhealer Signup Login Page" inherit_id="website.layout">
        <xpath expr="//main" position="replace">
            <t t-set="url" t-value="request.env['website'].sudo().browse().get_page()"/>
            <main t-att-class="'sh_website_login_singup' if url in ['/web/signup','/web/login','/web/reset_password','/web/login/totp'] else ''">
                    <t t-out="0"/>
            </main>
        </xpath>
    </template>
    
    <record id="sh_softhealer_website_view_website_form" model="ir.ui.view">
        <field name="name">sh.softhealer.website.view.website.form</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
            <field name="logo" position="after">
              <field name="sh_softhealer_website_logo_scrolled" widget="image" class="oe_avatar w-auto float-start"/>        
            </field>
        </field>
    </record>

    <record id="sh_website_contactus_thank_you" model="ir.ui.view">
        <field name="name">Thank you (Softhealer Contact us)</field>
        <field name="inherit_id" ref="website.contactus_thanks_ir_ui_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('container')]" position="attributes">
                <attribute name="class" separator=" " add="sh_cls_contact_us_thank_you"></attribute>
            </xpath>
        </field>
    </record>

