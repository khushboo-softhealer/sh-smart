<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.slides.pro</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_slides.res_config_settings_view_form"/>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_slides_selection_settings']" position="after">
                <h2>Proctoring</h2>
                <div class="row mt16 o_settings_container" id="proctoring_settings">
                    <div class="col-12 col-lg-7 o_setting_box" id="proctoring">
                        <div class="text-muted">
                            Select any Tool for Proctoring your survey/certifications.
                        </div>
                        <div class="mt16 o_setting_left_pane">
                            <field name="proctoring_selection" class="o_light_label" widget="radio"/>
                        </div>
                        <div class="mt16 o_setting_right_pane" style="margin-left: 170px;">
                            <div class="row mt16" attrs="{'invisible': [('proctoring_selection', '!=', 'autoproctor')]}">
                                <label for="autoproctor_client_id" class="col-lg-4 o_light_label" string="Client ID"/>
                                <field name="autoproctor_client_id" class="oe_inline"/>
                            </div>
                            <div class="row" attrs="{'invisible': [('proctoring_selection', '!=', 'autoproctor')]}">
                                <label for="autoproctor_client_secret" class="col-lg-4 o_light_label" string="Client Secret"/>
                                <field name="autoproctor_client_secret" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
