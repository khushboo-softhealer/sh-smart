<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="account_move_inherit_view" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="total_invoiced_timesheet_count_views" type="object" class="oe_stat_button" icon="fa-clock-o">
                        <!-- <i class="fa fa-fw o_button_icon fa-clock-o" />
                        <field name="total_invoiced_timesheet_count" string="View Timesheet" widget="statinfo"/> -->

                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="total_invoiced_timesheet_count" />
                                View
                            </span>
                            <span class="o_stat_text">
                                Timesheet's
                            </span>
                        </div>
                    </button>
            </xpath>
        </field>
    </record>
</odoo>