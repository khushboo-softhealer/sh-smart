<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="theme_mobiheal_website_helpdesk_form" name="Theme Mobiheal Helpdesk Form">
        <t t-call="website.layout">
            <div id="sh_website_support_banner" class="sh_website_other_page_banner">
                <t t-set="contactus_form_values" t-value="{
                    'name': request.params.get('name', ''),
                    'phone': request.params.get('phone', ''),
                    'email_from': request.params.get('email_from', ''),
                }" />
                <span class="hidden" data-for="frm_id" t-att-data-values="contactus_form_values" />
                
                <!-- Helpdesk Form banner start -->
                <section class="mb_support_banner o_colored_level" data-snippet="mb_support_tmpl" data-name="EventHeal" style="background-image: none;">
                    <div class="container">
                    <div class="row">
                        <div class="col-md-8 o_colored_level">
                        <div class="left_title">
                        <h1 class="elementor-heading-title elementor-size-default">Helpdesk</h1>
                        <p>To assist you promptly and effectively, please complete the following form with as much detail as possible. Your satisfaction is our top priority, and we look forward to resolving your issue.</p>		
                        </div>
                        </div>
                        <div class="col-md-4 o_colored_level">
                        <div class="right_img">
                            <img src="/theme_mobiheal_website/static/src/img/support/support.webp" alt="Event Management In Mobile" loading="lazy" data-original-title="" title="" aria-describedby="tooltip106905" style=""/>
                        </div>
                        </div>
                    </div>
                    </div>
                </section>
                <!-- Helpdesk Form banner end -->

                <section class="mb_support_form">
                    <form action="/support/ticket/submit" id="frm_id" method="POST" class="container form-horizontal sh_website_helpdesk_form mt32" enctype="multipart/form-data" data-pre-fill="true">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="mb_sub_box"> 
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <t t-set="readonly_name" t-value="False"/>
                                        <t t-set="readonly_email" t-value="False"/>
                                        <t t-if="request.env.user.has_group('base.group_portal') or request.env.user.has_group('base.group_user')">
                                            <t t-set="readonly_name" t-value="True"/>
                                            <t t-set="readonly_email" t-value="True"/>
                                        </t>
                                        <div t-attf-class="form-group #{error and 'contact_name' in error and 'has-error' or ''}">
                                            <label class="form-label" for="contact_name">Name</label>
                                            <input type="text" class="form-control" id="contact_name" name="contact_name" required="True" data-fill-with="name" t-att-readonly="readonly_name"/>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_name"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div name="email_from_container" t-attf-class="form-group #{error and 'email' in error and 'has-error' or ''}">
                                            <label class="form-label" for="email">Email</label>
                                            <input type="email" class="form-control" id="email" name="email" required="True" data-fill-with="email_form" t-att-readonly="readonly_email"/>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_email"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div name="mobile_from_container" t-attf-class="form-group #{error and 'mobile' in error and 'has-error' or ''}">
                                            <label class="form-label" for="mobile">Mobile</label>
                                            <input type="text" class="form-control" id="mobile" name="mobile" data-fill-with="phone"/>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_mobile"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="category">Category</label>
                                            <select class="form-control form-field o_website_form_required_custom" id="category" name="category" required="True">
                                                <option value="category" selected="True">Select Category</option>
                                                <t t-foreach="request.env['sh.helpdesk.category'].sudo().search([])" t-as="category">
                                                    <option t-att-data-name="category.name" t-att-value="category.id">
                                                        <t t-esc="category.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_category"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="ticket_type">Ticket Type</label>
                                            <!--  ++++++++++++++++++++++++++++++++++++++
                     Get ticket
                                            type from URL Query params
                     in order to use it in contact us
                                            page or any href link
                       ++++++++++++++++++++++++++++++++++++++  -->
                                            <t t-set="btn_type_id" t-value="ticket_type.get('ticket_type')"/>
            
                                            <select class="form-control form-field o_website_form_required_custom" id="ticket_type" name="ticket_type" required="True">
                                                <option value="type" selected="True">Select Type</option>
                                                <t t-foreach="request.env['sh.helpdesk.ticket.type'].sudo().search([('sh_display_in_frontend','=',True)])" t-as="type">
                                                    <t t-if="btn_type_id == type.id">
                                                        <option t-att-value="type.id" selected="True">
                                                            <t t-esc="type.name"/>
                                                        </option>
                                                    </t>
                                                    <t t-else="">
                                                        <option t-att-value="type.id">
                                                            <t t-esc="type.name"/>
                                                        </option>
                                                    </t>
                                                </t>
                                            </select>
            
                                            <!--  ++++++++++++++++++++++++++++++++++++++
                     Get ticket
                                            type from URL Query params
                     in order to use it in contact us
                                            page or any href link
                       ++++++++++++++++++++++++++++++++++++++  -->
            
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_type"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div id="products_div" class="o_hidden"/>
                                    </div>
                                    <div class="col-md-6" style="display: flex;align-items: center;">
                                        <div id="invoice_div" class="o_hidden">
                                            <label class="form-label" for="file">Invoice (Purchase Proof)</label>
                                            <label class="custom-file">
                                                <input name="invoice_file" id="invoice_file" type="file" multiple="multiple"/>
                                                <span class="custom-file-control"/>
                                            </label>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_invoice"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="edition">Edition</label>
                                            <select class="form-control form-field o_website_form_required_custom" id="edition" name="edition" required="True">
                                                <option value="odoo_edition" selected="True">Select Edition</option>
                                                <t t-foreach="request.env['sh.edition'].sudo().search([('sh_display_in_frontend','=',True)])" t-as="ed">
                                                    <option t-att-value="ed.id">
                                                        <t t-esc="ed.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_edition"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="edition">Odoo Hosted On</label>
                                            <select class="form-control form-field o_website_form_required_custom" id="hosted" name="hosted" required="True">
                                            </select>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_hosted"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="edition">Version</label>
                                            <select class="form-control form-field o_website_form_required_custom" id="version" name="version" required="True">
                                                <option value="odoo_version" selected="True">Select Version</option>
                                                <t t-foreach="request.env['sh.version'].sudo().search([])" t-as="v">
                                                    <option t-att-value="v.id">
                                                        <t t-esc="v.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_version"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <!-- <div class="col-md-6">
                                        <div t-attf-class="form-group">
                                            <label class="form-label" for="priority">Priority</label>
                                            <select class="form-control form-field o_website_form_required_custom" id="priority" name="priority">
                                                <option value="ticket_priority" selected="True">Select Priority</option>
                                                <t t-foreach="request.env['helpdesk.priority'].sudo().search([])" t-as="priority">
                                                    <option t-att-value="priority.id">
                                                        <t t-esc="priority.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div> -->
                                    <div class="col-12">
                                        <div t-attf-class="form-group #{error and 'description' in error and 'has-error' or ''}">
                                            <label class="form-label" for="description">Description</label>
                                            <textarea id="description" name="description" class="form-control form-field o_website_form_required_custom" placeholder="Description"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div name="file_container" t-attf-class="form-group #{error and 'file' in error and 'has-error' or ''}">
                                            <label class="form-label" for="file">Attachments</label>
                                            <label class="custom-file">
                                                <input name="file" id="file" type="file" multiple="multiple" t-att-data-attachment-size="file_size"/>
                                                <span class="custom-file-control"/>
                                            </label>

                                <input type="hidden" id="ticket_form_url" name="ticket_form_url" t-att-value="request.httprequest.url" /> 

                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <!-- <div class="col-md-6">
                                        <t t-if="google_recaptcha and google_captcha_site_key">
                                            <script src="https://www.google.com/recaptcha/api.js"/>
                                            <div t-attf-class="form-group #{error and 'description' in error and 'has-error' or ''}">
                                                <label class="form-label" for="reCAPTCHA">reCAPTCHA</label>
                                                <div class="g-recaptcha" t-attf-data-sitekey="#{google_captcha_site_key}"/>
                                            </div>
                                            <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_captcha"/>
                                        </t>
                                    </div> -->

                    <!-- CODE BY KISHAN GHELANI -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                                    <input name="recaptcha_token_response" type="hidden" />

                                <p class="alert alert-danger" style="margin-top:10px;display:none;" id="error_captcha"></p>
                          
                        </div>
                    </div>
                    
                                    <div class="form-group mb_button">
                                        <button id="submit_ticket" name="submit_ticket" class="btn btn-primary btn-lg">Submit Ticket <span class=" sh_link_right">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevrons-right" viewBox="0 0 24 24" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <polyline points="7 7 12 12 7 17"/>
                                                    <polyline points="13 7 18 12 13 17"/>
                                                </svg>
                                            </span>
                                        </button>
                                    </div>
                                </div>
            
                                
                                </div>
                            </form>
        
                        </section>
                <section class="sh_supprt_section">
                    <div class="container">
                        <div class="sh_support">
                            <div class="sh_support_row">
                                <div class="row">
                                    <div class="col-md-6 col-12 sh_support_time_col">
                                        <div class="sh_support_time">
