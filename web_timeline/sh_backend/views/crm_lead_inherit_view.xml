      <!--  View As Group By in Opportunity -->
      <record id="view_crm_case_opportunities_custom_inherit_filter" model="ir.ui.view">
            <field name="name">crm.lead.search.custom.inherit.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
      			<xpath expr="//group/filter[@name='country']" position="after">
      				<filter string="Opportunity" name="opportunity_id" context="{'group_by':'name'}" />
      			</xpath>
      		</field>
   		</record>

</odoo>