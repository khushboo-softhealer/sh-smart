<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_details_report_wizard_form" model="ir.ui.view">
        <field name="name">sh.sale.details.report.wizard.form</field>
        <field name="model">sh.sale.details.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Details">
                <group>
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="state" />
                    <field name="team_ids" options="{'no_create': True}" widget="many2many_tags" />
                    <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary" />
                    <button name="print_sale_detail_xls_report" string="Print Xls" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_sale_details_wizard_action" model="ir.actions.act_window">
        <field name="name">Sales Details Report</field>
        <field name="res_model">sh.sale.details.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="sh_custom_sale_details_report_menu" parent="sale.sale_menu_root" name="Sale Custom Report" sequence="99"  groups="sh_sale_reports.sh_group_sale_reports"/>
    <menuitem id="sh_sale_details_report_menuitem" action="sh_sale_details_wizard_action" groups="sales_team.group_sale_salesman_all_leads,sh_sale_reports.sh_sale_details_report_group" parent="sh_sale_reports.sh_custom_sale_details_report_menu" sequence="1" />
</odoo>
