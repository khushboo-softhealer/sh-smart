    <!-- 
        softhealer modified this teplate and added some condition in it
        only_passwords
        and  sh_token_and_not_invalid_token

    -->

    <template id="wk_auth_signup" inherit_id="auth_signup.signup" name="OTP Signup" priority="20">
        <xpath expr="//button[@type='submit']" position="before">
            
            <t t-set="sh_token_and_not_invalid_token" t-value="token and not invalid_token"/>
            
            <t t-set="enable_signup_auth" t-value="request.env['ir.default'].sudo().get('website.otp.settings', 'signup_auth')"/>
            <t t-if="enable_signup_auth == 1">

                <t t-if="not sh_token_and_not_invalid_token">
                    <span id="otpcounter">
                        <a class="btn btn-link wk_send" href="#">Send OTP</a>
                    </span>
                </t>

            </t>

            
            <div id="wk_loader"/>
        </xpath>
    </template>
</odoo>
