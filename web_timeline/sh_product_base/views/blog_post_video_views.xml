<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_blog_post_custom_form">
	        <field name="name">view.blog.post.custom.form</field>
	        <field name="model">blog.post</field>
	        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
	        <field name="arch" type="xml">
	     		<field name="website_id" position="after">       
					<!-- ShViewUpdate -->
         	 		<field name="sh_video" widget="many2many_tags" invisible="1"/>
					<!-- ShViewUpdate (Just Hide) -->
					<field name="sh_product_template_ids" widget="many2many_tags" invisible="1" />
					<!-- ShViewUpdate -->
         	 		<field name="blog_image" widget="image" invisible="1"/>
         	 		<!-- <field name="content" options="{'style-inline': true, 'resizable':true, 'codeview': true}"/> -->
					<!-- ShViewUpdate -->
         	 		<field name="buy_now" widget="url" invisible="1"/>
					<field name="website_meta_description"/>
					<field name="website_meta_keywords"/>
					<field name="website_meta_title"/>
	            </field>
				<xpath expr="//notebook" position="inside">
					<page name="blog_content" string="Blog Content">
						<field name="content" widget="html" options="{'style-inline': false, 'resizable':true, 'codeview': true}" />
					</page>
            	</xpath>
            </field>
        </record>

        <record id="view_blog_post_video_form" model="ir.ui.view">
			<field name="name">blog.post.video.form</field>
	      	<field name="model">blog.post.video</field>
	      	<field name="arch" type="xml">
	        	<form string="Video">
	         		<sheet>
	              		<group>
	                  		<group>
	                      		<field name="name"/>
	                      		<field name="link" widget='url'/>
	                      		<field name="active"/>
	                  		</group>
	              		</group>
					</sheet>
				</form>
			</field>
	 	</record>
    
	    <record id="view_blog_post_video_tree" model="ir.ui.view">
			<field name="name">blog.post.video.tree</field>
	      	<field name="model">blog.post.video</field>
	      	<field name="arch" type="xml">
	        	<tree string="Video">
	           		<field name="name"/>
	           		<field name="link" widget='url'/>
	           		<field name="active"/>
				</tree>
			</field>
	 	</record>
    
	    <record id="action_blog_post_video" model="ir.actions.act_window">
	        <field name="name">Video</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">blog.post.video</field>
	        <!-- <field name="view_type">form</field> -->
	        <field name="view_mode">tree,form</field>
	        <field name="view_id" ref="view_blog_post_video_tree"/>
	    </record>
	    
	 	<menuitem name ="Video"
	              id='menu_blog_post_video'
	              parent="website_blog.menu_website_blog_root_global"
	              action="action_blog_post_video"
	              sequence="1"
	              groups="sh_product_base.group_product_tags_manager"/>

	</data>
</odoo>