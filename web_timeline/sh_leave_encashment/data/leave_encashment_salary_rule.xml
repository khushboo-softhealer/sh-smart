<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_salary_rule_leave_encashment" model="hr.salary.rule">
        <field name="name">Leave Encashment</field>
        <field name="sequence" eval="500" />
        <field name="code">LE</field>
        <field name="category_id" ref="sh_hr_payroll.ALW" />
        <field name="condition_select">none</field>
        <field name="amount_select">code</field>
        <field name="amount_python_compute">result = contract.get_leave_encashment_data(employee,payslip)</field>
    </record>

    <record id="sh_leave_encasement" model="ir.cron">
        <field name="name">Sh Leave Encasement</field>
        <field name="model_id" ref="model_sh_leave_encasement"/>
        <field name="state">code</field>
        <field name="code">model.sh_leave_encasement_cron()</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>