<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="claim_user_wizard_form" model="ir.ui.view">
        <field name="name">claim.user.wizard.form</field>
        <field name="model">sh.claim.user.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="product_ids" invisible="1"/>
                        <field name="user_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Assign User" class="oe_highlight" type="object" name="assign_user" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
