<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="sh_goal_management_template_cron" model="ir.cron">
            <field name="name">Goal Management Template Cron</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 01:00:00')" />            
            <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet_template" />
            <field name="code">model.create_monthly_goal_template()</field>
            <field name="state">code</field>
        </record>

        <record model="ir.actions.server" id="model_mass_done_goal_sheet">
            <field name="name">Mass Done Goal Sheet</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="sh_employee_goal_management.model_sh_goal_sheet" />
            <field name="binding_model_id" ref="sh_employee_goal_management.model_sh_goal_sheet" />
            <field name="groups_id" eval="[(4, ref('project.group_project_manager'))]" />
            <field name="state">code</field>
            <field name="code">
                if record: records.sh_done_goal_sheet()
            </field>
        </record>
        
    </data>
</odoo>