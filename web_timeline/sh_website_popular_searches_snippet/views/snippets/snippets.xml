<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']"
            position="before">
            <div id="sh_website_popular_searches_snippet" t-if="request.env['website'].get_current_website().enable_website_popular_searches" class="o_panel">
                <div class="o_panel_header">Popular Searches</div>
                <div class="o_panel_body">
                    <t t-snippet="sh_website_popular_searches_snippet.s_sh_website_popular_searches"
                        string="Badges" />
                </div>
            </div>
        </xpath>
    </template>

</odoo>