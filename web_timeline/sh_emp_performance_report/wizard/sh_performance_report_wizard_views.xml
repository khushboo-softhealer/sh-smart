<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_performance_report_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.performance.report.wizard.view.form</field>
        <field name="model">sh.performance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name = "start_date" />
                            <field name = "end_date" />
                            <field name = "employee_ids" widget = "many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button  string="Print XLSx"  name = "print_xls_report" type = "object" class="oe_highlight"  />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_performance_report_wizard_view_action" model="ir.actions.act_window">
        <field name="name">Performance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.performance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>