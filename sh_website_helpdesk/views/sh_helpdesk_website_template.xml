    <template id="helpdesk_form" name="Helpdesk Form">
        <t t-call="website.layout">
            <div id="sh_website_support_banner" class="sh_website_other_page_banner">
                <t t-set="contactus_form_values" t-value="{
                    'name': request.params.get('name', ''),
                    'phone': request.params.get('phone', ''),
                    'email_from': request.params.get('email_from', ''),
                }" />
                <span class="hidden" data-for="frm_id" t-att-data-values="contactus_form_values" />
                
                <!-- Helpdesk Form banner start -->
                <section id="sh_store_banner"
                    class="sh_store_privacy_policy_banner sh_other_page_banner">
                    <div class="container">
                        <div class="sh_banner_content">
                            <h1 class="sh_banner_title">Helpdesk</h1>
                            <ul class="sh_banner_breadcrumb">
                                <li>
                                    <a class="sh_banner_breadcrumb_link" href="/">Home <span
                                            class="sh_banner_breadcrumb_icon fa fa-angle-right"></span>
                                    </a>
                                </li>
                                <li>
                                    <span class="sh_banner_normal_text">Support</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>
                <!-- Helpdesk Form banner end -->

                <form action="/support/ticket/submit" id="frm_id" method="POST" class="container form-horizontal sh_website_helpdesk_form mt32" enctype="multipart/form-data" data-pre-fill="true">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <t t-set="readonly_name" t-value="False" />
                            <t t-set="readonly_email" t-value="False" />
                            <t t-if="request.env.user.has_group('base.group_portal') or request.env.user.has_group('base.group_user')">
                                <t t-set="readonly_name" t-value="True" />
                                <t t-set="readonly_email" t-value="True" />
                            </t>
