<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_github_connector_view_blog_post_search" model="ir.ui.view">
        <field name="name">sh.github.connector.blog.post</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_search"/>
        <field name="arch" type="xml">
            
            <field name="blog_id" position="after">
                <field name="sh_product_id" />
            </field>

        </field>
    </record>

    <record id="sh_github_connetor_view_blog_post_form" model="ir.ui.view">
        <field name="name">sh.github.connector.view.form.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <!-- ====== Add Field ====== -->
            <field name="name" position="after">
                <field name="sh_product_id" attrs="{'readonly': [('sh_is_from_gitub', '=', True)]}" />
                <field name="sh_is_from_gitub" invisible="1" />
            </field>
            <!-- ====== Update Attributes ====== -->
            <field name="name" position="attributes">
                <attribute name="attrs">{'readonly': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="blog_id" position="attributes">
                <attribute name="attrs">{'readonly': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="author_id" position="attributes">
                <attribute name="attrs">{'readonly': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="post_date" position="attributes">
                <attribute name="attrs">{'readonly': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="content" position="attributes">
                <attribute name="attrs">{'readonly': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="subtitle" position="attributes">
                <attribute name="attrs">{'invisible': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
            <field name="tag_ids" position="attributes">
                <attribute name="attrs">{'invisible': [('sh_is_from_gitub', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>