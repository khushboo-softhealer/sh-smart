<odoo>
    <record id="sh_module_download_log_form" model='ir.ui.view'>
        <field name="name">sh.module.download.log.form</field>
        <field name="model">sh.module.download.log</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0" string="Module download log">
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="type"/>
                            <field name="download_count"/>
                        </group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="product_id"/>
                        </group>
                        <group string='Comment'></group>
                            <field name='download_comment'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='sh_module_download_log_tree' model='ir.ui.view'>
        <field name="name">sh.module.download.log.tree</field>
        <field name="model">sh.module.download.log</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name" invisible="1"/>
                <field name="partner_id"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="type"/>
                <field name="download_count" sum="Total Count"/>
                <field name='download_comment' optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="sh_module_download_log_search" model="ir.ui.view">
        <field name="name">sh.module.download.log.search</field>
        <field name="model">sh.module.download.log</field>
        <field name="arch" type="xml">
            <search string="Records">
                <field name="name" filter_domain="['|','|','|', ('name','ilike',self), ('partner_id','ilike',self),('sale_order_id','ilike',self),('product_id','ilike',self)]"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="download_comment"/>
                <filter string="Error" name="download_error" domain="[('type', '=', 'error')]" />
                <filter string="Info" name="download_success" domain="[('type', '=', 'info')]" />
                <group expand="0" string="Group by...">
                    <filter string="Sale Order" name="sale_order" context="{'group_by': 'sale_order_id'}" />
                    <filter string="User" name="user" context="{'group_by': 'partner_id'}" />
                    <filter string="Product" name="product" context="{'group_by': 'product_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_module_download_log_action" model="ir.actions.act_window">
        <field name="name">Module Download Log</field>
        <field name="res_model">sh.module.download.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Module Download Log
            </p>
        </field>
    </record>
</odoo>
