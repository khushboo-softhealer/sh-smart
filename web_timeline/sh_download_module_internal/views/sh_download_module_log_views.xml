<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="sh_download_module_log_view_search" model="ir.ui.view">
        <field name="name">sh_download_module_log.view.search</field>
        <field name="model">sh.download.module.log</field>
        <field name="arch" type="xml">
            <search string="Download Module Log">
                <field name="task_id" string="Any" filter_domain="['|', '|', '|', '|', ('create_uid', 'ilike', self), ('for_which', '=', self), ('project_id', 'ilike', self), ('task_id', 'ilike', self), ('ticket_id', 'ilike', self)]"/>
                <separator/>
                <filter string="For Ticket" name="for_ticket" domain="[('for_which', '=', 'ticket')]"/>
                <filter string="For Project" name="for_project" domain="[('for_which', '=', 'project')]"/>
                <filter string="Migration Requests" name="migration_req" domain="[('is_for_migration', '=', True)]"/>
                <separator/>
                <group name="module_req_group" string="Module Requests Group By">
                    <filter name="for_which" string="For Which" context="{'group_by': 'for_which'}" />
                    <filter name="create_uid" string="User" context="{'group_by': 'create_uid'}" />
                    <filter name="project_id" string="Project" context="{'group_by': 'project_id'}" />
                    <filter name="task" string="Task" context="{'group_by': 'task_id'}" />
                    <filter name="ticket_id" string="Ticket" context="{'group_by': 'ticket_id'}" />
                    <filter name="group_by_migration_req" string="Migration Request" context="{'group_by': 'is_for_migration'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="sh_download_module_log_view_tree" model="ir.ui.view">
        <field name="name">sh_download_module_log.view.tree</field>
        <field name="model">sh.download.module.log</field>
        <field name="arch" type="xml">
            <tree string="Download Module Log">
                <field name="create_date" string="Date" />
                <field name="create_uid" string="User" />
                <field name="for_which" optional="show" />
                <field name="project_id" optional="show" />
                <field name="task_id" optional="show" />
                <field name="ticket_id" optional="show" />
                <!-- <field name="user_id" /> -->
                <field name="module_ids" widget="many2many_tags" />
                <field name="is_for_migration" optional="show" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_download_module_log_action" model="ir.actions.act_window">
        <field name="name">Download Module Log</field>
        <field name="res_model">sh.download.module.log</field>
        <field name="view_mode">tree</field>
        <field name="context">{'create': False}</field>
    </record>

</odoo>