<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_order_wizard_view" model="ir.ui.view">
        <field name="name">sale.order.report</field>
        <field name="model">sale.order.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date" />
                            <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                        </group>
                        <group>
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button string="Report" name="generate_report_data" type="object" default_focus="1" class="btn-primary" />
                        <button name="print_sale_order_day_wise" string="Print Xls" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_order_day_wise" model="ir.actions.act_window">
        <field name="name">Day Wise Sales Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="sale_order_day_wise_report" action="action_sale_order_day_wise" parent="sh_sale_reports.sh_custom_sale_details_report_menu" groups="sales_team.group_sale_salesman_all_leads,sh_sale_reports.sh_day_wise_sales_group" sequence="3" />
</odoo>
