<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_hr_contract_form_view_inherit" model="ir.ui.view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_type_id']" position="before">
                    <label for="contract_type" />
                    <div class="o_row">
                        <field name="contract_period" />
                        <field name="contract_type" />
                    </div>
                    <field name="days_extend" />
                    <field name="allocation_id" invisible="1" />
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="allocate_leave" string="Leave Allocation" class="btn-primary"
                        type="object" attrs="{'invisible':[('allocation_id','!=',False)]}" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_allocation" type="object" style="font-size:12px;"
                        class="oe_stat_button" icon="fa-bars"
                        attrs="{'invisible':[('allocation_id','=',False)]}">
                        Leave Allocation
                    </button>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_allocation_leaves" type="object"
                        style="font-size:12px;" class="oe_stat_button" icon="fa-bars"
                        attrs="{'invisible':[('leaves_count','=',0)]}">
                        <field name="leaves_count" widget="statinfo" string="Leaves" />
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
