<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_payment_report_wizard_form" model="ir.ui.view">
        <field name="name">sh.payment.report.wizard.form</field>
        <field name="model">sh.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice Payment Report">
                <group>
                    <group>
                        <field name="date_start" />
                        <field name="state" />
                    </group>
                    <group>
                        <field name="date_end" />
                        <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                    </group>
                </group>
                <group>
                    <field colspan="4" nolabel="1" name="user_ids" options="{'no_create': True}" groups="sh_sale_reports.sh_payment_report_group">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" />
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_payment_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Invoice Payment Report</field>
        <field name="res_model">sh.payment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="sh_payment_report_wizard_menuitem" action="sh_payment_report_wizard_action" parent="sh_sale_reports.sh_custom_sale_details_report_menu" groups="sh_sale_reports.sh_payment_report_group" sequence="2" />
</odoo>
