<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_timesheet_report_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.timesheet.report.wizard.view.form</field>
        <field name="model">sh.timesheet.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="group_by_task" />
                            <field name="sh_is_task_desc_needed" attrs="{'invisible':[('group_by_task','=',False)]}"/>
                            <field name="is_lock" groups="project.group_project_manager"/>
                            <field name="account_analytic_line_ids" widget="many2many_tags"
                                invisible="1" />
                        </group>
                        <group>
                        <field name="invoice_id"  groups="project.group_project_manager"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button class="btn btn-primary" name="print_timesheet_report" string="Print"
                        type="object" />
                    <button class="btn btn-primary" name="print_timesheet_xls_report"
                        string="XLS Print" type="object" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>