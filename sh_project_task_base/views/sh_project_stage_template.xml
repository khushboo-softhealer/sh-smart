<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_project_stage_template_view_form" model="ir.ui.view">
        <field name="name">Project Task Stage Template</field>
        <field name="model">sh.project.stage.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="stage_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="sh_pricing_mode" />
                            <field name="sh_fp_based_on" attrs="{'invisible': [('sh_pricing_mode', '!=', 'fp')], 'required': [('sh_pricing_mode', '=', 'fp')]}" />
                            <field name="sh_tm_based_on" attrs="{'invisible': [('sh_pricing_mode', '!=', 'tm')], 'required': [('sh_pricing_mode', '=', 'tm')]}" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_project_stage_template_view_tree" model="ir.ui.view">
        <field name="name">Project Task Stage Template</field>
        <field name="model">sh.project.stage.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="stage_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <!-- sh.project.stage.template action window -->
    <record id="sh_project_stage_template_action" model="ir.actions.act_window">
        <field name="name">Project Task Stage Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.project.stage.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Project Task Stage Template</p>
        </field>
    </record>
</odoo>
