<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_helpdesk_stages_form_view" model='ir.ui.view'>
			<field name="name">sh.helpdesk.stages.form.view</field>
			<field name="model">sh.helpdesk.stages</field>
			<field name="arch" type="xml">
				<form string="Stage">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="mail_template_ids" widget="many2many_tags"/>
								<field name="is_cancel_button_visible"/>
								<field name="is_done_button_visible"/>
								<field name="sh_visible_to_support_user"/>
							</group>
							<group>
								<field name="fold"/>
								<field name="sh_next_stage"/>
								<field name="sh_group_ids" widget="many2many_tags"/>
								<field name="sh_portal_stage_name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="sh_helpdesk_stages_tree_view" model='ir.ui.view'>
			<field name="name">sh.helpdesk.stages.tree.view</field>
			<field name="model">sh.helpdesk.stages</field>
			<field name="arch" type="xml">
				<tree string="Stage">
					<field name="sequence" widget="handle"/>
					<field name="name"/>
					<field name="fold"/>
				</tree>
			</field>
		</record>
		<record id="sh_helpdesk_stages_action" model="ir.actions.act_window">
     		<field name="name">Helpdesk Stages</field>
          	<field name="res_model">sh.helpdesk.stages</field>
          	
          	<field name="view_mode">tree,form</field>
          	<field name="help" type="html">
              	<p class="oe_view_nocontent_create">Create a New Stage</p>
          	</field>
    	</record>
    	<record id="sequence_sh_helpdesk_stages_seq" model="ir.sequence">
	        <field name="name">Helpdesk Stages Sequence</field>
	        <field name="code">sh.helpdesk.stages</field>
	        <field eval="1" name="number_next"/>
	        <field eval="1" name="number_increment"/>
    	</record>
    	<menuitem id="sh_helpdesk_stages_menu" name="Helpdesk Stages" parent="sh_helpdesk.helpdesk_config_menu" action="sh_helpdesk_stages_action" sequence="5"/>
	</data>
</odoo>