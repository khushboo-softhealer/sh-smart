<odoo>
    <record id="sh_git_repo_form" model='ir.ui.view'>
        <field name="name">sh.git.repo.form</field>
        <field name="model">sh.git.repo</field>
        <field name="arch" type="xml">
            <form string="Git Repo">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="repo_link" required="1"/>
                        <field name="responsible_user"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='sh_git_repo_tree' model='ir.ui.view'>
        <field name="name">sh.git.repo.tree</field>
        <field name="model">sh.git.repo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="repo_link"/>
                <field name="responsible_user"/>
            </tree>
        </field>
    </record>
    <record id="sh_git_repo_action" model="ir.actions.act_window">
        <field name="name">Git Repo</field>
        <field name="res_model">sh.git.repo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Git Repo
            </p>
        </field>
    </record>
    <menuitem name="Git Repo" action="sh_git_repo_action" id="sh_git_repo_root" groups="sh_product_base.group_product_tags_manager" parent="sale.menu_sale_config" sequence="15"/>
