<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_hr_payslip_inherited_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.inherit.view.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="sh_hr_payroll.view_hr_payslip_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//header//button[1]" position="before">
                <button class="btn btn-primary" name="print_payslip" type="object"
                    string="Print Payslip" />
            </xpath>
        </field>
    </record>
</odoo>