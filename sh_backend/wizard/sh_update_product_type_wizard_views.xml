<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mass_update_product_type_form" model="ir.ui.view">
        <field name="name">sh.update.product.type.wizard.form</field>
        <field name="model">sh.update.product.type.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                    <field name="product_type_id" />
                </group>
            </group>

            <footer>
                <button  string="Update Product Type"  class="oe_highlight" type="object" name="mass_update_product_type" />
                <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_mass_update_product_type" model="ir.actions.act_window">
        <field name="name">Mass Update Product Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.update.product.type.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
