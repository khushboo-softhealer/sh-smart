<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_for_Partner_categ" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='general_settings']/div[@id='invite_users']" position="after">
                    <div id='default_partner_category'>
                        <h2>Default Partner Category</h2>
                        <div class="row o_settings_container" name="partner_category">
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="sh_partner_categ" />
                                    <field name="sh_partner_categ" />
                                </div>
                                <div class="o_setting_left_pane"></div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>