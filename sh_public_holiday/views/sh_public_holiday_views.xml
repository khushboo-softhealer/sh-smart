<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sh.public.holiday View Tree -->
    <record id="view_sh_public_holiday_tree" model="ir.ui.view">
        <field name="name">view.sh.public.holiday.tree</field>
        <field name="model">sh.public.holiday</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="sh_from_date" />
                <field name="sh_to_date" />
                <field name="sh_working_schedule_ids" widget="many2many_tags" />
                <field name="sh_state" widget="badge" decoration-success="sh_state == 'done'"
                    decoration-info="sh_state == 'draft'" decoration-warning="sh_state == 'approve'" />
            </tree>
        </field>
    </record>

    <!-- View sh.public.holiday form -->
    <record id="view_sh_public_holiday_form" model="ir.ui.view">
        <field name="name">view.sh.public.holiday.form</field>
        <field name="model">sh.public.holiday</field>
        <field name="arch" type="xml">
            <form string="Sh Public Holiday">
                <header>
                    <button string="Approve" name="approve_stage" type="object" class="oe_highlight"
                        attrs="{'invisible':[('sh_state','!=','draft')]}" />
                    <button string="Send Mail" name="action_send_email" type="object"
                        class="oe_highlight" attrs="{'invisible':[('sh_state','!=','done')]}" />
                    <button string="Auto fill data to Working Schedule" name="create_leaves"
                        type="object" class="oe_highlight"
                        attrs="{'invisible':[('sh_state','!=','approve')]}" />
                    <button string="Set to Draft" name="set_to_draft"
                        type="object" class="oe_highlight"
                        attrs="{'invisible':[('sh_state','==','draft')]}" />
                    <field name="sh_state" widget="statusbar" class="me-3"
                        statusbar_visible="draft,approve,done" options="{'clickable': '1'}" />
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <label for="sh_from_date" string="Select Dates" />
                            <div name="dates" class="o_row">
                                <field name="sh_from_date" widget="daterange"
                                    options="{&quot;related_end_date&quot;: &quot;sh_to_date&quot;}"
                                    required="1" attrs="{'readonly':[('sh_state','=','done')]}" />
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only"
                                    aria-label="Arrow icon" title="Arrow" />
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only"
                                    aria-label="Arrow icon" title="Arrow"
                                    attrs="{'invisible': [('sh_from_date', '=', False), ('sh_to_date', '=', False)]}" />
                                <field name="sh_to_date" widget="daterange"
                                    options="{&quot;related_start_date&quot;: &quot;sh_from_date&quot;}"
                                    required="1" attrs="{'readonly':[('sh_state','=','done')]}" />
                            </div>
                        </group>
                    </group>

                    <group>
                        <field name="sh_working_schedule_ids" required="1" widget="many2many_tags"
                            attrs="{'readonly':[('sh_state','=','done')]}"
                            options="{'no_create': True}" />
                    </group>
                    <notebook>


                        <page name="Holiday Leaves" string="Leave Details">
                            <field name="sh_working_hours_lines"
                                attrs="{'readonly':[('sh_state','=','done')]}">
                                <tree editable="bottom">
                                    <field name="sh_public_holiday_id" invisible="1" />
                                    <field name="name" placeholder="Add a Reason..." required="1" />
                                    <field name="sh_start_date" required="1" />
                                    <field name="sh_end_date" required="1" />
                                </tree>
                            </field>
                        </page>

                        <page name="Employees" string="Employees">
                            <field name="employees" widget="many2many_tags" required="1"
                                attrs="{'readonly':[('sh_state','=','done')]}"
                                options="{'no_create': True}" />
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>


    <!-- View sh.public.holiday search -->
    <record id="view_sh_public_holiday_search" model="ir.ui.view">
        <field name="name">view.sh.public.holiday.search</field>
        <field name="model">sh.public.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="sh_from_date" />
                <field name="sh_to_date" />
                <field name="sh_state" />
                <filter string="Date" name="filter_by_from_date" date="sh_from_date" />

                <group name="name" string="string">
                    <filter name="group_by_from_date" string="From Date"
                        context="{'group_by' : 'sh_from_date'}" />
                    <filter name="group_by_to_date" string="To Date"
                        context="{'group_by' : 'sh_to_date'}" />
                    <filter name="group_by_stages" string="Stage"
                        context="{'group_by' : 'sh_state'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action sh.public.holiday -->
    <record id="sh_public_holiday_action" model="ir.actions.act_window">
        <field name="name">Public Holiday</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.public.holiday</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem parent="sh_hr_dashboard.sh_configuration_detail_menu" id="sh_public_holiday_menu"
        name="Working Public Holiday" action="sh_public_holiday.sh_public_holiday_action" />

</odoo>