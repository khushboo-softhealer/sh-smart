<?xml version="1.0"?>
<odoo>
	<!-- Sh Company Facilities views and action -->
	<record id="sh_company_facilities_form_view" model="ir.ui.view">
            <field name="name">sh.company.facilities.form</field>
            <field name="model">sh.company.facilities</field>
            <field name="arch" type="xml">
                <form string="Company Facilities">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
        
    <record id="sh_company_facilities_tree_view" model="ir.ui.view">
        <field name="name">sh.company.facilities.tree</field>
        <field name="model">sh.company.facilities</field>
        <field name="arch" type="xml">
            <tree string="Company Facilities">
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>
        
    <record id="sh_company_facilities_search_view" model="ir.ui.view">
        <field name="name">sh.company.facilities.search</field>
        <field name="model">sh.company.facilities</field>
        <field name="arch" type="xml">
            <search string="Company Facilities">
                <group expand='0' string='Group by...'>
                    <filter string="Company Facilities" name="name" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>     
     
	<record id="sh_company_facilities_view_actions" model="ir.actions.act_window">
	            <field name="name">Company Facilities</field>	          
	            <field name="res_model">sh.company.facilities</field>
	            <field name="view_mode">tree,form</field>
	</record>
</odoo>