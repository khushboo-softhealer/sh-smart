<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_update_college_stage_form" model="ir.ui.view">
        <field name="name">sh.college.change.stages.wizard.form</field>
        <field name="model">sh.college.change.stages.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="stage_id" />
                    </group>
                </group>
                <footer>
                    <button string="Change College Stage" class="oe_highlight" type="object"
                        name="change_state_action" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"
                        icon="fa-remove" />
                </footer>
            </form>

        </field>
    </record>

    <record id="action_mass_update_college_stage" model="ir.actions.act_window">
        <field name="name">Mass Update College Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.college.change.stages.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>