<?xml version="1.0"?>
<odoo>
    <!-- Employee Task Allocation - User(Employee/Assigned Person) Rules     -->
    <record id="sh_employee_task_allocation_rule_user" model="ir.rule">
        <field name="name">Allocation User Rules</field>
        <field name="model_id" ref="model_sh_employee_task_allocation" />
        <field name="domain_force">[('sh_employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]" />
    </record>
    
