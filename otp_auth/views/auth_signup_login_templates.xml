<odoo>


    <!-- 
        softhealer modified this teplate and added some condition in it
        only_passwords
        and  sh_token_and_not_invalid_token

    -->
    <template id="wk_auth_signup_fields" inherit_id="auth_signup.fields" name="OTP Fields" priority="20">
        <xpath expr="//div[hasclass('field-confirm_password')]" position="after">
            <t t-set="enable_signup_auth" t-value="request.env['ir.default'].sudo().get('website.otp.settings', 'signup_auth')"/>
            <t t-if="enable_signup_auth == 1">

                <t t-set="sh_token_and_not_invalid_token" t-value="token and not invalid_token"/>
                <t t-set="otp_type" t-value="request.env['ir.default'].sudo().get('website.otp.settings', 'otp_type')"/>
                <div class="form-group" id="wkotp" style="display: none;">
                    <t t-if="not sh_token_and_not_invalid_token">
                        <input t-if="not only_passwords" id="otp" name="otp" class="form-control form-control-sm" placeholder="Enter OTP" required="required" t-att-type="'password' if otp_type=='3' else 'text'" maxlength="6"/>
                    </t>
           
                </div>
            </t>
        </xpath>
    </template>


