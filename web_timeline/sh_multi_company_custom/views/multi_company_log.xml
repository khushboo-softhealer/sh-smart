<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_sh_multi_company_log_form">
        <field name="name">sh.multi.company.change.log.form</field>
        <field name="model">sh.multi.company.change.log</field>
        <field name="arch" type="xml">
            <form string="Multi Company Change Logs" create="0" edit="0" delete="0">
               
                <sheet>
                    <group>
                       <h1><field name="name"/></h1> 
                    </group>
                    <group >
                        <group>
                            <field name="company_id"/>
                            <field name="user_id"/>
                            <field name="change_date"/>
                        </group>
                        <group>
                            <field name="field_name"/>
                            <field name="label"/>
                            <field name="new_value"/>
                        </group>
                       
                    </group>
                
                </sheet>
               
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="view_multi_company_change_log_tree">
        <field name="name">sh.multi.company.change.log.tree</field>
        <field name="model">sh.multi.company.change.log</field>
        <field name="arch" type="xml">
            <tree string="Multi Company Change Log" create="0" edit="0" delete="0">
                <field name="name"/>
               <field name="company_id"/>
               <field name="user_id"/>
               <field name="field_name"/>
               <field name="label"/>
               <field name="new_value"/>
               <field name="change_date"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_sh_multi_company_change_log">
        <field name="name">Multi Company Change Log</field>
        <field name="res_model">sh.multi.company.change.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_multi_company_change_log_menu" name="Multi Company Change Log"
        parent="base.menu_administration" sequence="3"
        groups="base.group_system"
        action="action_sh_multi_company_change_log" />

</odoo>
