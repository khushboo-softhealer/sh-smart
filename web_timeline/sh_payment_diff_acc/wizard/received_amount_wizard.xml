<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_received_amount_view_form" model="ir.ui.view">
        <field name="name">sh.received.amount.view.form</field>
        <field name="model">sh.received.amount</field>
        <field name="arch" type="xml">
            <form string="">
                
                <group>
                    <group>
                        <field name="received_amount"/>
                        <field name = "payment_ids" widget = "many2many_tags" invisible = "1"/>
                        <!-- <field name="currency_id" invisible="1"/>
                        <field name="company_id" invisible="1"/> -->
                    </group>
                </group>
                
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="confirm_actual_received_payment"></button>
                    <button string="Cancel" special="cancel"></button>
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_received_amount_view_action" model="ir.actions.act_window">
        <field name="name">Received Amount</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.received.amount</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
       
    </record>
</odoo>