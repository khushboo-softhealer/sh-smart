<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_sh_license_form" model="ir.ui.view">
		<field name="name">sh.license.form</field>
      	<field name="model">sh.license</field>
      	<field name="arch" type="xml">
        	<form string="Sh License">
         		<sheet>
              		<group>
                  		<group>
                      		<field name="name"/>
                  		</group>
              		</group>
				</sheet>
			</form>
		</field>
 	</record>
    
    
    <record id="view_sh_license_tree" model="ir.ui.view">
		<field name="name">sh.license.tree</field>
      	<field name="model">sh.license</field>
      	<field name="arch" type="xml">
        	<tree string="License">
           		<field name="name"/>
			</tree>
		</field>
 	</record>
 	
 	<record id="action_sh_license" model="ir.actions.act_window">
        <field name="name">License</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.license</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sh_license_tree"/>
    </record>
 	
 	<menuitem name ="License"
              id='menu_sh_license'
              parent="sale.product_menu_catalog"
              action="action_sh_license"
              sequence="4"
              groups="sh_product_base.group_product_tags_manager"/>
</odoo>