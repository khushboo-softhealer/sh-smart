<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings for Many2one field -->
    <record id="sh_web_stop_quick_create_m2o_field_res_settings" model="ir.ui.view">
        <field name="name">Models for Many2one Field</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='general_settings']//div" position="before">
                <h2>Models for Many2one Field</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_model_ids"/><br/>
                            <field name="sh_model_ids" widget="many2many_tags" class='w-100'/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
