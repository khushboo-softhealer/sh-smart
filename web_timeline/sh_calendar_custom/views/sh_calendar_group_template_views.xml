<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Calendar group template view Form -->
    <record id="sh_calendar_group_template_view_form" model="ir.ui.view">
        <field name="name">sh.calendar.group.template.view.form</field>
        <field name="model">sh.calendar.group.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="partner_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar group template view Tree -->
    <record id="sh_calendar_group_template_view_tree" model="ir.ui.view">
        <field name="name">sh.calendar.group.template.view.tree</field>
        <field name="model">sh.calendar.group.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="partner_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- Calendar group template Action -->
    <record id="sh_calendar_group_template_action" model="ir.actions.act_window">
        <field name="name">Calendar Group Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.calendar.group.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_calendar_group_template_menu" name="Group Template"
        parent="calendar.mail_menu_calendar" action="sh_calendar_group_template_action"
        groups="sh_project_task_base.group_project_officer" sequence="1" />

    <record id="calendar.calendar_menu_config" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('base.group_system')])]" />
        <field name="parent_id" ref="calendar.mail_menu_calendar"></field>
        <field name="action" ref="calendar.action_calendar_event"/>
    </record>


    <record id="note.menu_note_configuration" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('base.group_system')])]" />
    </record>

</odoo>