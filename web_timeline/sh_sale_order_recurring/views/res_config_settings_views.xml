<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_sale_recurring_config_setting_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2>Sale Order Recurring Signature Configuration</h2>
                <div class="row o_settings_container">
                    <div class="col-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_sale_online_signature" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_sale_online_signature" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
