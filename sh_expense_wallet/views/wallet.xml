<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_wallet_detail_form" model="ir.ui.view">
        <field name="name">sh.wallet.detail.form</field>
        <field name="model">sh.wallet</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="btn btn-primary" name="%(sh_expense_wallet.action_sh_wallet_transaction_wizard_view)d"  type="action"   string="Add Payment" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>     
                            <field name="user_id" />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>

                    <field name="transaction_ids">
                        <tree editable="bottom" create="0" delete="0" edit="0">  
                            <field name="date"/>
                            <field name = "desc"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1" />
                        </tree>
                    </field>

                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                   
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="wallet_amount" />
                            </div>
                            <field name="wallet_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                        </group>
                        <div class="oe_clear" />
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_wallet_detail_tree" model="ir.ui.view">
        <field name="name">sh.wallet.detail.tree</field>
        <field name="model">sh.wallet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id" />
                <field name="currency_id" invisible="1" />
                <field name="wallet_amount" />
            </tree>
        </field>
    </record>

    <record id="sh_wallet_action" model="ir.actions.act_window">
        <field name="name">Wallet</field>
        <field name="res_model">sh.wallet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Wallet for Employee</p>
        </field>
    </record>

    <menuitem   name="Wallet" 
                action="sh_wallet_action" 
                id="sh_wallet_action_menu" 
                parent="hr_expense.menu_hr_expense_my_expenses" 
                sequence="999"
                groups="sh_expense_wallet.group_expense_wallet"
                />
       
   
</odoo>