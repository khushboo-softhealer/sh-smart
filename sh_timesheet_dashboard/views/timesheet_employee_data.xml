<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_timesheet_employee_tbl" name="Employee">
		<div id="js_id_sh_crm_activity_done_tbl_div" class=""> 			
      <t t-if="not activities">
          <p>There are currently no activity done for your account.</p>
      </t>				

      <t t-if="activities">
        <!-- <t t-esc="activities"/> -->
        <table class="table table-bordered">
        <thead>
            <tr style="font-size: 15px;">
              <th colspan="6" class="text-start">Your Employee Data</th>
            </tr>                
            <tr class="active">
              <th>#</th>
              <th >Name</th>
              <th >Hours</th>
            </tr>
          </thead>
          <tbody>
          <t t-set="counter" t-value="1"/>          
          <t t-foreach="activities" t-as="activity">
            <tr>
              <td> <span t-esc="counter"/> </td>
              <td> <span t-esc="activity"/> </td>
              <td> <span t-esc="activities[activity]" t-options='{"widget": "float_time"}'/> </td>              
              <t t-set="counter" t-value="counter + 1"/>
            </tr>
          </t>            
          </tbody>
          </table>
        </t>
		</div>
    </template>
</odoo>
