<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_helpdesk_tickets_invoice_inherited_view_form" model="ir.ui.view">
        <field name="name">sh.sh.helpdesk.tickets.so.view.form</field>
        <field name="model">sh.helpdesk.ticket</field>
        <!-- <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/> -->
        <field name="inherit_id" ref="sh_helpdesk.helpdesk_ticket_form_view" />
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <button class="btn btn-primary" name="action_create_invoice" type="object" string="Create Invoice" groups="sh_helpdesk_invoice.sh_helpdesk_ticket_invoice" />
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="invoice_counts" type="object" class="oe_stat_button" icon="fa-pencil-square-o" context="{'partner_id': partner_id}" groups="sh_helpdesk_invoice.sh_helpdesk_ticket_invoice" attrs="{'invisible':[('invoice_count','=',0)]}">
                    <div class="o_stat_info">
                        <field name="invoice_count" class="o_stat_value" />
                        <span class="o_stat_text">Invoices</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
