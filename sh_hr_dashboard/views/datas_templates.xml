					<p>Subject</p>
				</div>
				<div class="col-3">
					<p>Category</p>
				</div>
				<div class="col-3 col_space">
					<p>Date</p>
				</div>   
				<div class="col-3">
					<p>Status</p>
				</div>               								
			</div>
			
			<t t-if="complains">
			
				<t t-foreach="complains" t-as="complain">
				
