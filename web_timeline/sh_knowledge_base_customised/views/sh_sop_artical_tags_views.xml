<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sop_article_tags_view_tree" model="ir.ui.view">
        <field name="name">sh.sop.article.tags.view.tree</field>
        <field name="model">sh.sop.article.tags</field>
        <field name="type">tree</field>          
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/> 
                <field name="color" widget="color_picker"/>              
            </tree>           
        </field>
    </record>
    <record id="sh_sop_article_tags_action" model="ir.actions.act_window">
        <field name="name">SOP Article Tags</field>
        <field name="type">ir.actions.act_window</field>           
        <field name="res_model">sh.sop.article.tags</field>
        <field name="view_mode">tree</field>
    </record>    
</odoo>