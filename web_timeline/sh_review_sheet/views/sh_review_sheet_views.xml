<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sh.review.sheet form -->
    <record id="view_sh_review_sheet_form" model="ir.ui.view">
        <field name="name">view.sh.review.sheet.form</field>
        <field name="model">sh.review.sheet</field>
        <field name="arch" type="xml">
            <form string="Review Sheet">
                <header>
                    <field name="state" widget="statusbar" />
                    <button name="close_sheet" string="Close" type="object" class="btn-primary" states="new"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="project_id"/>
                        <h1>
                            <field name="project_id" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_ids" widget="many2many_tags" readonly="1"/>
                            <label for="from_date" string="Select Dates" />
                            <div name="dates" class="o_row">
                                <field name="from_date" widget="daterange" options="{&quot;related_end_date&quot;: &quot;to_date&quot;}" required="1" readonly="1" />
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow" />
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('from_date', '=', False), ('to_date', '=', False)]}" />
                                <field name="to_date" widget="daterange" options="{&quot;related_start_date&quot;: &quot;from_date&quot;}" required="1" readonly="1" />
                            </div>
                        </group>

                        <group>
                            <field name="project_manager" readonly="1"/>
                            <field name="technical_head" readonly="1"/>
                            <field name="designing_head" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="review" string="Review">
                            <field name="review_sheet_line">
                                <tree edit="1" create="0" delete="0" editable="bottom">
                                    <field name="review_sheet_id" attrs="{'column_invisible':True}"/>
                                    <field name="user_id" readonly="1"/>
                                    <field name="project_responsible_type" readonly="1"/>
                                    <field name="project_responsible_id" readonly="1"/>
                                    <field name="ratings" widget="priority" />
                                    <field name="review" />
                                    <field name="timesheet" widget="timesheet_uom" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="sh_review_sheet_view_search" model="ir.ui.view">
        <field name="name">sh_review_sheet.view.search</field>
        <field name="model">sh.review.sheet</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="project_id" />
                <field name="from_date" />
                 <field name="to_date"/>
                <field name="project_manager"/>
                <field name="technical_head"/>
                <field name="designing_head"/>
                <filter string="New" name="new" domain="[('state','=', 'new')]"/>
                <filter string="Closed" name="close" domain="[('state','=', 'close')]"/>
                <group expand="0" string="Group By">
                    <filter name="project_id" string="Project" domain=""
                            context="{'group_by':'project_id'}"/>
                    <filter name="from_date" string="From date" domain="[]" context="{'group_by':'from_date'}"/>
                    <filter name="to_date" string="To date" domain="[]" context="{'group_by':'to_date'}"/>
                    <filter name="project_manager" string="Project Manager" domain="[]" context="{'group_by':'project_manager'}"/>
                    <filter name="technical_head" string="Technical head" domain="[]" context="{'group_by':'technical_head'}"/>
                    <filter name="designing_head" string="Designing head" domain="[]" context="{'group_by':'designing_head'}"/>
                    <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="employees" string="Employees" domain="[]" context="{'group_by':'user_ids'}"/>

                </group>
            </search>
        </field>
    </record>
     <record id="sh_review_sheet_view_tree" model="ir.ui.view">
        <field name="name">sh_review_sheet.view.tree</field>
        <field name="model">sh.review.sheet</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="project_id" />
                <field name="from_date" />
                 <field name="to_date" />
                 <field name="project_manager" />
                <field name="technical_head" />
                 <field name="designing_head" />
            </tree>
        </field>
    </record>

    <record id="sh_review_action" model="ir.actions.act_window">
        <field name="name">Review Sheet Name</field>
        <field name="res_model">sh.review.sheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="model_name_menu" name="Review Sheet" 
    groups="sh_review_sheet.group_review_sheet_admin" 
    action="sh_review_action" 
    parent="sh_review_sheet.sh_review_sheet_menu" 
    sequence="10" 
    />

</odoo>
