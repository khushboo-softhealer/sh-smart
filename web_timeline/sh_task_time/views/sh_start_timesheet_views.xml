<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="start_timesheet_form">
        <field name="name">Start Task</field>
        <field name="model">sh.start.timesheet</field>
        <field name="arch" type="xml">
            <form string="Start Task">
                <group>
                    <group>
                    	<field name="employee_id" readonly="True"/>
                        <field name="project_id" domain="[('sh_child_ids', '=', False)]" options="{'no_create':True,'no_create_edit':True}" />
                        <field name="task_id" options="{'no_create':True,'no_create_edit':True}"  />
                        <field name="start_date" />
                    </group>
                </group>
                 <footer>
                        <button name="button_start_task"
                                string="Start Task"
                                type="object"
                                class="oe_highlight" />
                        or
                        <button special="cancel"
                                string="Cancel"
                                class="oe_link" />
                 </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_start_task">
        <field name="name">Start Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.start.timesheet</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">form</field>
    </record>

</odoo>
