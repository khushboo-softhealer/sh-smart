<?xml version="1.0"?>
<odoo>
    <record id="sh_hr_recruitment_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sh_hr_recructment.res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_recruitment']//h2" position="before">
                <h2>Recruitment Project</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Project" for="project_id"
                                        class="col-lg-3 o_light_label" />
                                    <field name="project_id" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>