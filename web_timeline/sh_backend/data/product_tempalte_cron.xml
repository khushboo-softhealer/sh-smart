<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  <function model="product.template" name="update_old_record"/> -->
    <record id="reminder_module_update" model="ir.cron">
        <field name="name">Reminder for Module Update</field>
        <field eval="True" name="active" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 18:30:00')" />
        <field name="model_id" ref="product.model_product_template" />
        <field name="state">code</field>
        <field name="code">model.notify_module_update()</field>
        <field name="priority" eval="5" />
    </record>
</odoo>
