<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_templates_allocation_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.templates.allocation.wizard.view.form</field>
        <field name="model">sh.templates.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="update_method" widget="radio" />
                        <field name="template_ids" widget="many2many_tags"  /> 
                        <field name="user_ids"  widget="many2many_tags" invisible="1" />
                    </group>
                </sheet>
                <footer>
                    <button string="Add Templates" class="oe_highlight" type="object" name="add_templates" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>