    <template id="ticket_feedback_thank_you" name="Helpdesk Ticket Thank You">
        <t t-call="web.login_layout">
        	<div class="container">
        		<h1>Thanks!</h1>
        		<div class="row">
		            <div class="col-md-12">
		                <div class="alert alert-success" role="status">
		                    Thank you for your valuable feedback to us.
