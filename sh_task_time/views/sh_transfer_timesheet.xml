<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_project_task_time_transfer_form_view" model="ir.ui.view">
        <field name="name">sh.transfer.timesheet</field>
        <field name="model">sh.transfer.timesheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Enter Task Description" />
                    </group>
                    <group>
                        <group>
                            <field name="project_id" domain="[('sh_child_ids', '=', False)]" options="{'no_create':True,'no_create_edit':True}"   />
                            <field name="duration" widget="float_time"  />
                        </group>
                        <group>
                            <field name="task_id" domain="[('project_id','=',project_id)]" options="{'no_create':True,'no_create_edit':True}"   />
                            <field name="ticket_id"  options="{'no_create':True,'no_create_edit':True}"   />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Transfer" name="transfer_timesheet" type="object"
                        default_focus="1" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
