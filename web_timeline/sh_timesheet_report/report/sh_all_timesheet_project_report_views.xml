<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="sh_all_timesheet" name="sh_all_timesheet" inherit_id="hr_timesheet.timesheet_table">
        <xpath expr="//tbody//tr//td[5]" position="replace">
            <td class="align-bottom" style="width: 450px; max-width: 450px;">
                <span style="height: 87px; max-height:87px; overflow: hidden; display: block; word-wrap: break-word;" t-field="line.name"/>
            </td>
        </xpath>
    </template>
</odoo>