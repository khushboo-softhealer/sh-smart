<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_web_base_sh_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">sh.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_info_settings']" position="after">
                <h2>Website Popular Searches</h2>
                <div class="row mt16 o_settings_container" id="sh_website_popular_searches">
                    <div class="col-xs-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_website_popular_searches" />
                        </div>
                        <div class="o_setting_right_pane" id="popular_searches_right_pane">
                             <label for="enable_website_popular_searches"/>
                        </div>
                    </div>
                </div>

                <h2 >Default Lead Qualification</h2>
                <div class="row mt16 o_settings_container" id="sh_softhealer_website_default_campaign_id" groups="softhealer_website_base.group_softhealer_website_editor_dynamic_lead_qualification">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="category_page">
						<div class="o_setting_right_pane">
							<label for="sh_softhealer_website_default_campaign_id" />
							<div class="content-group">
								<div class="mt16">
									<field name="sh_softhealer_website_default_campaign_id" class="col-md-6 pull-left" options="{'no_create': True}" />
								</div>
							</div>
						</div>
					</div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="sh_softhealer_website_default_medium_id">
						<div class="o_setting_right_pane">
							<label for="sh_softhealer_website_default_medium_id" />
							<div class="content-group">
								<div class="mt16">
									<field name="sh_softhealer_website_default_medium_id" class="col-md-6 pull-left" options="{'no_create': True}"/>
								</div>
							</div>
						</div>
					</div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="sh_softhealer_website_default_source_id">
						<div class="o_setting_right_pane">
							<label for="sh_softhealer_website_default_source_id" />
							<div class="content-group">
								<div class="mt16">
									<field name="sh_softhealer_website_default_source_id" class="col-md-6 pull-left" options="{'no_create': True}"/>
								</div>
							</div>
						</div>
					</div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>