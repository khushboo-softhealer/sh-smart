<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_helpdesk_ticket_crm_inherited_view_form" model="ir.ui.view">
        <field name="name">sh.helpdesk.crm.inherited.view.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <!-- <field name="stage_id" position="before">
                <button class="btn btn-primary" name="action_create_ticket" type="object" string="Create Ticket" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm" />
            </field> -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="ticket_counts" type="object" class="oe_stat_button" icon="fa-ticket" context="{'partner_id': partner_id}" attrs="{'invisible': [('ticket_count', '=', 0)]}" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm">
                    <div class="o_stat_info">
                        <field name="ticket_count" class="o_stat_value" />
                        <span class="o_stat_text">Tickets</span>
                    </div>
                </button>
            </xpath>
            <field name="tag_ids" position="after">
                <field name="sh_ticket_ids" widget="many2many_tags" groups="sh_helpdesk_crm.sh_helpdesk_ticket_crm" />
            </field>
            <button name="toggle_active" position="after">
                <button name="action_new_ticket" string="New Ticket" type="object" class="btn btn-primary"/>
            </button>
        </field>
    </record>

    <record id="sh_helpdesk_crm_inherited_view_search" model="ir.ui.view">
        <field name="name">sh.helpdesk.crm.inherited.view.search</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <field name="city" position="after">
                <field name="sh_ticket_ids" />
            </field>
            <xpath expr="//filter[1]" position="after">
                <filter string="Helpdesk Ticket" name="helpdesk_ticket" domain="[('sh_ticket_ids','!=',False)]" />
            </xpath>
        </field>
    </record>
    <record id="sh_helpdesk_crm_lead_inherited_view_search" model="ir.ui.view">
        <field name="name">sh.helpdesk.crm.lead.inherited.view.search</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="sh_ticket_ids" />
            </field>
            <xpath expr="//filter[1]" position="after">
                <filter string="Helpdesk Ticket" name="helpdesk_ticket" domain="[('sh_ticket_ids','!=',False)]" />
            </xpath>
        </field>
    </record>

    <record id="crm.crm_menu_leads" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0,[ref('crm.group_use_lead')])]" />
        <field name="name" >Leads</field>
        <field name="parent_id" ref="crm.crm_menu_root"></field>
        <field name="sequence" >1</field>
        <field name="action" ref="crm.crm_lead_all_leads"/>
    </record>
    <record id="crm.crm_menu_sales" model="ir.ui.menu">
        <field name="name" >Sales</field>
        <field name="parent_id" ref="crm.crm_menu_root"></field>
        <field name="sequence" >5</field>
    </record>

</odoo>
