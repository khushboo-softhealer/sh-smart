<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- TODO: no update 1 when done -->
    <data noupdate="1">
        
        
        
        <!--
        
        	 one attachment for scss variable settings 
        	Write this file each time when we change theme settings.
        	include this file in assets file by url.
        	
         -->
        <record id="sh_backmate_theme_settings_attachment_scss_file" model="ir.attachment">
            <field name="public" eval="True"/>
            <field name="name">Back Theme Settings scss File</field>
        	<field name="datas" type="base64" file="sh_backmate_theme/data/back_theme_config_main_scss.scss"></field>            
            <field name="res_model">ir.ui.view</field>
            <field name="type">binary</field>
            <field name="mimetype">text/scss</field>
            
            <field name="url">/sh_backmate_theme/static/src/scss/back_theme_config_main_scss.scss</field>
        </record>  

        <!-- Create back theme setting record at install time -->
        <record id="sh_backmate_theme_rec" model="sh.back.theme.config.settings">
            <field name="name">Theme Settings</field> 
            <field name="theme_style">style_1</field>
            <field name="primary_color">#673ab7</field>
            <field name="primary_hover">rgba(0,0,0,.1) </field>
            <field name="primary_active">#553098</field>
