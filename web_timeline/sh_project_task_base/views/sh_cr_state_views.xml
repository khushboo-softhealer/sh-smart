<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEW: Tree -->
    <record id="sh_cr_state_view_tree" model="ir.ui.view">
        <field name="name">sh.cr.state.view.tree</field>
        <field name="model">sh.cr.state</field>
        <field name="arch" type="xml">
            <tree string="CR States" editable="bottom">
                <field name="name" required="1" />
                <field name="is_default_state" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_cr_state_action" model="ir.actions.act_window">
        <field name="name">CR States</field>
        <field name="res_model">sh.cr.state</field>
        <field name="view_mode">tree</field>
    </record>
    
</odoo>
