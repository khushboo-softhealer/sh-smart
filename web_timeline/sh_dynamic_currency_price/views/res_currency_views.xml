<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_res_currency_form_inherit" model="ir.ui.view">
        <field name="name">sh.currency.form.view.inherit</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="update_past_currency_rates" type="object" class="btn btn-primary" string="Update Past Rates"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>
