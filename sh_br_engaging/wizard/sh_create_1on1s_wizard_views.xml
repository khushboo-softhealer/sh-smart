<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="sh_update_agenda_wizard_form_view" model="ir.ui.view">
            <field name="name">sh.create.1on1s.wizard.form</field>
            <field name="model">sh.create.1on1s.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="alert alert-warning mb-1" role="alert">
                            <b>Choose an employee to take the lead in shaping the discussion points and goals for the upcoming meeting.</b>
                        </div>
                        
                        <group>
                            <group>
                                <!-- <field name="sh_store_domain" /> -->
                                <field name="sh_employee_id" placeholder="select an employee here.." options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create a new 1-on-1" class="btn btn-primary oe_highlight" type="object" name="create_1on1s_record" data-hotkey="q"/>
                        <button string="Discard" name="discard_1on1s_record" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sh_update_agenda_wizard_action" model="ir.actions.act_window">
            <field name="name">Create 1-on-1s</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.create.1on1s.wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>
