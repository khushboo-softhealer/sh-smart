<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_calendar_group_template_view_form" model="ir.ui.view">
        <field name="name">sh.calendar.group.template.view.form</field>
        <field name="model">sh.calendar.group.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name = "name"/>
                            <field name = "partner_ids" widget = "many2many_tags"/>
                        </group>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="sh_calendar_group_template_view_tree" model="ir.ui.view">
        <field name="name">sh.calendar.group.template.view.tree</field>
        <field name="model">sh.calendar.group.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "name"/>
                <field name = "partner_ids" widget = "many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="sh_calendar_group_template_action" model="ir.actions.act_window">
        <field name="name">Calendar Group Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.calendar.group.template</field>
        <field name="view_mode">tree,form</field>    
    </record>

    <menuitem   id="_menu_act" 
                name="Group Template" 
                parent="calendar.mail_menu_calendar" 
                action="sh_calendar_group_template_action" 
                groups = "sh_project_task_base.group_project_officer"
                sequence="1"/>
</odoo>
