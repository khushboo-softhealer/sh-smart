<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_demo_db_log_form_view" model="ir.ui.view">
			<field name="name">sh.demo.db.log.form.view</field>
			<field name="model">sh.demo.db.log</field>
			<field name="arch" type="xml">
				<form string="Demo Database Log">
					<header>
						<!-- <button name="action_send_mail" type="object" string="Sent By Email" class="oe_highlight"/> -->
						<button name="action_drop_db" type="object" string="Drop Database" class="oe_highlight"/>
					</header>
					<sheet>
						<!-- <div class="oe_button_box" name="button_box">
	                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
	                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
	                        </button>
                    	</div> -->
						<group>
							<group>
								<!-- <field name="sh_db_ids" widget="many2many_tags"/> -->
								<field name="sh_database_name"/>
								<field name="sh_username"/>
								<field name="ticket_id"/>
								<!-- <field name="demo_values" invisible="1"/> -->
							</group>
							<group>
								<field name="sh_password"/>
								<field name="sh_url" widget="url"/>
								<field name="log_message"/>
								<!-- <field name="sh_user_id"/> -->
								<!-- <field name="sh_server_id" invisible="1"/> -->
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="sh_demo_db_tree_view" model="ir.ui.view">
			<field name="name">sh.demo.db.tree.view</field>
			<field name="model">sh.demo.db.log</field>
			<field name="arch" type="xml">
				<tree string="Demo Database Log">
					<field name="create_date"/>
					<!-- <field name="sh_db_ids" widget="many2many_tags"/> -->
					<field name="sh_database_name"/>
					<field name="sh_username"/>
					<field name="sh_password"/>
					<field name="sh_url"/>
					<!-- <field name="sh_user_id"/> -->
				</tree>
			</field>
		</record>
		<!-- <record id="sh_demo_db_search_view" model="ir.ui.view">
			<field name="name">sh.demo.db.search.view</field>
			<field name="model">sh.demo.db.log</field>
			<field name="arch" type="xml">
				<search string="Demo Database Log">
					<filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
					<group expand="0" string="Group By">
                        <filter name="group_by_user_id" string="User" context="{'group_by':'sh_user_id'}"/>
                    </group>
				</search>
			</field>
		</record> -->
		<record id="action_sh_demo_db_log" model="ir.actions.act_window">
			<field name="name">Softhealer Demo Database Log</field>
			<field name="res_model">sh.demo.db.log</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem id="sh_menu_demo_db_log" name="Demo Database Log" parent="sh_helpdesk.helpdesk_config_menu" action="action_sh_demo_db_log" groups="sh_demo_db.sh_group_demo_db_manager,sh_demo_db.sh_group_demo_db_user"/>

		<record id="email_template_edi_demo_db_log" model="mail.template">
            <field name="name">Demo DB Log: Send by email</field>
            <field name="model_id" ref="sh_demo_db.model_sh_demo_db_log"/>
            <field name="subject">{{object.create_uid.company_id.name}} Demo For {{object.demo_values}}</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
			    	Your Demo Database Information:
						<br/>
					URL :   <a target="_blank" t-attf-href="{{object.sh_url}}"><t t-esc="object.sh_url"/></a>
						<br/>
					Username : <t t-esc="object.sh_username"/>
						<br/>
					Password : <t t-esc="object.sh_password"/>
					</p>
				</div>
			</field>
		</record>

	</data>
</odoo>