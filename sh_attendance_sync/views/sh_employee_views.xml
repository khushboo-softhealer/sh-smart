<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sh_leave_form_view" model="ir.ui.view">
			<field name="name">sh.leave.form.view</field>
			<field name="model">hr.leave</field>
			<field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
			<field name="arch" type="xml">
				<field name="holiday_status_id" position="before">
					<field name="created_leave" invisible="1"/>
					<field name="automatic" invisible="1"/>
				</field>
			</field>
		</record>
		<record id="sh_leave_tree_view" model="ir.ui.view">
			<field name="name">sh.leave.tree.view</field>
			<field name="model">hr.leave</field>
			<field name="inherit_id" ref="hr_holidays.hr_leave_view_tree_my"/>
			<field name="arch" type="xml">
				<field name="duration_display" position="after">
					<field name="number_of_hours_display"/>
				</field>
			</field>
		</record>
	</data>
</odoo>
