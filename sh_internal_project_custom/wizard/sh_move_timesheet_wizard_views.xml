<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Form View -->
    <record id="sh_move_timesheet_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.move.timesheet.wizard.form</field>
        <field name="model">sh.move.timesheet.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="project_id" readonly="1"/>
                        <field name="appstore_project_id"/>
                        <field name="task_id" string="Select App Store Task" domain="[('project_id','=',appstore_project_id)]" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Move" name="action_move_timesheet_to_appstore" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
