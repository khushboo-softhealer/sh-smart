<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <record id="sh_demo_db_template" model="mail.template">
      <field name="name">Demo Database: Send by email</field>
      <field name="model_id" ref="sh_helpdesk.model_sh_helpdesk_ticket"/>
      <field name="email_from">support@softhealer.com</field>
      <field name="partner_to">{{ object.partner_id.id }}</field>
      <field name="subject">{{ object.company_id.name }} Your Demo Database is created (Ref {{ object.name or 'n/a' }})</field>
      <field name="auto_delete" eval="False"/>
      <field name="body_html" type="html">
        <div style="margin: 0px; padding: 0px;">
          <table border="0" width="100%" cellpadding="0" bgcolor="#ededed" style="padding: 20px; background-color: #ededed; border-collapse:separate;">
            <tbody>

              <!-- HEADER -->
              <tr>
                <td align="center" style="min-width: 590px;">
                  <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px; border-collapse:separate;">
                    <tr>
                      <td valign="middle">
                        <span style="font-size:20px; color:white; font-weight: bold;">
                                    <t t-esc="object.name"/>
                        </span>
                      </td>
                      <td valign="middle" align="right">
                        <img t-attf-src="/logo.png?company={{ object.company_id.id }}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <!-- CONTENT -->
              <tr>
                <td align="center" style="min-width: 590px;">
                  <table width="590" border="0" cellpadding="0" bgcolor="#ffffff" style="min-width: 590px; background-color: rgb(255, 255, 255); padding: 20px; border-collapse:separate;">
                    <tbody>
                      <td valign="top" style="font-family:Arial,Helvetica,sans-serif; color: #555; font-size: 14px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
							    	Dear <t t-esc="object.partner_id.name"/>,
                          <br/>
                          <br/>
                          <b>
                            <u>Below is your demo db information</u>
                          </b>
                          <br/>
                          <br/>
                        <t t-if="object.partner_id.email">                 
                          <b>Username :</b> <t t-esc="object.partner_id.email"/>
                          <br/>
                          <b>Password :</b> <t t-esc="object.sh_demo_password"/>
                        </t>
                      <t t-if="not object.partner_id.email">
                          <b>Username :</b> <t t-esc="object.partner_id.name"/>
                          <br/>
                          <b>Password :</b> <t t-esc="object.sh_demo_password"/>
                        </t>
                          <center>
                            <img t-attf-src="{{ object.sh_demo_db_url }}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                          </center>
                          <br/>
                          <br/>
                        </p>
                      </td>
                    </tbody>
                  </table>
                </td>
              </tr>

              <!-- FOOTER -->
              <tr>
                <td align="center" style="min-width: 590px;">
                  <table width="590" border="0" cellpadding="0" bgcolor="#875A7B" style="min-width: 590px; background-color: rgb(135,90,123); padding: 20px; border-collapse:separate;">
                    <tr>
                      <td valign="middle" align="left" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">
                                <t t-esc="object.company_id.name"/><br/>
                                <t t-esc="object.company_id.phone"/>
                      </td>
                      <td valign="middle" align="right" style="color: #fff; padding-top: 10px; padding-bottom: 10px; font-size: 12px;">                                
                          <t t-if="object.company_id.email">                                                                  
                            <a href="mailto:{{object.company_id.email}}" style="text-decoration:none; color: white;"><t t-esc="object.company_id.email"/></a>
                            <br/>
                          </t>
                          <t t-if="object.company_id.website">
                            <a href="{{ object.company_id.website }}" style="text-decoration:none; color: white;">
                                            <t t-esc="object.company_id.website"/>
                            </a>
                          </t>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </field>
    </record>
  </data>
</odoo>