			<field name="name">sh.common.mail.domains.tree.view</field>
			<field name="model">sh.common.mail.domains</field>
			<field name="arch" type="xml">
				<tree string="Tags" editable="bottom">
					<field name="name" required="1"/>
				</tree>
			</field>
