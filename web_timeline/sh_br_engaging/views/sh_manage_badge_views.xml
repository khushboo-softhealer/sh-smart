<odoo>
    <record  id="sh_manage_badge_form" model="ir.ui.view">
        <field name="name">sh.manage.badge.form</field>
        <field name="model">sh.manage.badge</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"></field>                
            </form>
        </field>
    </record>

    <record  id="sh_manage_badge_tree" model="ir.ui.view">
        <field name="name">sh.manage.badge.tree</field>
        <field name="model">sh.manage.badge</field>
        <field name="arch" type="xml">
            <tree editable='bottom'>
                <field name="name"></field>                
                <field name="sh_is_active"></field>                
            </tree>
        </field>
    </record>

    <record id="sh_manage_badge_action" model="ir.actions.act_window">
        <field name="name">Badges</field>
        <field name="res_model">sh.manage.badge</field>        
        <field name="view_mode">tree,form</field>        
    </record>
</odoo>