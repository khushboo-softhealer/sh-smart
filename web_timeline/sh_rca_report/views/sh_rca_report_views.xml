<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sh.rca.report View Tree -->
    <record id="view_sh_rca_report_tree" model="ir.ui.view">
        <field name="name">view.sh.rca.report.tree</field>
        <field name="model">sh.rca.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id" />
                <field name="task_id" />
                <field name="report_date" />
                <field name="issue_resolved_datetime_in_main" />
                <field name="issue_resolve_duration" widget="timesheet_uom"/>
            </tree>
        </field>
    </record>

    <!-- View sh.rca.report form -->
    <record id="view_sh_rca_report_form" model="ir.ui.view">
        <field name="name">view.sh.rca.report.form</field>
        <field name="model">sh.rca.report</field>
        <field name="arch" type="xml">
            <form string="Sh Rca Report">
                <header>
                    <button string="Lock RCA" name="lock_rca" type="object" class="oe_highlight" attrs="{'invisible':[('state','=','done')]}"/>
                    <button string="Reset to Draft" name="rest_to_draft_rca" type="object" class="oe_highlight" attrs="{'invisible':[('state','=','draft')]}"/>
                    <button string="Print Report" name="action_print_rca_report" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','done')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="issue_owner" required="1" attrs="{'readonly':[('state','=','done')]}" />
                            <field name="email" required="1" attrs="{'readonly':[('state','=','done')]}" />
                            <field name="project_id" readonly="1" required="1" />
                            <field name="task_id" readonly="1" required="1" />
                            <field name="attachment" attrs="{'readonly':[('state','=','done')]}" />
                        </group>
                        <group>
                            <field name="issue_priority" required="1" attrs="{'readonly':[('state','=','done')]}" />
                            <field name="report_date" required="1" attrs="{'readonly':[('state','=','done')]}" />
                            <field name="issue_resolved_datetime" attrs="{'readonly':[('state','=','done')]}" />
                            <field name="issue_resolved_datetime_in_main" attrs="{'readonly':[('state','=','done')]}" />
                        </group>
                    </group>

                    <notebook>
                        <page name="issue_details" string="Issue Details">

                            <label for="description">Description</label>
                            <field name="description" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="step_to_reproduce">Step to Reduce</label>
                            <field name="step_to_reproduce" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="expected_outcome">Expected Outcome</label>
                            <field name="expected_outcome" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="actual_out_come">Actual Outcome</label>
                            <field name="actual_out_come" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="bug_logs">Bug Logs</label>
                            <field name="bug_logs" attrs="{'readonly':[('state','=','done')]}" />



                        </page>

                        <page name="rca" string="RCA">
                            <label for="root_cause">Root Cause</label>
                            <field name="root_cause" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="corrective_action">Corrective Action</label>
                            <field name="corrective_action" attrs="{'readonly':[('state','=','done')]}" />

                            <label for="preventive_action">Preventive Action</label>
                            <field name="preventive_action" attrs="{'readonly':[('state','=','done')]}" />


                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- View sh.rca.report search -->
    <record id="view_sh_rca_report_search" model="ir.ui.view">
        <field name="name">view.sh.rca.report.search</field>
        <field name="model">sh.rca.report</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Project" name="group_by_project" domain="[]" context="{'group_by':'project_id'}"/>
                    <filter string="Task" name="group_by_task" domain="[]" context="{'group_by':'task_id'}"/>
                    <filter string="Issue Report Date" name="group_by_report_date" domain="[]" context="{'group_by':'report_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action sh.rca.report -->
    <record id="action_sh_rca_report" model="ir.actions.act_window">
        <field name="name">Rca Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.rca.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new RCA Report.
            </p>
        </field>
    </record>

    <menuitem id="sh_rca_report_menu" name="RCA Report" parent="project.menu_main_pm" action="action_sh_rca_report" sequence="10"/>

</odoo>
