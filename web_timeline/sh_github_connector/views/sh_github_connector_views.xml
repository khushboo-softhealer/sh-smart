<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="sh_github_connector_view_form" model="ir.ui.view">
        <field name="name">sh_github_connector.view.form</field>
        <field name="model">sh.github.connector</field>
        <field name="arch" type="xml">
            <form string="Github Connector">

                <header>
                    <button string="Generate Token" name="authorise_creds" type="object" class="btn btn-primary" attrs="{'invisible': [('state', '=', 'success')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,success" />
                </header>

                <sheet>

                    <!-- Credentials -->
                    <group>
                        <group>
                            <field name="name" required="1" attrs="{'readonly': [('state', '=', 'success')]}"/>
                            <field name="user_name" required="1" placeholder="As Per Github Account" attrs="{'readonly': [('state', '=', 'success')]}" />
                            <field name="access_token" password="1" invisible="1"/>
                            <field name="client_id" password="1" required="1" attrs="{'readonly': [('state', '=', 'success')]}"/>
                            <field name="client_secret" password="1" required="1" attrs="{'readonly': [('state', '=', 'success')]}"/>
                            <field name="redirect_uri" required="1" attrs="{'readonly': [('state', '=', 'success')]}" placeholder="your_domain/sh_github_connector/auth"/>
                        </group>
                    </group>

                    <!-- =========== Configutation =========== -->
                    <h2 class="text-primary mb-2">Configutation</h2>
                    <group string="Index">
                        <group>
                            <field name="blog_blog_id" required="1" />
                        </group>
                        <group>
                            <field name="website_id" />
                        </group>
                    </group>
                    <group string="Product">
                        <group>
                            <field name="categ_id" />
                            <field name="activity_user_ids" widget="many2many_tags" options="{'no_create': True}" />
                        </group>
                        <group>
                            <field name="product_attribute_id" />
                        </group>
                    </group>
                    <group string="Project &amp; Task">
                        <group>
                            <field name="preappstore_project_id" />
                        </group>
                        <group>
                            <field name="appstore_project_id" />
                        </group>
                    </group>
                    <group string="Others">
                        <group>
                            <field name="ignore_dir" />
                        </group>
                        <!-- <group>
                            <field name="notify_version_id" options="{'no_create': True, 'no_open': True}" />
                        </group> -->
                    </group>

                    <!-- =========== Log =========== -->
                    <h2 class="text-primary mb-2">Log History</h2>
                    <field name="log_line" readonly="1">
                        <tree decoration-success="state=='success'" decoration-danger="state=='error'" limit="10">
                            <field name="field_type"/>
                            <field name="operation"/>
                            <field name="message"/>
                            <field name="datetime"/>
                            <field name="state"/>
                        </tree>
                    </field>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>               
                        <field name="message_ids"/>
                    </div>

                </sheet>

            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="sh_github_connector_view_tree" model="ir.ui.view">
        <field name="name">sh_github_connector.view.tree</field>
        <field name="model">sh.github.connector</field>
        <field name="arch" type="xml">
            <tree string="Github Connector">
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="sh_github_connector_action" model="ir.actions.act_window">
        <field name="name">Github Connector</field>
        <field name="res_model">sh.github.connector</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>