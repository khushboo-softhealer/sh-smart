<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="web.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="replace">
            <t t-if="group_show_create">
                <button type="button" class="btn btn-primary o_list_button_add" data-hotkey="c" t-on-click="onClickCreate" data-bounce-button="">
                    New
                </button>
            </t>
            
        </xpath>
        <xpath expr="//button[hasclass('o_list_export_xlsx')]" position="replace">
            <t t-if="group_show_export">
                <button type="button" class="btn btn-secondary fa fa-download o_list_export_xlsx" data-tooltip="Export All" aria-label="Export All" t-on-click="onDirectExportData"/>
            </t>
            
        </xpath>
    </t>

    <t t-name="account.ListView.Buttons" t-inherit="account.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="replace">
            <t t-if="group_show_create">
                <button type="button" class="btn btn-primary o_list_button_add" data-hotkey="c" t-on-click="onClickCreate" data-bounce-button="">
                    New
                </button>
            </t>
            
        </xpath>
    </t>


    <t t-name="web.KanbanView.Buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o-kanban-button-new')]" position="replace">
            <t t-if="group_show_create">
                <button type="button" class="btn btn-primary o-kanban-button-new" accesskey="c" t-on-click="() => this.createRecord(null)" data-bounce-button="">
                    Create
                </button>
            </t>
        </xpath>
    </t>


    <t t-name="account.KanbanView.Buttons" t-inherit="account.KanbanView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o-kanban-button-new')]" position="replace">
            <t t-if="group_show_create">
                <button type="button" class="btn btn-primary o-kanban-button-new" accesskey="c" t-on-click="() => this.createRecord(null)" data-bounce-button="">
                    Create
                </button>
            </t>
        </xpath>
    </t>


    <t t-name="web.FormView" t-inherit="web.FormView" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_form_button_create')]" position="replace">
            <t t-if="group_show_create">
                <button type="button" class="btn btn-outline-primary o_form_button_create" data-hotkey="c" t-on-click.stop="create" t-att-disabled="state.isDisabled">New</button>
            </t>
        </xpath>

    </t>

    <!-- <t t-name="web.ActionMenus" t-inherit="web.ActionMenus" t-inherit-mode="extension" owl="1">
        <xpath expr="//Dropdown[@t-if='printItems.length']" position="attributes">
            <attribute name="t-if">group_show_print</attribute>
        </xpath>

        <xpath expr="//Dropdown[@t-if='actionItems.length']" position="attributes">
            <attribute name="t-if">group_show_action</attribute>
        </xpath>
    </t> -->

</templates>
