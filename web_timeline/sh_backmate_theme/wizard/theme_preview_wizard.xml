<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_back_theme_config_theme_preview_wizard_form" model="ir.ui.view">
		<field name="name">sh.back.theme.config.theme.preview.wizard.form</field>
		<field name="model">sh.theme.preview.wizard</field>
		<field name="arch" type="xml">
			<form string="Theme Preview">
						<img alt="preview image" id="js_id_theme_preview_image" src="" style="width:100%;height:100%;"/>

			
						<field style="display:none;" name="img_src"/>

				
                    <footer>

                    </footer>				
				
					<script type="text/javascript">
				

						var myTimeout = setTimeout(myGreeting, 200);
	
						function myGreeting() {
							document.getElementById('js_id_theme_preview_image').src = document.getElementById('img_src').value;
						}
						  
					
					</script>
			</form>
		</field>
	</record>
</odoo>