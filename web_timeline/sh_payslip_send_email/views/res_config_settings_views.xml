<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sh_hr_payroll.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sh_hr_payroll']/div[1]" position="after">
                    <h2>Payslip Send Email Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="send_payslip" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="send_payslip" string="Send Pay Slip" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('send_payslip','=',False)]}">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="sh_send_mail_on" />
                                <div class="mt8">
                                    <field name="sh_send_mail_on" widget="radio" options="{'horizontal': true}" />
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>