<?xml version="1.0"?>

<odoo>
    <record id="model_product_template_variant_details_wizard_form_view" model="ir.ui.view">
        <field name="name">model.product.template.variant.details.wizard.form.view</field>
        <field name="model">sh.product.variant.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Variant Details">
                <group>
                    <group>
                        <field name="banner_bool" />
                        <field name="technical_name_bool" />
                        <field name="edition_bool" />
                        <field name="depends_bool" />
                        <field name="required_apps_bool"/>
                        <field name="license_bool" />
                        <field name="product_version_bool" invisible="1"/>
                        <field name="supported_browser_bool" invisible="1"/>
                        <field name="relesed_bool" invisible="1"/>
                        <field name="website_description_bool" />
                        <field name="extra_image_bool" invisible="1"/>
                    </group>
                    <group>
                        <field name="last_update_bool" invisible="1"/>
                        <field name="live_demo_bool" />
                        <field name="user_guide_bool" />
                        <field name="video_bool" />
                        <field name="blogs_bool" />
                        <field name="tags_bool" invisible="1"/>
                        <field name="qty_show_bool" invisible="1"/>
                        <field name="sh_features_bool" invisible="1"/>
                        <field name="euro_price_bool"/>
                    </group>
                </group>
                <footer>
                    <button name="update_variant_record" class="btn btn-primary" type="object" string="Done" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="model_product_template_variant_details_wizard_action" model="ir.actions.act_window">
        <field name="name">Update Variant Details</field>
        <field name="res_model">sh.product.variant.update.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
