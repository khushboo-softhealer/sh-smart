<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="sh_view_talking_point_agenda_wizard_action_form_view" model="ir.ui.view">
            <field name="name">sh.view.talking.point.wizard.form</field>
            <field name="model">sh.view.talking.point.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="sh_talking_point_view_agenda_ids" >
                            <tree editable='bottom' create="0" delete="0">
                                <field name="sh_view_agenda_checked" />
                                <field name="sh_view_agenda_id" />
                                <field name="sh_view_agenda_description" />
                            </tree>                            
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sh_view_talking_point_agenda_wizard_action" model="ir.actions.act_window">
            <field name="name">View Talking Agenda</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.view.talking.point.wizard</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>
