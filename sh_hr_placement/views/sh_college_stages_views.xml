<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_college_stages_form" model="ir.ui.view">
        <field name="name">sh.college.stages.form</field>
        <field name="model">sh.college.stages</field>
        <field name="arch" type="xml">
            <form string="Task Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="fold" />
                            <field name="sequence" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_college_stages_tree" model="ir.ui.view">
        <field name="name">sh.college.stages.tree</field>
        <field name="model">sh.college.stages</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="fold" />
            </tree>
        </field>
    </record>

    <record id="sh_college_stages_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">sh.college.stages</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sh_college_stages_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new stage in the College
            </p>
        </field>
    </record>
    
    <menuitem action="sh_college_stages_action" id="menu_sh_college_stages_config"
        name="College Stages" parent="hr_recruitment.menu_hr_recruitment_configuration" sequence="3" />
</odoo>