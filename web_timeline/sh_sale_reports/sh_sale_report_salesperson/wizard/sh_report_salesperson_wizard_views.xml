<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_report_salesperson_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.sale.report.salesperson.wizard.form.view</field>
        <field name="model">sh.sale.report.salesperson.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Report By Saleperson">
                <group>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <group>
                        <field name="state" />
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
                    </group>
                </group>
                <group>
                    <field name="user_ids" colspan="4" nolabel="1" groups="sales_team.group_sale_salesman_all_leads">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" />
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_sale_report_salesperson_action" model="ir.actions.act_window">
        <field name="name">Sales Report By Saleperson</field>
        <field name="res_model">sh.sale.report.salesperson.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="sh_sale_report_salesperson_menuitem" action="sh_sale_report_salesperson_action" parent="sh_sale_reports.sh_custom_sale_details_report_menu" groups="sh_sale_reports.sh_sale_report_salesperson_group" sequence="4" />
</odoo>
