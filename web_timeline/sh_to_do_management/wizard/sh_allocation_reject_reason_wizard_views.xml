<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id='sh_bill_reject_reason_wizard_form_view' model='ir.ui.view'>
        <field name="name">sh.bill.reject.reason.wizard.form</field>
        <field name="model">sh.bill.reject.reason.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="bill_id" invisible="1" />
                    <field name="reject_reason" required="1"/>
                </group>
                <footer>
                    <button name="action_reject_bill" string="Submit" type="object"
                        default_focus="1"
                        class="oe_highlight" />
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>