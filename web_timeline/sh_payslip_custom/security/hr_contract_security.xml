<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="hr_contract_own_rule" model="ir.rule">
        <field name="name">own Contract rule</field>
        <field name="model_id" ref="model_hr_contract" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>

    <record id="paylsip_own_rule" model="ir.rule">
        <field name="name">own payslip rule</field>
        <field name="model_id" ref="model_hr_payslip" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>

    <record id="hr_contract_all_rule" model="ir.rule">
        <field name="name">All Contract rule</field>
        <field name="model_id" ref="model_hr_contract" />
        <field name="groups" eval="[(4, ref('hr_contract.group_hr_contract_manager'))]" />
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>