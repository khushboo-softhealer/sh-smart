<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <template id="report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <br />
                    <br />
                    <h2 style="font-weight: bolder;" class="display-5 text-center">
                        <span t-field="doc.name" />
                    </h2>
                    <br />
                    <t t-if="doc.bonus_template_line">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">From Month</th>
                                    <th scope="col">To Month</th>
                                    <th scope="col">Bonus(%)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.bonus_template_line" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.from_month" />
                                        </td>
                                        <td>
                                            <span t-field="line.to_month" />
                                        </td>
                                        <td>
                                            <span t-field="line.bonus" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <h5 style="font-weight: bolder;" class="display-5 text-center">
                            Calculation
                        </h5>
                        <p>
                            <span t-field="doc.description" />
                        </p>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_template" model="ir.actions.report">
        <field name="name">Bonus Template</field>
        <field name="model">sh.bonus.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_hr_bonus.report_template</field>
        <field name="report_file">sh_hr_bonus.report_template</field>
        <field name="print_report_name">'Template - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sh_bonus_template" />
        <field name="binding_type">report</field>
    </record>

</odoo>
