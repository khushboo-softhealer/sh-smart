<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_approval" model="mail.template">
            <field name="name">Onboarding Send Approval</field>
            <field name="model_id" ref="sh_hr_onboarding.model_sh_hr_onboarding"/>
            <field name="subject">Approval for New Employee {{ object.name }}</field>
            <field name="email_from">{{ object.create_uid.email }}</field>
            <field name="email_to">accounts@softhealer.com</field>
            <field name="description">Approval For New Recruitment</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                        Kindly review all details of the new recruitment record. To access the information, 
                        please click on the button below. 
                        If everything is in order, click the "Approve" button. 
                        In case of any discrepancies, kindly provide your comments in the chatter section and reject the record.

                        <div style="display: inline-block; margin: 15px 0px; text-align: center;">
                            <a
                                t-att-href="'/mail/view?model=sh.hr.onboarding&amp;res_id=%s'% object.id"
                                target="_blank"
                                style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;"
                            >
                                Click here to view
                            </a>
                        </div>
                        <br />
                        Thank you.
                    
                    
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.create_uid.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
        </record>


    </data>
</odoo>
