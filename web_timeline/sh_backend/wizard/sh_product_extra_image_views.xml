<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_product_extra_image_wizard_form" model="ir.ui.view">
        <field name="name">sh.product.extra.image.form</field>
        <field name="model">sh.product.extra.image</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="">

                <group>
                <field name = "product_ids" invisible = "1"/>
                   <field name = "product_image_line"/>
                </group>

                <footer>
                    <button  string="Add Images"  class="oe_highlight" type="object" name="add_images" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
