<?xml version="1.0"?>
<odoo>
    <record id="sh_leave_allocation_wizard" model="ir.ui.view">
        <field name="name">sh.employee.leave.allocation.wizard.form</field>
        <field name="model">sh.employee.leave.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Leave Allocation">
                <group>
                    <group string="Leave Allocation">
                        <field name="type" widget="radio"/>
                        <field name="allocation_id" attrs="{'invisible': [('type', '=', 'new')]}" readonly="1" />
                    </group>
                </group>
                <footer>
                    <button name="allocate_leave_wizard" class="btn btn-primary" type="object" string="Allocation" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_leave_allocation_wizard_action" model="ir.actions.act_window">
        <field name="name">Leave Allocation</field>
        <field name="res_model">sh.employee.leave.allocation.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>