<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_sale_details_report_doc">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <span style="font-weight: 800;font-size: 25px;">
                            Sale Details
                        </span>
                        <br/>
                        <strong>
                            <t t-esc="date_start" t-options="{'widget': 'datetime'}" />
                            -
                            <t t-esc="date_stop" t-options="{'widget': 'datetime'}" />
                        </strong>
                    </div>
                    <!-- Orderlines -->
                    <div style="font-weight: 700;font-size: 20px;text-align:center;">
                        Products
                    </div>
                    <br/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="products" t-as="line">
                                <t t-set="internal_reference" t-value="line['code'] and '[%s] ' % line['code'] or ''" />
                                <td>
                                    <t t-esc="internal_reference" />
                                    <t t-esc="line['product_name']" />
                                </td>
                                <td>
                                    <t t-esc="line['quantity']" />
                                    <t t-if='line["uom"] != "Unit(s)"'>
                                        <t t-esc='line["uom"]' />
                                    </t>
                                </td>
                                <td>
                                    <t t-esc='line["price_unit"]' />
                                    <t t-if='line["discount"] != 0'>
                                        Disc:
                                        <t t-esc='line["discount"]' />
                                        %
                                    </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <div style="font-weight: 700;font-size: 20px;text-align:center;">
                        Payments
                    </div>
                    <br/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="payments[0]" t-as="payment">
                                <td>
                                    <t t-esc="payment" />
                                </td>
                                <td>
                                    <t t-esc="payment_value" t-options="{'widget': 'float', 'precision': currency_precision}" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <div style="font-weight: 700;font-size: 20px;text-align:center;">
                        Taxes
                    </div>
                    <br/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="taxes" t-as="tax">
                                <td>
                                    <t t-esc="tax['name']" />
                                </td>
                                <td>
                                    <t t-esc="tax['total']" t-options="{'widget': 'float', 'precision': currency_precision}" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <br />
                    <strong>
                        Total:
                        <t t-esc="total_paid" t-options="{'widget': 'float', 'precision': currency_precision}" />
                    </strong>
                </div>
            </t>
        </t>
    </template>
    <record id="sh_sale_details_report_action" model="ir.actions.report">
        <field name="name">Sales Details Report</field>
        <field name="model">report.sh_sale_reports.sh_sale_details_report_doc</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_sale_reports.sh_sale_details_report_doc</field>
        <field name="print_report_name">'Sales Details Report'</field>
    </record>
</odoo>
