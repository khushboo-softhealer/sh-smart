<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_tsp_top_selling_product_model_tree" model="ir.ui.view">
        <field name="name">sh.tsp.top.selling.product.model.tree</field>
        <field name="model">sh.tsp.top.selling.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="qty" />
            </tree>
        </field>
    </record>
    <record id="sh_tsp_top_selling_product_model_tree_action" model="ir.actions.act_window">
        <field name="name">Top Selling Products</field>
        <field name="res_model">sh.tsp.top.selling.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sh_tsp_top_selling_product_model_tree" />
    </record>
    <menuitem id="sh_tsp_top_selling_products_main" action="sh_tsp_top_selling_product_model_tree_action" parent="sh_sale_reports.sh_custom_sale_details_report_menu" groups="sh_sale_reports.sh_top_selling_product_group" sequence="5" />
    <menuitem id="sh_tsp_view_top_selling_products" name="Top Selling Products" parent="sh_tsp_top_selling_products_main" action="sh_tsp_top_selling_product_model_tree_action" groups="sh_sale_reports.sh_top_selling_product_group"/>
    <menuitem id="sh_tsp_update_top_selling_products" name="Update Top Selling Products" parent="sh_tsp_top_selling_products_main" action="sh_tsp_top_selling_product_wizard_action" groups="sh_sale_reports.sh_top_selling_product_group"/>
</odoo>
