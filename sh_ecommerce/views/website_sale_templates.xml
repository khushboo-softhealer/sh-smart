<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Information -->
    <template id='sh_ecommerce_module_information_common_tmpl' name='Module Information Common tmpl'>
        <div class="">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class='w-200px'>Technical Name</td>
                        <td><span t-if='sh_technical_name' t-esc='sh_technical_name'></span></td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Versions</td>
                        <td><span t-if='sh_versions' t-esc='sh_versions'></span></td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Last Update Date</td>
                        <td><span t-if='last_updated_date' t-esc='last_updated_date'></span></td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Editions</td>
                        <td>
                            <t t-if='editions' t-foreach='editions' t-as='edition'>
                                <span class='badge bg-dark' t-esc='edition'></span>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td class='vertical-align-middle w-200px'>Depends</td>
                        <td>
                            <t t-if='depends_product_list' t-foreach='depends_product_list' t-as='depends_product'>
                                <span class='' style='background:#e4e4e4;padding: 0.35em 0.5em;display: inline-block;margin-bottom: 0.3em;' t-field='depends_product.display_name'></span>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td class='vertical-align-middle w-200px'>Apps</td>
                        <td>
                            <t t-if='required_apps' t-foreach='required_apps' t-as='required_app'>
                                <span class='' style='background:#e4e4e4;padding: 0.35em 0.5em;display: inline-block;margin-bottom: 0.3em;' t-esc='required_app'></span>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Licence</td>
                        <td><span t-if='license' t-esc='license'></span></td>
                    </tr>
                    <tr>
                        <td class='vertical-align-middle w-200px'>Category (clickable)</td>
                        <td>
                            <t t-if='public_categ_ids' t-foreach='public_categ_ids' t-as='public_categ_id'>
                                <a class='badge bg-primary' t-attf-href='/shop/category/ {{ slug (public_categ_id) }}' t-field='public_categ_id.name' t-att-title='public_categ_id.name'></a>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <!-- Change Log Common Tmpl-->
    <template id='sh_ecommerce_change_log_common_tmpl' name='Change Log Common tmpl'>
        <div class="">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Version</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="change_logs" t-as="change_log">
                        <tr>
                            <td>
                                <span t-field="change_log.version" />
                            </td>
                            <td>
                                <span t-field="change_log.details" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>


    <!-- Product Detail page Tab Section define -->
    <template id='sh_ecommerce_detail_page_tab_section' inherit_id='website_sale.product' name='Detail Page Common Tab Section in Detail page'>
        <xpath expr="//section[@id='product_detail']//div[@id='product_detail_main']" position="after">
            <section class='sh_custom_main_tab_wrapper'>
                <div class='sh_custom_main_tab_main'>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" style='border-bottom:0;'>
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#sh_custom_tab_blog_details">About Module</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_change_log_details">Change Logs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_module_information">Module Information</a>
                        </li>
                        <li class="nav-item" t-if="is_view_active('website_sale.product_comment')">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_discuss_and_rating">Discuss &amp; Rating</a>
                        </li>
                    </ul>
  
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane container active" id="sh_custom_tab_blog_details"/>
                        <div class="tab-pane container" id="sh_custom_tab_change_log_details"/>
                        <div class="tab-pane container" id="sh_custom_tab_module_information"/>
                        <div class="tab-pane container" id="sh_custom_tab_discuss_and_rating" t-if="is_view_active('website_sale.product_comment')">
                            <div id="o_product_page_reviews_content">
                                <t t-call="portal.message_thread">
                                    <t t-set="object" t-value="product" />
                                    <t t-set="display_rating" t-value="True" />
                                </t>
                                <!-- <t t-call="portal.message_thread">
                                    <t t-set="object" t-value="product"/>
                                    <t t-set="display_rating" t-value="True"/>
                                    <t t-set="message_per_page" t-value="5"/>
                                    <t t-set="two_columns" t-value="true"/>
                                </t> -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>
    <!-- Product Detail page Tab Section define -->
    
</odoo>