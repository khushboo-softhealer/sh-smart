<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ticket_dashboard.dashboard">
    	<section class="filter">
        <div class="container">
               <div class="row text-center">
               		<div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 mb-3 col2">
						<div class="sh_btn">
							<div class="dropdown">
								<select id="team" class="btn btn-primary dropdown-toggle">
									<option value="all" selected="True">Team</option>
									<option value="today">User A</option>
									<option value="yesterday">User B</option>
									<option value="weekly">User C</option>
                             	</select>
							</div>
						</div>
					</div>
               		<div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 mb-3">
						<div class="sh_btn">
							<div class="dropdown">
								<select id="team_leader" class="btn btn-primary dropdown-toggle">
									<option value="all" selected="True">Team Leader</option>
                             	</select> 
							</div>
						</div>
					</div>
					<div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 mb-3 col2">
						<div class="sh_btn">
							<div class="dropdown">
								<select id="assigned_user" class="btn btn-primary dropdown-toggle">
									<option value="all" selected="True">Assign User</option>
									<option value="today">User A</option>
									<option value="yesterday">User B</option>
									<option value="weekly">User C</option>
                             	</select>
							</div>
						</div>
					</div>
					<div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 mb-3">
						<div class="sh_btn">
							<div class="dropdown">
								<select class="btn btn-primary dropdown-toggle" id="days_filter">
									<option selected="True" value="all">Select Date</option>
									<option value="today">Today</option>
									<option value="yesterday">Yesterday</option>
									<option value="weekly">Current Week</option>
									<option value="prev_week">Previous Week</option>
									<option value="monthly">Current Month</option>
									<option value="prev_month">Previous Month</option>
									<option value="cur_year">Current Year</option>
									<option value="prev_year">Previous Year</option>
									<option value="custom">Custom</option>
								</select>
							</div>
						</div>
					</div>
					<div id="start_date_div" class="col-lg-3 col-md-3 col-sm-4 col-xs-4" style="display:none;">
						<div class="mb-lg-0">
							<div class="input-group">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-calendar lh--9 op-6"></i>
									</div>
									<input type="date" id="start_date" name="start_date" class="form-control"/>
								</div>
							</div>
						</div>
					</div>
					<div id="end_date_div" class="col-lg-3 col-md-3 col-sm-4 col-xs-4" style="display:none;">
						<div class="mb-lg-0">
							<div class="input-group">
								<div class="input-group-prepend">
									<div class="input-group-text">
										<i class="fa fa-calendar lh--9 op-6"></i>
									</div>
								</div>
								<input type="date" id="end_date" name="end_date" class="form-control"/>
							</div>
						</div>
					</div>
     		</div>
      </div> 
  </section>    
</t>
</templates>