<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
    <!-- <data> -->
        <!-- Scheduler for Check-in Creation-->
        <record forcecreate="True" id="ir_cron_scheduler_for_check_in" model="ir.cron">
            <field name="name">Check-in Creation Scheduler</field>
            <field name="model_id" ref="model_sh_check_in"/>
            <field name="state">code</field>
            <field name="code">model.create_check_in_from_scheduler()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <!-- <field name="interval_number">1</field>
            <field name="interval_type">days</field> -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

        <!-- send email notification scheduler -->
        <record id="ir_cron_check_in_for_notification" model="ir.cron">
            <field name="name">Check In Remaining Notification</field>
            <field name="model_id" ref="model_sh_check_in"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_check_in_notification()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <!-- <field name="interval_number">1</field>
            <field name="interval_type">days</field> -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

         <!-- WALL OF FAME DATA UPDATATION CRON -->
         <record id="ir_cron_update_wall_of_fame_data" model="ir.cron">
            <field name="name">Update Wall Of Fame Data</field>
            <field name="model_id" ref="model_sh_update_wall_of_fame_data"/>
            <field name="state">code</field>
            <field name="code">model.update_wall_of_fame_data()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

        <!-- MONTHLY MEETING CREATION CRON -->
        <record id="ir_cron_create_monthly_team_data" model="ir.cron">
            <field name="name">Create Monthly Meeting</field>
            <field name="model_id" ref="model_calendar_event"/>
            <field name="state">code</field>
            <field name="code">model.create_monthly_team_meeting()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

    </data>
    <data>
        <!-- Create How Feel Question In Manage Question Model -->
        <record id="action_create_question" model="sh.manage.questions">
            <field name="sh_is_active">True</field>
            <field name="sh_in_every_check_in">True</field>
            <field name="name">How did you feel at work since your last check-in?</field>
            <field name="sh_how_did_you_feel_question">True</field>
            <field name="sh_is_rating_question">True</field>
        </record>
    </data>
</odoo>