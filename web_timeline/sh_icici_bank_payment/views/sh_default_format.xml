<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_default_formate_form" model='ir.ui.view'>
        <field name="name">sh.default.formate.form</field>
        <field name="model">sh.default.payment</field>
        <field name="arch" type="xml">
            <form string="Default Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="total_amount" required="True"/>
                        </group>
                    </group>
                    <div class="o_horizontal_separator">Default Format</div>
                    <field name="default_formate" required="True"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id='sh_default_formate_tree' model='ir.ui.view'>
        <field name="name">sh.default.formate.tree</field>
        <field name="model">sh.default.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <record id="sh_default_formate_action" model="ir.actions.act_window">
        <field name="name">Default Payment Format</field>
        <field name="res_model">sh.default.payment</field>        
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Default Payment Format
            </p>
        </field>
    </record>

    <menuitem action="sh_default_formate_action" id="sh_default_payment_formate_item" parent="sh_hr_payroll.menu_hr_payroll_configuration" sequence="50" groups="sh_hr_payroll.group_hr_payroll_manager"/>
</odoo>