<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_project_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.project</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='project_time']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="content-group" >
                            <div class="mt16">
                                <label for="invoice_product_id" class="o_light_label"/>
                                <field name="invoice_product_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>