<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<record id="sh_sync_repo_wizard_view_form" model="ir.ui.view">
		<field name="name">sh.repo.wizard.view.form</field>
		<field name="model">sh.repo.wizard</field>
		<field name="arch" type="xml">
			<form string="Sync Repo">
				<sheet>
					<group>
						<group>
							<field name="repo" readonly="1" />
						</group>
						<group></group>
					</group>
					<field name="sh_repo_wizard_lines" options="{'create': False}">
						<tree decoration-danger="comment == 'Missing comment id !'" decoration-success="comment == 'New'">
							<field name="name" />
							<field name="sh_branch_id" />
							<field name="comment" />
							<field name="module_id" invisible="1" />
							<field name="sha" invisible="1" />
							<field name="sh_module_url" invisible="1" />
						</tree>
					</field>
					<footer>
						<button name="btn_add_to_queue" string="Add To Queue" type="object" class="btn btn-primary" />
						<button special="cancel" string="Cancel" class="oe_link" />
					</footer>
				</sheet>
			</form>
		</field>
	</record>

	<record id="sh_sync_repo_wizard_action" model="ir.actions.act_window">
		<field name="name">Sync Repo Wizard</field>
		<field name="res_model">sh.repo.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>