<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_timesheet_document">
        <t t-call="web.external_layout">
            <h1>Test 456</h1>
            <div class="page">
                <div class="oe_structure"/>
                <h3 style="padding-bottom:10px;text-align:center">
                    <t t-esc="doc.name"/>
 - Timesheet</h3>
                <h5 style="padding-bottom:10px;text-align:center">(
                    <t t-esc="doc.timesheet_from_date"/>
                    -                    <t t-esc="doc.timesheet_to_date"/>
                )</h5>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="5"/>
                            <th name="th_description" class="text-start">Date</th>
                            <th name="th_quantity" class="text-end">Employee</th>
                            <th name="th_priceunit" class="text-end">Description</th>
                            <th name="th_taxes" class="text-end">Time</th>
                        </tr>
                    </thead>

                    <tbody class="sale_tbody">
                        <tr t-foreach="doc.timesheet_ids" t-as="line">
                            <t t-if="line.date &gt;= doc.timesheet_from_date and line.date &lt;= doc.timesheet_to_date">
                                <td name="td_date" class="text-start">
                                    <span t-field="line.date"/>
                                </td>
                                <td name="td_employee" class="text-end">
                                    <span t-field="line.employee_id.name"/>
                                </td>
                                <td name="td_desc" class="text-end">
                                    <span t-field="line.name"/>
                                </td>
                                <td name="td_time" class="text-end">
                                    <span t-esc="line.unit_amount" t-options='{"widget": "float_time"}'/>
                                </td>
                            </t>
                        </tr>
                        <tr class="is-subtotal text-end">
                            <td name="td_section_subtotal" colspan="99" style="padding-top:20px;">
                                <strong class="mr16">Total Hours</strong>
                                <span t-esc="doc.changed_effective_hours" t-options='{"widget": "float_time"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_timesheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sh_timesheet_report.report_timesheet_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
