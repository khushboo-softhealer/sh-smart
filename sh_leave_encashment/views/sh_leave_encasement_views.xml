    <!-- Action sh.leave.encasement -->
    <record id="action_sh_leave_encasement" model="ir.actions.act_window">
        <field name="name">Sh Leave Encasement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.leave.encasement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sh_leave_encasement_menu" name="Leave Encasement" action="action_sh_leave_encasement" sequence="10"/>
