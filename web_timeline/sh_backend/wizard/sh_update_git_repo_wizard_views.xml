<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_update_git_repo_wizard_form" model="ir.ui.view">
        <field name="name">update.git.repo.wizard.form</field>
        <field name="model">sh.update.git.repo.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="git_repo" />
                        <field name="product_ids" invisible="1" />
                    </group>
                </group>

                <footer>
                    <button string="Update Repos" class="oe_highlight" type="object"
                        name="update_repos" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"
                        icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
