<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- VIEW: Tree -->
    <record id="sh_bug_state_log_view_tree" model="ir.ui.view">
        <field name="name">State Change Analysis</field>
        <field name="model">sh.bug.state.log</field>
        <field name="arch" type="xml">
            <tree create='0'>
                <field name="sh_bug_module_id"/>
                <field name="state_id" />
                <field name="date_in" />
                <field name="date_in_by" />
                <field name="date_out" />
                <field name="date_out_by" />
                <field name="day_diff" />
                <field name="time_diff" widget="float_time" />
                <field name="total_time_diff" widget="float_time" />
            </tree>
        </field>
    </record>

    <!-- VIEW: Search -->
    <record id="sh_bug_state_log_view_search" model="ir.ui.view">
        <field name="name">sh.bug.state.log.search</field>
        <field name="model">sh.bug.state.log</field>
        <field name="arch" type="xml">
            <search string="State Change Analysis">
                <!-- SEARCH -->
                <field name="sh_bug_module_id"/>
                <field name="state_id" />
                <!-- FILTER -->
                <!-- <filter string="" name="" domain="[('', '=', )]" /> -->
                <!-- <filter string="" name="" domain="[('', '=', )]" /> -->
                <!-- GROUP BY -->
                <group expand="0" string="Group By">
                    <filter string="Bug" name="group_by_bug" context="{'group_by':'sh_bug_module_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by':'state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- VIEW: Pivot -->
    <record id="sh_bug_state_log_view_pivot" model="ir.ui.view">
        <field name="name">sh.bug.state.log.pivot</field>
        <field name="model">sh.bug.state.log</field>
        <field name="arch" type="xml">
            <pivot string="Stage Change Analysis" disable_linking="True">
                <field name="sh_bug_module_id" type="row"/>
                <field name="state_id" type="row"/>
                <field name="day_diff" type="measure"/>
                <field name="time_diff" type="measure"/>
                <field name="total_time_diff" type="measure"/>
            </pivot>
        </field>
   </record>

    <!-- ACTION -->
    <record id="sh_bug_state_log_action" model="ir.actions.act_window">
        <field name="name">Bug State Change Analysis</field>
        <field name="res_model">sh.bug.state.log</field>
        <field name="context">{'search_default_group_by_bug': 1}</field>
        <field name="view_mode">tree,pivot</field>
    </record>

</odoo>