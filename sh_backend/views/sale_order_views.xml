<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_backend_for_quotation_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.request.for.quotation.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <field name="sh_confirm_date" readonly="1"></field>
            </field>
        </field>
    </record>

    <record id="sh_confirmation_date_tree_view" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="date_order"></field>
            </field>
        </field>
    </record>

</odoo>