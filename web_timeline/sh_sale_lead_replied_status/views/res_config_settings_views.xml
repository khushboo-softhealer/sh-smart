<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_lead_reply_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='crm']" position="inside">
                <h2>CRM Stage Notification Configuration</h2>
                <div class="row o_settings_container">
                    <div class="col-lg-6 o_setting_box">
                       <div class="o_setting_left_pane">
                          <field name="sh_crm_customer_replied" />
                       </div>
                       <div class="o_setting_right_pane">
                          <label for="sh_crm_customer_replied" />
                       </div>
                    </div>
                    <div class="col-lg-6 o_setting_box">
                       <div class="o_setting_left_pane">
                          <field name="sh_crm_staff_replied" />
                       </div>
                       <div class="o_setting_right_pane">
                          <label for="sh_crm_staff_replied" />
                       </div>
                    </div>
                </div>
                <div class="row o_settings_container">
                    <div class="col-lg-6 o_setting_box" attrs="{'invisible':[('sh_crm_customer_replied','=',False)]}">
                       <div class="o_setting_right_pane">
                          <label for="sh_crm_customer_replied_stage_id" />
                          <br />
                          <field name="sh_crm_customer_replied_stage_id" class="oe_inline" attrs="{'required':[('sh_crm_customer_replied','=',True)]}" />
                       </div>
                       <div class="o_setting_left_pane" />
                    </div>
                    <div class="col-lg-6 o_setting_box" attrs="{'invisible':[('sh_crm_staff_replied','=',False)]}">
                       <div class="o_setting_right_pane">
                          <label for="sh_crm_staff_replied_stage_id" />
                          <br />
                          <field name="sh_crm_staff_replied_stage_id" class="oe_inline" attrs="{'required':[('sh_crm_staff_replied','=',True)]}" />
                       </div>
                       <div class="o_setting_left_pane" />
                    </div>
                 </div>
            </xpath>
        </field>
    </record>
</odoo>