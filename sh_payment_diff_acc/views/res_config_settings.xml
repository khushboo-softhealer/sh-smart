<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_invoice_res_config_settings" model="ir.ui.view">
        <field name="name">Payment Difference Account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <h2>Payment Difference Account Configuration</h2>
                
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                          
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="loss_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="loss_account_id" />
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                          
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="profit_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="profit_account_id" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                          
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="paypal_fees_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="paypal_fees_account_id" />
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                          
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="paypal_to_bank_transfer_journal_id" class="col-lg-3 o_light_label"/>
                                    <field name="paypal_to_bank_transfer_journal_id" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                          
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="sh_paypal_vendor_ids" class="col-lg-3 o_light_label"/>
                                    <field name="sh_paypal_vendor_ids" widget = "many2many_tags" />
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        
                    </div>
                </div>

            </xpath>
            
        </field>
    </record>
</odoo>