<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_send_mail_quick_reply_form_view" model="ir.ui.view">
        <field name="name">sh.quick.reply</field>
        <field name="model">sh.quick.reply</field>
        <field name="arch" type="xml">
            <form string="Send Quick Reply Mail Template">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button> -->
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="sh_user_id" />
                            <field name="sh_common"/>
                        </group>
                    </group>
                    <group>
                        <field name="sh_description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_send_mail_quick_reply_tree_view" model="ir.ui.view">
        <field name="name">sh.quick.reply</field>
        <field name="model">sh.quick.reply</field>
        <field name="arch" type="xml">
            <tree string="Send Quick Reply Mail Template">
                <field name="name" />
                <field name="sh_user_id" />
            </tree>
        </field>
    </record>
    <record id="sh_send_mail_quick_reply_action" model="ir.actions.act_window">
        <field name="name">Send Quick Reply Mail Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.quick.reply</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="sh_send_quick_reply_sub_menu" name="Send Quick Reply Template" parent="sh_helpdesk.helpdesk_main_menu" action="sh_helpdesk.sh_send_mail_quick_reply_action" sequence="4" groups="sh_helpdesk.group_send_quick_reply"/>
</odoo>
