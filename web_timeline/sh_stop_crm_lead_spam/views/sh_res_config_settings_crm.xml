<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_crm_spmming_email_skip_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">        
            <xpath expr="//div[@data-key='crm']" position="inside">
                <h2>Skip Spaming Email</h2>
                <div class="row mt16 o_settings_container" name="spaming_email">
                    <div class="col-xs-12 col-md-6 o_setting_box">                                               
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="sh_skip_crm_lead_ids"></label>
                                    <field name="sh_skip_crm_lead_ids" widget="many2many_tags"/> 
                                </div>
                            </div>                              
                        </div>                                                            
                    </div>                    
                </div>
            </xpath>
        </field>
    </record>
    <record id="sh_model_crm_lead_action_stop_spaming" model="ir.actions.server">
        <field name="name">Add to spam</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">action = records.action_stop_spaming()</field>
    </record>
</odoo>