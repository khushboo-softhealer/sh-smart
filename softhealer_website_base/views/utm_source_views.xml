<odoo>
    <record id='sh_module_utm_source_tree_view' model='ir.ui.view'>
        <field name="name">sh.module.utm.source.tree.view</field>
        <field name="model">utm.source</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <record id="sh_module_utm_source_search_view" model="ir.ui.view">
        <field name="name">sh.module.utm.source.search.view</field>
        <field name="model">utm.source</field>
        <field name="arch" type="xml">
            <search string="Records">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="sh_module_utm_source_action" model="ir.actions.act_window">
        <field name="name">Source</field>
        <field name="res_model">utm.source</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Source
            </p>
        </field>
    </record>
</odoo>
