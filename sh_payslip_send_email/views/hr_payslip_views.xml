<?xml version="1.0" encoding="utf-8"?>
<odoo>        
    <record id="sh_hr_employee_payslip_send_mass_email_action" model="ir.actions.act_window">
        <field name="name">Send Payslip</field>         
        <!-- <field name="src_model">hr.payslip</field> -->
        <field name="res_model">mass.hr.payslip.mail.send</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sh_hr_payroll.model_hr_payslip" />
    </record>

    <record id="sh_hr_employee_payslip_send_mass_email_form" model="ir.ui.view">
        <field name="name">mass.hr.payslip.mail.send.form</field>
        <field name="model">mass.hr.payslip.mail.send</field>
        <field name="arch" type="xml">
            <form string="Mass Payslip Email">
                <p>
                    Mail will be sent to all selected Employee
                </p>
                <footer>
                    <button string="Send Email" name="send_payslip_email_confirm" type="object" default_focus="1" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>   
</odoo>
