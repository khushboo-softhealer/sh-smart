<?xml version="1.0"?>
<odoo>
    <record id="sh_hr_attendance_modification_rule_manager" model="ir.rule">
        <field name="name">Manager full access</field>
        <field name="model_id" ref="model_sh_attendance_modification_request" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]" />
    </record>

    <record id="sh_hr_attendance_modification_rule_officer" model="ir.rule">
        <field name="name">Office Own + Team Meamber</field>
        <field name="model_id" ref="model_sh_attendance_modification_request" />
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id.coach_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]" />
    </record>

    <record id="sh_hr_attendance_modification_rule_employee" model="ir.rule">
        <field name="name">Employee : modify own attendance modification only</field>
        <field name="model_id" ref="model_sh_attendance_modification_request" />
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>
</odoo>
