<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_multi_company_purchase_view_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.multi.company</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"></field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="company_alert" invisible="1"></field>
            </field>
            <xpath expr="//sheet/div[@name='button_box']" position="after">
                <div class="alert alert-info text-center o_form_header"
                    style="background: #b7dbbc; color: darkgreen; border: 1px solid darkgreen;"
                    role="alert" attrs="{'invisible': [('company_alert','=',False)]}">
                    <strong>Please make sure company is Softhealer Technologies Private Limited !</strong>
                </div>
                <div class="alert alert-info text-center o_form_header"
                    style="background: #efd9d9; color: maroon; border: 1px solid #e9b4b4;"
                    role="alert" attrs="{'invisible': [('company_alert','=',True)]}">
                    <strong>Please make sure company is not Softhealer Technologies Private Limited !</strong>
                </div>
            </xpath>
        
        </field>
    </record>
</odoo>