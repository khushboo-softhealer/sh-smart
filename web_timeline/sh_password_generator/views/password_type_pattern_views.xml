<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_password_type_pattern_form" model="ir.ui.view">
		<field name="name">password.pattern.form</field>
		<field name="model">password.type.pattern</field>
		<field name="arch" type="xml">
			<form string="Password Type Pattern">
				<sheet>
					<group>
						<field name="name" required="1"/>
					</group>
					<group>
						<group>
							<field name="pattern_type_ids" widget="many2many_checkboxes" options="{'no_create':True,'no_create_edit':True}" required="1"/>
						</group>
						<group>
							<field name="password_length" required="1"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
    </record>
 </odoo>