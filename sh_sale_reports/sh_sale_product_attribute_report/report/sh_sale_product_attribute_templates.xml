<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="sh_sale_product_report">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<div class="page">
					<style>tr.attr_cls:last-child &gt; td,tr.row_cls:last-child &gt; td {
						border-bottom: 0px !important;
					}
					tr.row_cls td:last-child{border-right: 0px !important;}
					.sh_main_table tr.sh_main_tbl_tr:nth-child(odd){background: #e7e7e7;}
					.sh_main_table tr.sh_main_tbl_tr:nth-child(even){background: #ffffff;}
					*{border: 0px !important;}</style>
					<div class="oe_structure" />
					<div style="text-align:center;font-size: 25px;margin-bottom:20px;">
						<strong>Product Attribute Wise Sales Report</strong>
					</div>
					<t t-foreach="vals" t-as="v">
						<div class="d-flex w-100 space-between row">
							<h5 class="col-1" />
							<h5 class="col-4">
								<b>From Date:</b>
								<span t-esc="v.get('sh_from_date')" t-options="{'widget': 'date'}" />
							</h5>
							<h5 class="col-2" />
							<h5 class="col-4">
								<b>To Date:</b>
								<span t-esc="v.get('sh_to_date')" t-options="{'widget': 'date'}" />
							</h5>
							<h5 class="col-1" />
						</div>
					</t>
					<br />
					<t t-if="v.get('sh_select_product_cat')=='product'">
						<t t-if="sale_product">
							<t t-set="count" t-value="0" />
							<t t-foreach="sale_product.keys()" t-as="partner_key">
								<t t-if="count!=0">
									<div style="page-break-before:always;" />
									<br />
								</t>
								<t t-set="count" t-value="count + 1" />
								<div class="row">
									<div class="col-3" />
									<div class="col-6" style="font-size: 20px;">

										<strong>Partners:</strong>
										<span t-esc="partner_key" />

									</div>
									<div class="col-3" />
								</div>
								<br />
								<table class="table table-sm o_main_table table-bordered sh_main_table" style="table-layout: fixed; border: 0px;" id="">
									<thead style="display: table-row-group;" class="thead-dark">
										<tr style="border: 0px;">
											<th style="border: 0px;background: #212121;color: #ffffff;">Product</th>
											<th style="border: 0px;background: #212121;color: #ffffff;">Attributes</th>
											<t t-foreach="v.get('horizontal_attr_list')" t-as="h_attr">
												<th style="border: 0px;text-align: center;background: #212121;color: #ffffff;">
													<span t-esc="h_attr" />
												</th>
											</t>
										</tr>
									</thead>
									<tbody class="sale_tbody">
										<t t-foreach="sale_product[partner_key].keys()" t-as="product">
											<tr class="sh_main_tbl_tr">
												<td style="border: 0px;border-right: 1px solid #212121;" class="align-middle">
													<span t-esc="product" />
												</td>
												<t t-set="h_len" t-value="len(v.get('horizontal_attr_list'))" />
												<t t-set="v_len" t-value="len(v.get('vertical_attr_list'))" />
												<td style="border: 0px !important;" class="p-0 align-middle m-0">
													<table class="table table-sm o_main_table" style="table-layout: fixed;width:100%;margin: 0; border:0 !important;">
														<t t-foreach="v.get('vertical_attr_list')" t-as="v_attr">
															<tr class="attr_cls" style="border: 0px !important;">
																<td class="align-middle text-center" style="border: 0px !important;margin:0;padding:0px;">
																	<span t-esc="v_attr" style="border: 0px !important;" />
																</td>
															</tr>
														</t>
													</table>
												</td>
												<td style="border: 0px;" t-att-colspan="h_len" class="p-0 align-middle m-0">
													<table class="table table-sm o_main_table" style="table-layout:fixed; width:100%; border:0;margin:0;padding:0px;">
														<t t-set="v_index" t-value="0" />
														<t t-foreach="sale_product[partner_key][product]" t-as="h_attrs">
															<tr class="row_cls">
																<t t-foreach="h_attrs" t-as="v_attrs">
																	<td class="align-middle text-center" style="border: 0px;">
																		<span t-esc="v_attrs" />
																	</td>
																</t>
															</tr>
															<t t-set="v_index" t-value="v_index+1" />
														</t>
													</table>
												</td>
											</tr>
										</t>
									</tbody>
								</table>
							</t>
						</t>
					</t>
					<t t-if="v.get('sh_select_product_cat')=='category'">
						<t t-if="sale_product">
							<t t-set="count" t-value="0" />
							<t t-foreach="sale_product.keys()" t-as="partner_key">
								<t t-foreach="sale_product[partner_key].keys()" t-as="categ_key">
									<t t-if="count!=0">
										<div style="page-break-before:always;" />
										<br />
									</t>
									<t t-set="count" t-value="count + 1" />
									<div class="row">
										<div class="col-1" />
										<div class="col-5" style="font-size: 20px;">
											<strong>Partners:</strong>
											<span t-esc="partner_key" />
										</div>
										<div class="col-5" style="font-size: 20px;">
											<strong>Category:</strong>
											<span t-esc="categ_key" />
										</div>
										<div class="col-1" />
									</div>
									<br />
									<table class="table table-sm o_main_table table-bordered sh_main_table" style="table-layout: fixed; border: 0px;" id="">
										<thead style="display: table-row-group;" class="thead-dark">
											<tr style="border: 0px;">
												<th style="border: 0px;background: #212121;color: #ffffff;">Product</th>
												<th style="border: 0px;background: #212121;color: #ffffff;">Attributes</th>
												<t t-foreach="v.get('horizontal_attr_list')" t-as="h_attr">
													<th style="border: 0px;background: #212121;color: #ffffff;" class="text-center">
														<span t-esc="h_attr" />
													</th>
												</t>
											</tr>
										</thead>
										<tbody class="sale_tbody">
											<t t-foreach="sale_product[partner_key][categ_key].keys()" t-as="product">
												<tr class="sh_main_tbl_tr">
													<td style="border: 0px;border-right: 1px solid #212121;" class="align-middle">
														<span t-esc="product" />
													</td>
													<t t-set="h_len" t-value="len(v.get('horizontal_attr_list'))" />
													<t t-set="v_len" t-value="len(v.get('vertical_attr_list'))" />
													<td style="border: 0px !important;" class="p-0  align-middle">
														<table class="table table-sm o_main_table" style="table-layout: fixed; width:100%; margin-bottom: 0; border:0 !important;">
															<t t-foreach="v.get('vertical_attr_list')" t-as="v_attr">
																<tr class="attr_cls" style="border: 0px !important;">
																	<td class="align-middle border-0 text-center" style="border: 0px !important;">
																		<span t-esc="v_attr" style="border: 0px !important;" />
																	</td>
																</tr>
															</t>
														</table>
													</td>
													<td style="border: 0px;" t-att-colspan="h_len" class="p-0  align-middle">
														<table class="table table-sm o_main_table" style="table-layout: fixed;width:100%:border:0;margin:0">
															<t t-set="v_index" t-value="0" />
															<t t-foreach="sale_product[partner_key][categ_key][product]" t-as="h_attrs">
																<tr class="row_cls">
																	<t t-foreach="h_attrs" t-as="v_attrs">
																		<td class="align-middle text-center" style="border: 0px;">
																			<span t-esc="v_attrs" />
																		</td>
																	</t>
																</tr>
																<t t-set="v_index" t-value="v_index+1" />
															</t>
														</table>
													</td>
												</tr>
											</t>
										</tbody>
									</table>
									<br />
								</t>
							</t>
						</t>
					</t>
				</div>
			</t>
		</t>
	</template>
	<record id="sh_sale_product_report_action" model="ir.actions.report">
		<field name="name">sale Product Report</field>
		<field name="model">report.sh_sale_reports.sh_sale_product_report</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">sh_sale_reports.sh_sale_product_report</field>
		<field name="print_report_name">'Sale Product Report'</field>
	</record>
</odoo>
   