<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.rule" id="invoice_recurring_comp_rule">
        <field name="name">Invoice Recurring multi-company</field>
        <field name="model_id" ref="model_sh_invoice_recurring" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="invoice_recurring__line_comp_rule">
        <field name="name">Invoice Recurring Line multi-company</field>
        <field name="model_id" ref="model_sh_invoice_recurring_line" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
