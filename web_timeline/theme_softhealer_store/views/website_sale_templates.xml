<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Information -->
    <template id='sh_ecommerce_module_information_common_tmpl' name='Module Information Common tmpl'>
        <div class="">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class='w-200px'>Technical Name</td>
                        <td><span t-if='sh_technical_name' t-esc='sh_technical_name'></span></td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Versions</td>
                        <td><span t-if='sh_versions' t-esc='sh_versions'></span></td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Last Update Date</td>
                        <td><span t-if='last_updated_date' t-esc='last_updated_date'></span></td>
                    </tr>
                    <!-- <tr>
                        <td class='w-200px'>Editions</td>
                        <td>
                            <t t-if='editions' t-foreach='editions' t-as='edition'>
                                <span class='badge bg-dark' t-esc='edition'></span>
                            </t>
                        </td>
                    </tr> -->
                    <tr>
                        <td class='vertical-align-middle w-200px'>Depends</td>
                        <td>
                            <t t-if='depends_product_list' t-foreach='depends_product_list' t-as='depends_product'>
                                <span class='' style='background:#e4e4e4;padding: 0.35em 0.5em;display: inline-block;margin-bottom: 0.3em;' t-field='depends_product.display_name'></span>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td class='vertical-align-middle w-200px'>Apps</td>
                        <td>
                            <t t-if='required_apps' t-foreach='required_apps' t-as='required_app'>
                                <span class='' style='background:#e4e4e4;padding: 0.35em 0.5em;display: inline-block;margin-bottom: 0.3em;' t-esc='required_app'></span>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td class='w-200px'>Licence</td>
                        <td><span t-if='license' t-esc='license'></span></td>
                    </tr>
                    <tr>
                        <td class='vertical-align-middle w-200px'>Category</td>
                        <td>
                            <t t-if='public_categ_ids' t-foreach='public_categ_ids' t-as='public_categ_id'>
                                <a class='badge bg-primary' t-attf-href='/shop/category/{{ slug (public_categ_id) }}' t-field='public_categ_id.name' t-att-title='public_categ_id.name'></a>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <!-- Change Log Common Tmpl-->
    <template id='sh_ecommerce_change_log_common_tmpl' name='Change Log Common tmpl'>
        <div class="">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Version</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="change_logs" t-as="change_log">
                        <tr>
                            <td>
                                <span t-field="change_log.version" />
                            </td>
                            <td>
                                <span t-field="change_log.details" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>

    <!-- Product Detail page Tab Section define -->
    <template id='sh_ecommerce_detail_page_tab_section' inherit_id='website_sale.product' name='Detail Page Common Tab Section in Detail page'>
        <xpath expr="//section[@id='product_detail']//div[@id='product_detail_main']" position="after">
            <section class='sh_custom_main_tab_wrapper'>
                <div class='sh_custom_main_tab_main'>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" style='border-bottom:0;'>
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#sh_custom_tab_blog_details">About Module</a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_change_log_details">Change Logs</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_module_information">Module Information</a>
                        </li>
                        <li class="nav-item" t-if="is_view_active('website_sale.product_comment')">
                            <a class="nav-link" data-bs-toggle="tab" href="#sh_custom_tab_discuss_and_rating">Discuss &amp; Rating</a>
                        </li>
                    </ul>
  
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane container active" id="sh_custom_tab_blog_details"/>
                        <!-- <div class="tab-pane container" id="sh_custom_tab_change_log_details"/> -->
                        <div class="tab-pane container" id="sh_custom_tab_module_information"/>
                        <div class="tab-pane container" id="sh_custom_tab_discuss_and_rating" t-if="is_view_active('website_sale.product_comment')">
                            <div id="o_product_page_reviews_content">
                                <t t-call="portal.message_thread">
                                    <t t-set="object" t-value="product" />
                                    <t t-set="display_rating" t-value="True" />
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>

        <!-- commented the social media links -->   
        <!-- <xpath expr='//div[@id="o_wsale_cta_wrapper"]' position='after'>
            <div class='cls_custom_share_section'>
                <div class="h4" contenteditable="false">
                <t t-snippet-call="website.s_share">
                    <t t-set="_exclude_share_links" t-value="['whatsapp', 'pinterest']"/>
                    <t t-set="_no_title" t-value="True"/>
                    <t t-set="_classes" t-valuef="d-inline-block"/>
                    <t t-set="_link_classes" t-valuef="mx-1 my-0"/>
                </t>
            </div>
            </div>
        </xpath> -->

        <!-- product title-->
        <xpath expr="//div[@id='product_details']//h1" position="attributes">
            <attribute name="t-att-title" separator=" " add="product.name" remove="" value=""></attribute>
        </xpath>

    </template>
    <!-- Product Detail page Tab Section define -->


    <!--ALTERNATIVE PRODUCTS-->
    <template id='theme_softhealer_store_alternative_section' inherit_id='website_sale.product' name='Custom alternative section'>
        <div itemprop="description" position="after">
            <div class="oe_structure oe_structure_solo oe_website_sale oe_unremovable oe_unmovable" t-if="product.alternative_product_ids">
                <section id="sh_store_product_box" class="sh_store_product_box_section">
                    <div class="container">
                    <header>
                        <div class="sh_store_hading">
                            <h5 class="sh_sub_title">Discover More Apps</h5>
                            <h2>Alternative Apps</h2>
                        </div>
                    </header>
                        <div class='row'>
                            <t t-foreach="product.alternative_product_ids" t-as="product">
                                <t t-set="combination" t-value="product._get_first_possible_combination()"/>
                                <t t-set="combination_info" t-value="product._get_combination_info(combination, add_qty=add_qty or 1, pricelist=pricelist)"/>
                                <div class='col-xxl-3 col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 pr-0 pl-0 pb-3'>
                                    <div class="sh_store_card mt-4">
                                        <t t-set="product_href" t-value="product.website_url" />
                                        <form action="/shop/cart/update" method="post" class="card oe_product_cart" itemscope="itemscope" itemtype="http://schema.org/Product">
                                            <div class="row" style="margin-left: 0px !important; margin-right: 0px !important;">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                                <div class="sh_store_img_box">
                                                    <a t-att-href="product_href" style="text-decoration: none; cursor: pointer; width: 100%; height: 100%; position: relative; text-align: center;">
                                                        <img t-attf-src="/web/image/product.template/#{product.id}/image_1920" class="img img-fluid" itemprop="image"/>
                                                    </a>
                                                </div>
                                                <div class="sh_store_product_content">
                                                    <div class="sh_store_product_detail">
                                                        <a style="text-decoration: none;" itemprop="name" t-att-href="product_href" t-att-content="product.name" t-raw="product.name" />
                                                        <div class="sh_store_rating" itemprop="aggregateRating">
                                                            <t t-call="portal_rating.rating_widget_stars_static">
                                                                <t t-set="rating_avg" t-value=" product.rating_avg" />
                                                                <t t-set="rating_count" t-value="product.rating_count" />
                                                            </t>
                                                        </div>
                                                        <div class="sh_store_app_price" itemprop="price">
                                                            <div>
                                                                <t t-call="website_sale.product_price"/>
                                                                <small t-if="combination_info['base_unit_price']"
                                                                    class="ms-1 text-muted o_base_unit_price_wrapper d-none" groups="website_sale.group_show_uom_price">
                                                                    <t t-call='website_sale.base_unit_price'/>
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="sh_store_product_bottom">
                                                        <div class="sh_store_product_cart" itemprop="availability">
                                                            <div class="sh_product_icon">
                                                                <span class="add_to_wishlist">
                                                                    <t t-set="product_variant_id" t-value="product.product_variant_id" />
                                                                    <t t-set="in_wish" t-value="product_variant_id._is_in_wishlist()" />
                                                                    <button t-if="product_variant_id" type="button" role="button" class="btn btn-secondary o_add_wishlist list_btn" t-att-disabled="in_wish or None" title="Add to Wishlist" t-att-data-product-template-id="product.id" t-att-data-product-product-id="product_variant_id" data-action="o_wishlist">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-heart" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="Add to wishlist">
                                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                                            <path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572" />
                                                                        </svg>
                                                                    </button>
                                                                </span>
                                                            </div>
                                                            <div class="sh_product_icon">
                                                                <button class="add_to_cart">
                                                                    <t t-set="product_variant_id" t-value="product.product_variant_id.id" />
                                                                    <input name="product_id" t-att-value="product_variant_id" type="hidden" />
                                                                    <t t-if="product_variant_id">
                                                                        <a href="#" role="button" class="a-submit catr_btn" aria-label="Shopping cart" title="Shopping cart">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-shopping-cart" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                                            <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                                                                            <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                                                                            <path d="M17 17h-11v-14h-2" />
                                                                            <path d="M6 5l14 1l-1 7h-13" />
                                                                            </svg>
                                                                        </a>
                                                                    </t>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <div class="sh_store_download">
                                                            <p> <span style="position: relative;top: 3px;"><t t-esc='product.sh_product_counter'></t></span> <span>
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-download" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                                    <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
                                                                    <path d="M7 11l5 5l5 -5" />
                                                                    <path d="M12 4l0 12" />
                                                                </svg>
                                                                </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>       
                                        </form>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <!-- <div class="js_cls_render_dynamic_product_area oe_website_sale o_not_editable" /> -->
                    </div>
                </section>
            </div>
        </div>
    </template>
    <!--ALTERNATIVE PRODUCTS-->



    <!--CUSTOM FOOTER-->
    <template id="theme_softhealer_store_sh_snippet_options_custom_header" inherit_id="website.snippet_options"
        name="Website Custom Footer">
        <!--header-->
        <xpath expr="//div[@data-js='HeaderLayout']//we-button[@data-name='header_default_opt']" position="before">
            <we-button title="Softhealer Store Header"
                data-name="header_global_search_opt"
                data-customize-website-views="theme_softhealer_store.theme_softhealer_header_custom_global_search"
                data-customize-website-variable="'Softhealer-Custom-header'"
                data-img="/theme_softhealer_store/static/src/img/header.svg" />
        </xpath>
        
        <!-- Footer -->
            <xpath expr="//we-select[@data-variable='footer-template']//we-button" position="before">
            <we-button title="Softhealer Store Footer"
                data-customize-website-views="theme_softhealer_store.theme_softhealer_store_template_softhealer_custom_footer"
                data-customize-website-variable="'Softhealer-Custom-Footer'"
                data-img="/theme_softhealer_store/static/src/img/footer.svg" />
            </xpath>
    </template>

    <!-- Product detail page inherit-->
    <template id='theme_softhealer_store_product_detail_page_inherit' inherit_id="website_sale.product" name='Product detail page inherit'>
        
        <!-- image col change-->
        <xpath expr="//div[contains(@t-attf-class, 'o_wsale_product_images')]" position="attributes">
            <attribute name="t-attf-class" separator=" " add="col-lg-3" remove="col-lg-#{image_cols[0]}" value=""></attribute>
        </xpath>

        <!-- product detail change-->
        <xpath expr="//div[@id='product_details']" position="attributes">
            <attribute name="t-attf-class" separator=" " add="col-lg-9" remove="col-lg-#{image_cols[0]}" value=""></attribute>
        </xpath>

        <!-- product detail breadcrumbs and heading -->
        <xpath expr="//section[@id='product_detail']//div[hasclass('row')]" position="before">
            <h2>Product Detail</h2>
        </xpath>

        <xpath expr="//section[@id='product_detail']//div[hasclass('row')]//div[hasclass('col-lg-6')]" position="attributes">
            <attribute name="class" separator=" " add="d-none" remove="" value=""></attribute>
        </xpath>
        
        <xpath expr="//section[@id='product_detail']//div[hasclass('row')]//div[hasclass('col-lg-6')][2]" position="attributes">
            <attribute name="class" separator=" " add="col-lg-12" remove="col-lg-6" value=""></attribute>
        </xpath>

        <!--Qty counter-->
        <xpath expr="//div[@id='add_to_cart_wrap']" position="replace">
            <div class="sh_softhealer_store_version_div">
                <t t-call="sale.variants" />
            </div>
            <div id="add_to_cart_wrap" t-attf-class="{{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-flex'}} align-items-center mt8">
                <a data-animation-selector=".o_wsale_product_images" role="button" id="add_to_cart" t-attf-class="btn btn-primary js_check_product a-submit flex-grow-1 me-2 #{'btn-lg' if ctaSizeBig else ''}" href="#">
                    <span>Add to Cart</span>
                </a>
            </div>
        </xpath>

    </template>

    
    <!-- SHOP PAGE-->

    <template id='theme_softhealer_store_shop_page_inherit' inherit_id='website_sale.products' name='Shop page inherit'>
        
        <xpath expr="//div[hasclass('products_header')]" position="before">
            <div class='sh_cls_custom_shop_banner'>
                <div class='d-flex justify-content-between align-items-center mb-4 mt-4'>
                    <h1>
                        <t t-if='not category'>
                            Shop
                        </t>
                        <t t-if='category'>
                            <t t-esc='category.name'></t>
                        </t>
                    </h1>
                    <div class="sh_apps_found">
                        <span t-if='search_count' t-esc='search_count'></span> Apps Found.
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr='//t[@t-call="website_sale.search"]' position='replace'></xpath>
        <xpath expr='//t[@t-call="website_sale.pricelist_list"]' position='replace'>
            <div class='d-flex'>
                <div class='sh_cls_shop_filter_custom'>
                    <ul>
                        <li>
                            <a href='/shop' t-attf-class='btn btn-primary #{"active" if custom_filter == None else ""}'>All</a>
                            <a href='/shop?price=Free' t-attf-class='btn btn-primary #{"active" if custom_filter == "Free" else ""}'>Free</a>
                            <a href='/shop?price=Paid' t-attf-class='btn btn-primary #{"active" if custom_filter == "Paid" else ""}'>Paid</a>
                        </li>
                    </ul>
                    
                    <div class="sh_all_ver">
                  
                        <!-- Version Selection-->
                        <form class="js_attributes position-relative mb-2" method="get">
                            <input t-if="category" type="hidden" name="category" t-att-value="category.id" />
                            <input type="hidden" name="search" t-att-value="search" />
                            <input type="hidden" name="order" t-att-value="order"/>
                            <t t-foreach="attributes" t-as="a">
                                <t t-if="a.display_type == 'radio'">

                                <div class="dropdown js_cls_custom_shop_filter_dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="id_store_shop_filter_dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style='margin-left: 10%;'>
                                        <b t-esc='attr_name'></b>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="id_store_shop_filter_dropdown">
                                        <a class="dropdown-item" href="#" value="">All Versions</a>
                                        <t t-foreach="a.value_ids" t-as="v">
                                            <a class="dropdown-item" href="#" t-att-value="'%s-%s' % (a.id,v.id)" t-esc="v.name"></a>
                                        </t>
                                    </div>
                                </div>

                                <select class="d-none form-select css_attribute_select mb-2" name="attrib">
                                    <option value="" selected="true">All Versions</option>
                                    <t t-foreach="a.value_ids" t-as="v">
                                        <option t-att-value="'%s-%s' % (a.id,v.id)" t-esc="v.name" t-att-selected="v.id in attrib_set" />
                                    </t>
                                </select>
                                </t>
                            </t>
                        </form>
                    </div>
                </div>
            </div>
            <div class='sh_cls_custom_search_bar'>
                <t t-call="website_sale.search">
                    <t t-set="search" t-value="original_search or search"/>
                    <t t-set="_form_classes" t-valuef="d-lg-inline {{'d-inline' if not category else ''}}"/>
                    <t t-set='hide_product_count' t-value='true'></t>
                </t>
            </div>
        </xpath>

        <!--Remove shop page breadcrumbs-->
        <xpath expr="//t[@t-call='website_sale.products_breadcrumb']" position="replace"></xpath>

        <!--category remove in responsive-->
        <xpath expr="//div[@t-if='category']" position="replace"></xpath>
    </template>

    <template id='theme_softhealer_store_shop_page_product_box_rating_option' name="Shop Rating" inherit_id="website_sale.products_item" active="True" customize_show="True">
        <xpath expr="//div[hasclass('product_price')]" position="before">
            <!-- RATING -->
            <t t-if="is_view_active('website_sale.product_comment')">
                <t t-call="portal_rating.rating_widget_stars_static">
                    <t t-set="rating_avg" t-value="product.rating_avg"/>
                    <t t-set="trans_text_plural">%s</t>
                    <t t-set="trans_text_singular">%s</t>
                    <t t-set="rating_count" t-value="(trans_text_plural if product.rating_count > 1 else trans_text_singular) % product.rating_count"/>
                </t>
            </t>
        </xpath>
    </template>

    <template id="theme_softhealer_store_shop_page_product_box" name="Shop product box" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('o_wsale_product_btn')]" position="replace"></xpath>
        <xpath expr="//div[hasclass('o_wsale_product_sub')]" position="attributes">
            <attribute name="class" separator=" " add="" remove="d-flex justify-content-between align-items-end pb-1" value=""></attribute>
        </xpath>

        <xpath expr="//div[hasclass('product_price')]" position="after">
            <div class='o_wsale_product_btn' style='opacity:1;position:relative;top:0;left:0;bottom:0;right:0;'>
                
                <!--Add to cart-->
                <t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>
                <input name="product_id" t-att-value="product_variant_id" type="hidden"/>
                
                <t t-if="product_variant_id and template_price_vals['price_reduce'] or not website.prevent_zero_price_sale">
                    <a t-if="product._website_show_quick_add()"
                    href="#" role="button" class="btn btn-primary a-submit" aria-label="Shopping cart" title="Shopping cart">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-shopping-cart" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                            <path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
                            <path d="M17 17h-11v-14h-2"></path>
                            <path d="M6 5l14 1l-1 7h-13"></path>
                        </svg>
                    </a>
                </t>

                <t t-set="product_variant_id" t-value="product._get_first_possible_variant_id()"/>
                <button t-if="product_variant_id" type="button" role="button" class="d-none d-md-inline-block btn btn-outline-primary bg-white o_add_compare" title="Compare" aria-label="Compare" t-att-data-product-product-id="product_variant_id" data-action="o_comparelist"><span class="fa fa-exchange"></span></button>
                <span class="sh_apps_download">
                  <span t-esc='product.sh_product_counter'></span> 
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-download" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path>
                        <path d="M7 11l5 5l5 -5"></path>
                        <path d="M12 4l0 12"></path>
                    </svg> 
                </span>
            </div>
        </xpath>

        
    </template>

        
    <template id="theme_softhealer_store_portal_user_dropdown_inherit" name="Portal user dropdown" inherit_id="portal.user_dropdown">
        <xpath expr="//*[@id='o_logout_divider']" position="before">
            <a href="/shop/wishlist" role="menuitem" class="dropdown-item">
                <i class='fa fa-heart-o me-1 text-muted'/>
                My Wishlist
            </a>
        </xpath>
    </template>

    <template id="theme_softhealer_store_search_bar_btn" name="template_name" inherit_id='website.website_search_box'>
        <xpath expr='//span[hasclass("oe_search_found")]' position='attributes'>
            <attribute name="t-attf-style" separator=" " add="#{'display:none;' if hide_product_count else ''}" remove="" value=""></attribute>
        </xpath>
    </template>

    <template id="theme_softhealer_store_product_page_variants" name="custom sale variant shop" inherit_id="sale.variants">
        <xpath expr="//strong[hasclass('attribute_name')]" position="attributes">
            <attribute name="class" separator=" " add="d-none" remove="" value=""></attribute>
        </xpath>
    </template>

    <!-- cart-->
    <template id="theme_softhealer_store_cart_tmpl_inherit" name="custom cart tmpl" inherit_id="website_sale.cart">
        <xpath expr="//div[hasclass('d-flex','justify-content-between')]//a" position="attributes">
            <attribute name="class" separator=" " add="btn-primary" remove="btn-secondary" value=""></attribute>
        </xpath>
    </template>

    <!--cart summary-->
    <template id="theme_softhealer_store_cart_summary_tmpl_inherit" name="custom cart summarytmpl" inherit_id="website_sale.short_cart_summary">
        <xpath expr="//a" position="attributes">
            <attribute name="class" separator=" " add="btn-primary" remove="btn-secondary" value=""></attribute>
        </xpath>
    </template>

    <!-- Responsive shop pagee filters-->
    <template id="theme_softhealer_store_shop_page_filter_responsive" name="template_name" inherit_id="website_sale.o_wsale_offcanvas">
        <xpath expr="//form[contains(@t-attf-class, 'js_attributes')]" position="before">
            
            <!-- Off canvas shop static filter-->
            <div class="accordion-item">
                <h2 id="theme_softhealer_store_shop_static_filters" class="accordion-header mb-0">
                    <button class="o_wsale_offcanvas_title accordion-button border-top rounded-0 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#theme_softhealer_store_static_filter_section" aria-expanded="false" aria-controls="theme_softhealer_store_static_filter_section">
                            <b>Price</b>
                    </button>
                </h2>
                <div id="theme_softhealer_store_static_filter_section" class="accordion-collapse collapse" aria-labelledby="theme_softhealer_store_shop_static_filters">
                    <div class="accordion-body pt-0">
                        <a href="/shop" t-attf-class="btn btn-primary #{&quot;active&quot; if custom_filter == None else &quot;&quot;}">All</a>
                        <a href="/shop?price=Free" t-attf-class="btn btn-primary #{&quot;active&quot; if custom_filter == &quot;Free&quot; else &quot;&quot;}">Free</a>
                        <a href="/shop?price=Paid" t-attf-class="btn btn-primary #{&quot;active&quot; if custom_filter == &quot;Paid&quot; else &quot;&quot;}">Paid</a>
                    </div>
                </div>
            </div>

            <!-- Off canvas shop static filter version-->
            <form t-attf-class="js_attributes d-flex flex-column" method="get">
                <input t-if="category" type="hidden" name="category" t-att-value="category.id"/>
                <input type="hidden" name="search" t-att-value="search"/>

                <t t-foreach="attributes" t-as="a">
                    <t t-set="_status" t-value="'inactive'"/>
                    <t t-foreach="a.value_ids" t-as="v" t-if="v.id in attrib_set" t-set="_status" t-value="'active'"/>

                    <div t-if="a.value_ids and len(a.value_ids) &gt; 1"
                            t-attf-class="accordion-item {{(_status == 'active') and 'order-1' or 'order-2'}}">
                        <h2 class="accordion-header mb-0" t-attf-id="o_wsale_offcanvas_attribute_{{a.id}}_header">
                            <button t-attf-class="o_wsale_offcanvas_title accordion-button border-top rounded-0 {{ not attrib_values and 'collapsed'}}"
                                    type="button"
                                    t-att-data-status="_status"
                                    data-bs-toggle="collapse"
                                    t-attf-data-bs-target="#o_wsale_offcanvas_attribute_{{a.id}}"
                                    t-att-aria-expanded="_status == 'active' and 'True' or 'False'"
                                    t-attf-aria-controls="o_wsale_offcanvas_attribute_{{a.id}}">
                                    <b t-out="a.name"/>
                            </button>
                        </h2>
                        <div t-attf-id="o_wsale_offcanvas_attribute_{{a.id}}"
                                t-attf-class="accordion-collapse collapse {{ (_status == 'active') and 'show'}}"
                                t-att-aria-expanded="(_status == 'active') and 'True' or 'False'"
                                t-attf-aria-labelledby="o_wsale_offcanvas_attribute_{{a.id}}_header">

                            <div class="accordion-body pt-0">
                                <div class="list-group list-group-flush"
                                        t-if="a.display_type == 'radio' or a.display_type == 'pills' or a.display_type == 'select'">
                                    <div t-foreach="a.value_ids" t-as="v" class="list-group-item border-0 ps-0 pb-0">
                                        <div class="form-check mb-1">
                                            <input type="checkbox" name="attrib" class="form-check-input" t-att-id="'%s-%s' % (a.id,v.id)" t-att-value="'%s-%s' % (a.id,v.id)" t-att-checked="'checked' if v.id in attrib_set else None"/>
                                            <label class="form-check-label fw-normal" t-att-for="'%s-%s' % (a.id,v.id)" t-field="v.name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </form>
        </xpath>

        <!--Category search remove from off canvas-->
        <xpath expr='//div[@t-if="category"]' position='replace'></xpath>
    </template>

    <template id="dependency_required_lines" name="Dependency Required Lines">
        <div t-if="not order_line or not depends_product" class="m-3 alert alert-danger">
            No dependencies Product Found.
        </div>
        <div class="alert alert-warning mx-3 mt-3" style="margin-bottom: 0 !important;">
            Removing this product from the cart can be risky. It depends on other products. Without this product, you won't be able to install the app below.
        </div>
        <table t-if="order_line and depends_product" class="m-3 table table-striped table-sm table-borderless">
            <thead>
                <tr>
                    <th class="td-img">Product</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="order_line" t-as="line">
                    <tr t-att-class="'optional_product info' if line.linked_line_id else None">
                        <td t-if="not line.product_id" colspan="2" class='td-img'/>
                        <t t-else="">
                            <td align="center" class='td-img'>
                                <span t-if="line._is_not_sellable_line() and line.product_id.image_128">
                                    <img t-att-src="image_data_uri(line.product_id.image_128)"
                                        class="img o_image_64_max rounded"
                                        t-att-alt="line.name_short"/>
                                </span>
                                <span t-else=""
                                    t-field="line.product_id.image_128"
                                    t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded o_image_64_max'}"
                                />
                            </td>
                            <td class='td-product_name'>
                                <div>
                                    <t t-call="website_sale.cart_line_product_link">
                                        <strong t-field="line.name_short" />
                                    </t>
                                </div>
                                <t t-call="website_sale.cart_line_description_following_lines">
                                    <t t-set="div_class" t-value="'d-none d-md-block'"/>
                                </t>
                            </td>
                        </t>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>

    <!-- overirde tcall of the standard to remove it -->
    <template id="sh_product_detail_custom_product_inherit" inherit_id="website_sale.product">
        <xpath expr="//t[@t-if='combination' and @t-call='sale.variants']" position="replace">
            <t t-if="combination">
                <t t-set="ul_class" t-valuef="flex-column" />
                <t t-set="parent_combination" t-value="None" />
            </t>
        </xpath>
    </template>
    
</odoo>