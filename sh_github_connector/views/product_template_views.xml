<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_product_template_only_form_view_github" model="ir.ui.view">
        <field name="name">sh.product.template.product.form.github</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- ====== Update Attributes ====== -->
            <field name="sh_technical_name" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="sh_technical_name" position="after">
                <field name="latest_version" invisible="1" />
            </field>
            <field name="categ_id" position="after">
                <field name="website_meta_og_img" />
            </field>
            <field name="git_repo" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="related_task" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

</odoo>
