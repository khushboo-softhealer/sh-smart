<?xml version='1.0'?>
<odoo>

    <record model="ir.module.category" id="module_sh_training_category">
        <field name="name">Training</field>
        <field name="description">Training</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_trainee" model="res.groups">
        <field name="name">Trainee: Own Documents Only</field>
        <field name="category_id" ref="module_sh_training_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        <field name="comment">the user will have access to his own data.</field>
    </record>

    <record id="group_trainer" model="res.groups">
        <field name="name">Trainer: All Documents</field>
        <field name="category_id" ref="module_sh_training_category" />
        <field name="implied_ids" eval="[(4, ref('group_trainee'))]" />
        <field name="comment">the user will have access to all records of everyone in the training.</field>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">the user will have an access to the training configuration as well as statistic reports.</field>
        <field name="category_id" ref="module_sh_training_category" />
        <field name="implied_ids" eval="[(4, ref('group_trainer'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

</odoo>