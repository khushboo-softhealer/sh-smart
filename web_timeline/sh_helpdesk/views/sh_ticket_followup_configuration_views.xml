<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_followup_configuration_form" model="ir.ui.view">
        <field name="name">sh.ticket.followup.configuration.form</field>
        <field name="model">sh.ticket.followup.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Name"/>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    <notebook>
                        <page string="Followup Configuration Lines">
                            <field name="sh_ticket_followup_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sh_interval"/>
                                    <field name="sh_email_template_id"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="sh_interval"/>
                                            </group>
                                            <group>
                                                <field name="sh_email_template_id" context="{'default_model':'sh.helpdesk.ticket'}"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_followup_configuration_tree" model="ir.ui.view">
        <field name="name">sh.ticket.followup.configuration.tree</field>
        <field name="model">sh.ticket.followup.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="sh_followup_configuration_action" model="ir.actions.act_window">
        <field name="name">Auto Followup</field>
        <field name="res_model">sh.ticket.followup.configuration</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="sh_followup_configuration_menu" name="Auto Followup" parent="sh_helpdesk.helpdesk_config_menu" action="sh_followup_configuration_action" sequence="11"/>
</odoo>