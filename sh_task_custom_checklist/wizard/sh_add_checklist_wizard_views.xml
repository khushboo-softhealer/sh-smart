<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_add_checklist_wizard" model="ir.ui.view">
        <field name="name">sh.add.checklist.wizard.form</field>
        <field name="model">sh.add.checklist.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Add Checklists">
                <group>
                    <group>
                        <field name="pt_checklist_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" required="1" />
                        <field name="task_ids" widget="many2many_tags" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button string="Add Checklists" name="btn_add_checklists" type="object" class="btn btn-primary" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
