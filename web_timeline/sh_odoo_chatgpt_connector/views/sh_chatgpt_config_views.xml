<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
        <record id="sh_view_chatgpt_config_tree" model="ir.ui.view">
            <field name="name">sh.view.chatgpt.config.tree</field>
            <field name="model">sh.chatgpt.config</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                </tree>
            </field>
        </record>

        
        <record id="sh_view_chatgpt_config_form" model="ir.ui.view">
            <field name="name">sh.view.chatgpt.config.form</field>
            <field name="model">sh.chatgpt.config</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    
                    <sheet>
                        <group string="ChatGpt configuration">
                            
                            <field name="name" />
                            <field name = "api_key"/>
                            <field name = "question"/>
                            <button name="generate_response" string="Generate Response" type="object" class="oe_highlight" /><br />
                            <field name = "response"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="sh_view_chatgpt_config_search" model="ir.ui.view">
            <field name="name">sh.view.chatgpt.config.search</field>
            <field name="model">sh.chatgpt.config</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                </search>
            </field>
        </record>

        <!-- Main window action for "model" -->
        <record id="sh_action_chatgpt_config_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Authorize</field>
            <field name="res_model">sh.chatgpt.config</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sh_view_chatgpt_config_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add new chatgpt configuration
                </p>
            </field>
        </record>

</odoo>