<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <record id="email_template_edi_letter" model="mail.template">
        <field name="name">Letter: Send by email</field>
        <field name="model_id" ref="sh_certificate.model_sh_letter" />
        <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
        <field name="partner_to">{{ object.sh_partner_id.id }}</field>
        <field name="subject">{{ object.name }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p>Record</p>
            </div>
        </field>
        <field name="report_template" ref="sh_letter_tmpl_report_action" />
        <field name="report_name">{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and '_draft' or '' }}</field>
        <field name="lang">{{ object.sh_partner_id.lang }}</field>
        <field name="auto_delete" eval="True" />
    </record>
</odoo>
